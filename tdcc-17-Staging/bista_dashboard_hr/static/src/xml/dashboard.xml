<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="bista_dashboard_hr.CrmDashboard">
        <div class="">
            <div>
                <center>
                    <h1 style="margin:20px;">
                        Employee Dashboard
                    </h1>
                </center>
            </div>
        </div>


        <t t-name="EmployeeDashboard">
            <div style="padding-left: 330px;">
                <div class="row main-section">
                    <div class="col-md-4 col-lg-3">
                        <div class="hr_notification" style="height:400px; overflow-y: auto;">
                            <div class="hr_notification_head" style="position:sticky;top: 0;">
                                <i class="fa fa-birthday-cake fa-lg"/>
                                Upcoming Birthdays
                            </div>
                            <div class="col-xs-12">
                                <div class="col-sm-12 col-lg-12" style="padding:0;" >
                                    <div class="text-color">
                                        <div class="" style="">
                                            <div class="media-body">
                                                <t t-if="employee">
                                                    <img class="img rounded-circle"
                                                         t-attf-src="/web/image?model=hr.employee&amp;field=image_medium&amp;id=#{employee.id}"
                                                         t-att-title="employee.name" t-att-alt="employee.name"/>


                                                        <t t-esc="employee.name"/>
                                                </t>


                                                <div id="my_lead"/>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-3">
                        <div class="col-xs-12  hr_notification" style="height:400px; overflow-y: auto;">
                            <div class="col-xs-12" style="padding:0;">
                                <div class="hr_notification_head" style="position:sticky;top: 0;">
                                    <i class="fa fa-calendar fa-lg"/>
                                    Upcoming Events
                                </div>
                            </div>
                            <div class="col-xs-12">

                                <div class="col-sm-12 col-lg-12" style="padding:0;">
                                    <div class="text-color">
                                        <div class="" style="">
                                            <div class="media-body">
                                                <div id="event_data"/>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 col-lg-3">
                        <div class="col-xs-12  hr_notification" style="height:400px; overflow-y: auto;">
                            <div class="col-xs-12" style="padding:0;">
                                <div class="hr_notification_head" style="position:sticky;top: 0;">
                                    <i class="fa fa-bullhorn fa-lg"/>
                                    Upcoming Announcements
                                </div>
                            </div>
                            <div class="col-xs-12">

                                <div class="col-sm-12 col-lg-12" style="padding:0;">
                                    <div class="text-color">
                                        <div class="" style="">
                                            <div class="media-body">
                                                <div id="announcement_data"/>
                                            </div>


                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </t>


    </t>
</templates>






