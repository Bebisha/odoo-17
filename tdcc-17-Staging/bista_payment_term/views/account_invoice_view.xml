<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_invoice_payment_term_view" model="ir.ui.view">
        <field name="name">account.move.payment.term.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[2]" position="after">
                <page name="invoice_payment_lines" string="Invoice Payment Lines" invisible=" move_type != 'out_invoice'">
                    <field name="invoice_payment_line_ids" invisible=" state != 'draft'">
                        <tree string="Invoice Payment Lines" editable="bottom">
                            <field name="payment_date" required="1"/>
                            <field name="amount" required="1" sum="Total"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
