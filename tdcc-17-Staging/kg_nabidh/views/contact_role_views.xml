<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="contact_role_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Contact Role</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">contact.role</field>

    </record>
    <record id="contact_role_tree" model="ir.ui.view">
        <field name="name">contact.role.tree.views</field>
        <field name="model">contact.role</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="contact_role_form" model="ir.ui.view">
        <field name="name">contact.role.form.views</field>
        <field name="model">contact.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="contact_role_action_menu"
              action="contact_role_action"
              name="Contact Role"
              parent="kg_nabidh.nk1_menu"/>

</odoo>
