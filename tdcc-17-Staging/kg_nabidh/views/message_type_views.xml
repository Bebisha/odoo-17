<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_message_type" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Message Type</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">message.type</field>

    </record>
    <record id="action_message_type_form" model="ir.ui.view">
        <field name="name">message.type.form</field>
        <field name="model">message.type</field>
        <field name="arch" type="xml">
            <form>
<!--                <header>-->
<!--                    <button name="action_send" string="Send" type="object" class="oe_highlight"/>-->
<!--                </header>-->

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_log" icon="fa-star" string="Log">
                            <!--                            <field string="Offer" name="offer_count" widget="statinfo"/>-->
                        </button>

                    </div>


                    <group>
                        <field name="name"/>
                        <field name="message_type" />
                        <field name="date_message"/>
                        <field name="link"/>
                        <field name="student" widget="many2many_tags" invisible ="1"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="message_type_tree" model="ir.ui.view">
        <field name="name">message.tree</field>
        <field name="model">message.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="message_type"/>
                <field name="link" string="NABIDH Url"/>
            </tree>

        </field>
    </record>
    <menuitem id="message_type_menu"
              name="Message Type"
              parent="bista_tdcc_operations.operations_menu_root"
              action="action_message_type"
              sequence="9"
    />
</odoo>