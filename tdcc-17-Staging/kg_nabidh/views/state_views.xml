<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="state_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">State</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">state.form</field>

    </record>
    <record id="state_form_tree" model="ir.ui.view">
        <field name="name">state.form.views</field>
        <field name="model">state.form</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="state_form" model="ir.ui.view">
        <field name="name">state.form.views</field>
        <field name="model">state.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="state_menu"
              action="state_action"
              name="State"
              parent="kg_nabidh.pid_menu"/>



</odoo>
