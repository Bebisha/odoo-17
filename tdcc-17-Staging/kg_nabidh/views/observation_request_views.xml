<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <record id="observation_request_form" model="ir.ui.view">
        <field name="name">observation.request.form</field>
        <field name="model">observation.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group invisible="1">
                            <label for="full_name" string="Name" />
                            <div>
                                <div class="o_address_format" name="div_address">
                                    <field name="first_name" placeholder="First Name..." class="o_first_name"/>
                                    <field name="middle_name" placeholder="Middle Name......" class="o_middle_name"/>
                                    <field name="last_name" class="o_last_name" placeholder="Last Name......."/>
                                    <field name="full_name" widget="text" readonly="1" invisible="1"/>
                                </div>
                            </div>
                        </group>
                        <group>
                             <field name="placer_order_number" invisible="1"/>
                            <field name="diagnostic_service_section_id" options="{'no_create': True}" invisible="1"/>
                            <field name="result_status_id" options="{'no_create': True}"/>

                            <field name="universal_service_des"/>
                            <field name="priority" invisible="1"/>
                            <field name="mail_id" invisible="1"/>

                        </group>
                        <group>
                            <field name="abnormal_flag_id"/>
                            <field name="universal_service_code"/>
                            <field name="observation_date_time"/>
                            <field name="results_report_date"/>


                        </group>
                        <group>
                            <field name="result_status_id"/>
                            <field name="observations_request_id"/>
                            <field name="order_control_id"/>
                            <field name="order_status_id"/>
                            <field name="confidentiality_id"/>
                            <field name="order_type_id"/>


                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--     <menuitem id="allergy_information_menu" -->
    <!--               action="allergy_information_action_new" -->
    <!--               name="Allergy Information" -->
    <!--               parent="kg_nabidh.patient_information_menu"/> -->
</odoo>