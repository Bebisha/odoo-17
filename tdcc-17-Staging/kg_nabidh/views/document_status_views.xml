<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="document_status_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Document Status</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">document.status</field>

    </record>
    <record id="document_status_tree" model="ir.ui.view">
        <field name="name">document.status.tree.views</field>
        <field name="model">document.status</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="document_status_form" model="ir.ui.view">
        <field name="name">document.status.form.views</field>
        <field name="model">document.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="document_status_menu"
              action="document_status_action"
              name="Document Status"
              parent="kg_nabidh.txa_menu"/>

</odoo>
