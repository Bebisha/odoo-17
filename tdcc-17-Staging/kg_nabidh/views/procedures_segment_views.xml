<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="procedures_segment_form" model="ir.ui.view">
        <field name="name">procedures.segment.views</field>
        <field name="model">procedures.segment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <group>


                            <field name="procedure_id" placeholder="Laser Hair Reduction"/>
                            <field name="procedure_code" placeholder="17110"/>
                            <field name="physician_id" invisible="1"/>

                        </group>
                        <group>
                            <field name="procedure_priority"  invisible="1"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>