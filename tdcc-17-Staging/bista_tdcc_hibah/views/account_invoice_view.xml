<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="invoice_form_Hibah">
        <field name="name">invoice.form.Hibah</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Hibah Fund Details"
                      invisible="'sponsor_id' == False">
                    <group col="4">
                        <field
                            name="sponsor_id"
                            domain="[('is_sponsor', '=', True)]"
                            readonly="1" force_save="1"
                            options="{'no_create_edit': True}"
                        />
                        <field name="percentage" readonly="1" force_save="1"/>
                        <field name="sponsor_amount" readonly="1" force_save="1"/>
                        <field name="is_hf" invisible="0"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('is_student', '=', True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_hf" invisible="1"/>
            </xpath>
            <xpath expr="//form/header/button[@name='preview_invoice']" position="after">
                <button
                    name="sponsor_details_button"
                    type="object"
                    string="Funds"
                    invisible="is_hf == False and move_type != 'out_invoice' or state != 'draft'"
                    class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>
