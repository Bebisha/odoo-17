<odoo>
    <data>
        <record model="ir.ui.view" id="developmental_history_tree_view">
            <field name="name">Developmental History View</field>
            <field name="model">dev.history.form</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="creation_date"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="dob"/>
                    <field name="age"/>
                    <field name="nationality"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="developmental_history_form_view">
            <field name="name">Developmental History Form View</field>
            <field name="model">dev.history.form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button class="btn btn-primary" name="approve_action_developmental" type="object"
                                string="Approve" state="draft"/>
                        <field name="state" widget="statusbar" status_visible="draft,approve"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="ref_dev" force_save="1" invisible="1"/>
                                <field name="creation_date"/>
                                <field name="first_name" force_save="1"/>
                                <field name="last_name" force_save="1"/>
                                <field name="age" force_save="1"/>
                                <field name="dob" force_save="1"/>
                                <field name="gender" force_save="1"/>
                                <field name="nationality" force_save="1"/>
                                <field name="is_submitted_dev" force_save="1" invisible="1"/>
                            </group>
                            <group>
                                <field name="language" force_save="1"/>
                                <field name="child_language" force_save="1"/>
                                <field name="school" force_save="1"/>
                                <field name="school_grade" force_save="1"/>
                                <field name="teacher" force_save="1"/>
                                <field name="partner_id_dev" force_save="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="II. Parents / Caregiver Information">
                                <group>
                                    <group>
                                        <field name="mother_name"/>
                                        <field name="mother_phone"/>
                                        <field name="mother_nationality"/>
                                        <field name="mother_email"/>
                                    </group>
                                    <group>
                                        <field name="father_name"/>
                                        <field name="father_phone_no"/>
                                        <field name="father_nationality"/>
                                        <field name="father_email"/>

                                    </group>
                                    <group>
                                        <field name="address"/>
                                        <field name="prev_address"/>

                                    </group>
                                    <group>
                                        <!--                                        <span role="separator">-->
                                        <!--                                            <b>Who lives at home with your child?</b>-->
                                        <!--                                        </span>-->
                                        <field name="siblings"/>
                                        <field name="grand_parents"/>
                                        <field name="others"/>
                                    </group>
                                </group>
                            </page>

                            <page string="III. Health Information About Your Child">
                                <group>
                                    <group>
                                        <field name="main_concern"/>

                                        <field name="first_notice"/>
                                    </group>
                                    <group>
                                        <!--                                        <span role="separator">-->
                                        <!--                                            <b>Have you ever sought advice from: (please tick)</b>-->
                                        <!--                                        </span>-->
                                        <field name="speech_language_therapist"/>
                                        <field name="occupational_therapist"/>
                                        <field name="physiotherapist"/>
                                        <field name="educational_psychologist"/>
                                        <field name="check_box_other" invisible="1"/>
                                        <field name="any_other_1"/>

                                    </group>
                                    <group>
                                        <field name="other_medical"/>

                                        <field name="parents_related_relative"/>

                                        <field name="upload_report"/>

                                        <field name="child_general_health"/>

                                        <field name="physical_difficulties"/>

                                        <field name="hearing_test"/>

                                    </group>
                                    <group>
                                        <field name="ear_infections"/>

                                        <field name="screened_tested"/>

                                        <field name="wear_glasses"/>

                                        <field name="past_present_medications"/>

                                        <field name="allergies"/>

                                    </group>
                                </group>
                            </page>

                            <page string="IV. Early Years Development">
                                <group>
                                    <group>
                                        <!--                                        <span role="separator">-->
                                        <!--                                            <b>Birth Information</b>-->
                                        <!--                                        </span>-->

                                        <field name="full_term_delivery"/>
                                        <field name="full_term_cesarean"/>
                                        <field name="pre_term"/>

                                        <field name="during_pregnancy"/>

                                        <field name="problems"/>
                                    </group>
                                    <group>
                                        <field name="crawling"/>
                                        <field name="sitting"/>
                                        <field name="walking"/>
                                        <field name="babbling"/>
                                        <field name="first_words"/>

                                        <field name="short_sentences"/>

                                        <field name="child_like"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <notebook>

                            <page string="V. Social Interaction and Communication Development">
                                <group>
                                    <group>
                                        <field name="child_communicate"/>

                                        <field name="child_understanding"/>

                                        <field name="child_understanding_instruction_school"/>

                                        <field name="child_interact"/>

                                    </group>
                                    <group>
                                        <field name="child_easy_understand"/>

                                        <field name="speaking_fluently"/>

                                        <field name="family_speech"/>

                                    </group>
                                </group>
                            </page>


                            <page string="VI. Motor and Sensory Development">
                                <group>
                                    <group>
                                        <field name="carrying_fine_motor"/>

                                        <field name="child_dressing"/>

                                    </group>
                                    <group>
                                        <field name="bump"/>

                                        <field name="figuring_activities"/>

                                    </group>
                                </group>
                            </page>

                            <page string="VII. Your Child at School">
                                <group>
                                    <group>
                                        <field name="school_experience"/>

                                        <field name="enjoy_school"/>

                                        <field name="dislike_activities"/>

                                        <field name="perspective"/>

                                    </group>
                                    <group>
                                        <field name="raised_concerns"/>

                                        <field name="help"/>

                                        <field name="help_support_feel"/>

                                        <field name="different_behaviour"/>

                                    </group>
                                </group>
                            </page>

                            <page string="VIII. Previous Diagnosis">
                                <group>
                                    <group>
                                        <!--                                        <span role="separator">-->
                                        <!--                                            <b>Previous Diagnosis (if applicable) please tick</b>-->
                                        <!--                                        </span>-->

                                        <field name="speech_language_delay"/>
                                        <field name="motor_delay"/>
                                        <field name="sensory_processing_disorder"/>
                                        <field name="add"/>
                                        <field name="global_development"/>
                                        <field name="asd"/>
                                        <field name="drs_stutter_stammer"/>
                                        <field name="other_checkbox" invisible="1"/>
                                        <field name="any_other_2"/>
                                    </group>
                                    <group>
                                        <field name="assessment_consultation"/>

                                        <field name="other_like_information"/>

                                        <field name="signature"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--        <record id="developmental_history_form" model="ir.actions.act_window">-->
        <!--            <field name="name">Developmental History Form</field>-->
        <!--            <field name="res_model">dev.history.form</field>-->
        <!--            <field name="view_mode">tree,form</field>-->
        <!--        </record>-->
        <record id="developmental_history_form"
                model="ir.actions.act_window">
            <field name="name">Developmental History Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dev.history.form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create First Record
                </p>
            </field>
        </record>
        <menuitem id="root_dev_child" name="HMS" web_icon="kg_hms,static/description/icon.png"/>
        <menuitem id="dev_history_form" sequence="5" parent="root_dev_child" action="developmental_history_form"
                  name="Developmental History Form"/>

