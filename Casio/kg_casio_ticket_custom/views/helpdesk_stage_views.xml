<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- inheriting helpdesk.stage to add field   -->
    <record id="helpdesk_stage_form_view_inherit_id" model="ir.ui.view">
        <field name="name">helpdesk.stage.form.inherit</field>
        <field name="model">helpdesk.stage</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_stage_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_ids']" position="after">
                <field name="is_replied" force_save="1"/>
                <field name="is_new" force_save="1"/>
                <field name="is_in_progress" force_save="1"/>
                <field name="is_solved" force_save="1"/>
                <field name="is_cancel" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>