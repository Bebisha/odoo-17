<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_field_helpdesk_ticket" model="ir.ui.view">
        <field name="name">helpdesk.ticket.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='form_type']" position="before">
                <field name="ticket_ref" string="ID"/>
            </xpath>
            <field name="subject" position="after">
                <field name="check_date_stage" force_save="1" invisible="1"/>
                <field name="is_replied" force_save="1" invisible="1"/>
                <field name="reply_date" force_save="1"/>
            </field>
            <field name="mob" position="attributes">
                <attribute name="string">Mobile</attribute>
            </field>
        </field>
    </record>

