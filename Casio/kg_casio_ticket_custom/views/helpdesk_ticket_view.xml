    <record id="add_field_helpdesk_ticket_list_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">is_replied == True</attribute>
            </xpath>
            <field name="sla_deadline" position="after">
                <field name="model_no" />
                <field name="topic" />
<!--                <field name="country"/>-->
                <field name="is_replied" column_invisible="True"/>
                <field name="reply_date" force_save="1"/>
            </field>
        </field>
    </record>


