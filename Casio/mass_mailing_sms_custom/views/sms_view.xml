<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    

    <record id="mailing_sms_edit" model="ir.ui.view">
        <field name="name">mass.mailing.sms</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="aws_topicarn" readonly="1"
                       invisible="mailing_type!='sms'"
                      />
                <field name="kg_message_id" readonly="1"                        invisible="mailing_type!='sms'"
/>
            </field>
        </field>
    </record>

    <record id="sms_sms_edit" model="ir.ui.view">
        <field name="name">sms.sms.view</field>
        <field name="model">sms.sms</field>
        <field name="inherit_id" ref="sms.sms_tsms_view_form" />
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="mailing_id"/>
                <field name="aws_subscriptionarn" readonly="1"/>
            </field>
        </field>
    </record>

</odoo>