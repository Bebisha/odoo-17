                <field name="suggested_answer_ids" position="before">
                    <group>
                         <field name="validation_is_sh_textbox_pattern" invisible="question_type!='char_box'"/>
                         <field name="validation_sh_textbox_pattern" placeholder="[0-9]{4}" invisible="question_type!='char_box' or validation_is_sh_textbox_pattern==False" required="validation_is_sh_textbox_pattern==True"/>
                         <field name="validation_sh_textbox_placeholder" placeholder="Hint" invisible="question_type!='char_box' or validation_is_sh_textbox_pattern==False"/>
                    </group>
            	</field>
                <xpath expr="//page[1]" position="after">
                    <page string="Question Description">
