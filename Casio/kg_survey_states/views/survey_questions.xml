<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="kg_survey_question_form_inherit" model="ir.ui.view">
            <field name="name">survey.question.form.inherit</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='options']/group[last()]" position="after">
                    <group>
                        <group string="Dynamic Questions">
                            <label for="is_onchange" string="Make Onchange"/>
                            <div>
                                <field name="is_onchange" nolabel="1"/>
                            </div>
                            <label for="parent_id" string="Parent Question"/>
                            <div>
                                <field name="parent_id" nolabel="1"/>
                            </div>
                            <label for="model_id" string="Master Model"/>
                            <div>
                                <field name="model_id" nolabel="1"/>
                            </div>
                            <label for="model_field_id" string="Master Model Field"/>
                            <div>
                                <field name="model_field_id" domain="[('model_id', '=', model_id)]" nolabel="1"/>
                            </div>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
