<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.rule" id="ticket_topic_wise">
            <field name="name">Ticket: Topic Wise</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">[ ('topic.users_ids','in',user.id)]</field>
            <field name="groups" eval="[(4,ref('helpdesk.group_helpdesk_user'))]"/>
        </record>

        <record model="ir.rule" id="ticket_all">
            <field name="name">Ticket: see all</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('helpdesk.group_helpdesk_manager'))]"/>
        </record>


    </data>
</odoo>