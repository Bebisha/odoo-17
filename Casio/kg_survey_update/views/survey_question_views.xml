<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <record id="survey_question_view_form_inherited" model="ir.ui.view">
        <field name="name">survey.question.view.form.inherited</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='question_type']" position="after">
                <field name="update_result" />
                <field name="contact_field_id" invisible="update_result != True" required="update_result == True"/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>