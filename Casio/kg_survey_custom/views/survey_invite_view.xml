<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <record id="survey_invite_view_form_inherited" model="ir.ui.view">
        <field name="name">survey.invite.view.form.inherited</field>
        <field name="model">survey.invite</field>
        <field name="inherit_id" ref="survey.survey_invite_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="before">
                <field name="email_from_id" />
                <field name="email_from" force_save="1" invisible="1"/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
