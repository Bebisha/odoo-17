<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_external_api" model="ir.ui.view">
        <field name="name">res.config.settings.external.api</field>
        <field name="model">res.config.settings</field>
       <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@id='languages']"
                   position="before">
                 <h2>API</h2>
                <div class="row mt16 o_settings_container" data-string="External API" string="External API" name="external_api_settings">
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="external_api_base_url" string="URL"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="external_api_base_url" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
