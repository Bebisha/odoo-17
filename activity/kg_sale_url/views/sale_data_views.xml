<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="temp_sale_data" name="Sales Detail">
            <t t-call="website.layout">

                <div class="container">
                    <h1>Sale Orders</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Customer</th>
                                <th>Date</th>

                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="record" t-as="order">
                                <tr>
                                    <td>
                                        <t t-esc="order.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="order.partner_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="order.date_order"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>
