    <record id="approval_configuration" model="ir.ui.view">
        <field name="name">Approval</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages']"
                   position="after">
                <h2>Approvals</h2>
                <div class="row mt16 o_settings_container" name="booking_setting_container">
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="purchase_manager_ids" string="Purchase Manager"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="purchase_manager_ids" widget="many2many_tags" class="oe_inline"/>
                            </div>
                            <div class="mt16">
                                <label for="general_manager_ids" string="General Manager"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="general_manager_ids" widget="many2many_tags" class="oe_inline"/>
                            </div>
                            <div class="mt16">
                                <label for="finance_manager_ids" string="Finance Manager"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="finance_manager_ids" widget="many2many_tags" class="oe_inline"/>
                            </div>
                            <div class="mt16">
                                <label for="line_manager_ids" string="Line Manager"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="line_manager_ids" widget="many2many_tags" class="oe_inline"/>
                            </div>
                            <div class="mt16">
                                <label for="department_manager_ids" string="Department Manager"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="department_manager_ids" widget="many2many_tags" class="oe_inline"/>
                            </div>
                            <div class="mt16">
                                <label for="hr_manager_ids" string="HR Manager"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="hr_manager_ids" widget="many2many_tags" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>