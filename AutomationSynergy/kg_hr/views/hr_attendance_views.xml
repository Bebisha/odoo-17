<odoo>
    <odoo>
        <record model="ir.ui.view" id="kg_hr_attendance_view_form">
            <field name="name">kg.hr.attendance.inherit.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='worked_hours']" position="before">
<!--                    <field name="total_overtime_amount"/>-->
                    <field name="ot_hours" widget="float_time"/>
                    <field name="normal_hours" widget="float_time"/>
                </xpath>
                <field name="overtime_hours" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </field>
            </field>
        </record>
    </odoo>
</odoo>