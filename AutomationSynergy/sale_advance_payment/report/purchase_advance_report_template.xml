<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchaseorder_advance_payment_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <t t-set="address">
            <div t-field="doc.partner_id"
                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
            <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
        </t>
        <div class="page">
            <div class="oe_structure"/>

            <h2 class="mt16">
                <t>
                <span>Advance Payment - </span>
                </t>
                <span t-field="doc.name"/>
            </h2>

            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.name" class="col-auto col-3 mw-100 mb-2">
                    <strong>Your Reference:</strong>
                    <p class="m-0" t-field="doc.name"/>
                </div>
                <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                    <strong>Order Date:</strong>
                    <p class="m-0" t-field="doc.date_order"/>
                </div>
<!--                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">-->
<!--                    <strong>Quotation Date:</strong>-->
<!--                    <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>-->
<!--                </div>-->
                <div t-if="doc.date_planned and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                    <strong>Expected Arrival:</strong>
                    <p class="m-0" t-field="doc.date_planned"/>
                </div>
                <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                    <strong>Salesperson:</strong>
                    <p class="m-0" t-field="doc.user_id"/>
                </div>
            </div>


            <table class="table table-sm o_main_table">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_date" class="text-left">Date</th>
                        <th name="th_journal_id" class="text-left">Journal</th>
                        <th name="th_payment_method_line_id" class="text-left">Payment Method</th>
                        <th name="th_partner_id" class="text-left">Customer</th>
                        <th name="th_payment_ref" class="text-left">Ref.</th>
                        <th name="th_amount" class="text-left">Amount</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.account_payment_ids" t-as="line">

                        <tr t-att-class="'bg-200 font-weight-bold'">
                            <t>
                                <td name="td_date"><span t-field="line.date"/></td>
                                <td name="td_journal_id"><span t-field="line.journal_id.name"/></td>
                                <td name="td_payment_method_line_id"><span t-field="line.payment_method_line_id.name"/></td>
                                <td name="td_partner_id"><span t-field="line.partner_id.name"/></td>
                                <td name="td_payment_ref"><span t-field="line.payment_ref"/></td>
                                <td name="td_amount">
                                    <span  t-esc="line.amount"/>
                                    <span  t-esc="doc.currency_id.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</template>


<template id="report_purchaseorder_advance_payment">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="sale_advance_payment.report_purchaseorder_advance_payment_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
