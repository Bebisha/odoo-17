<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tree_view_gsm_details" model="ir.ui.view">
        <field name="name">gsm.tree</field>
        <field name="model">gsm.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gsm_name"/>
            </tree>
        </field>
    </record>

    <record id="form_view_gsm_details" model="ir.ui.view">
        <field name="name">gsm.form</field>
        <field name="model">gsm.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="gsm_name"/>
                        </group>
                        <group>
                            <field name="from_date" widget="daterange" options="{'related_end_date': 'to_date'}"/>
                            <field name="to_date" widget="daterange" options="{'related_start_date': 'from_date'}"/>
                        </group>
                    </group>

                    <button name="import_gsm_wizard" type="object"
                            string="Import"
                            class="btn-primary"/>
                    <notebook>
                        <page string="GSM Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="gsm_no"/>
                                    <field name="exceeding_amount"/>
                                    <field name="is_exceeds_or_not"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Deduction from Salary">
                            <field name="deduct_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="amount"/>
                                    <field name="related_payslip_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_gsm_details" model="ir.actions.act_window">
        <field name="name">GSM</field>
        <field name="res_model">gsm.details</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
