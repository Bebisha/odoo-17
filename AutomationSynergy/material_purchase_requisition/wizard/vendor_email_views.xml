<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='vendor_rfq_mail_view_form' model='ir.ui.view'>
        <field name="name">vendor.rfq.mail.view.form</field>
        <field name="model">vendor.rfq.mail</field>
        <field name="arch" type="xml">
            <form string="Vendors RFQ">
                <sheet>
                    <group>
                        <group>
                            <field name="vendor_ids" widget="many2many_tags" required="1"/>
                            <field name="user_id"/>
                            <field name="purchase_requistion_id" invisible="1"/>
                            <field name="mr_requistion_id"  invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lines">
                            <field name="requisition_line_ids" nolabel="1" invisible="1">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="demand_qty"/>

<!--                                    <field name="update_quantity"/>-->
                                    <field name="uom_id"/>

                                    <field name="req_line_id"/>
                                    <field name="price_unit" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <field name="rfq_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="description" force_save="1"/>
                                    <field name="demand_qty" force_save="1" />
                                    <field name="po_quantity" invisible="1"/>
                                    <field name="update_quantity" column_invisible="1"/>
                                    <field name="is_error" column_invisible="1"/>
                                    <field name="uom_id"/>
                                    <!--                                    <field name="project_id" column_invisible="1"/>-->
                                    <field name="analytic_account_id" column_invisible="1"/>
                                    <field name="req_line_id" column_invisible="1"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <footer>
                    <button name="create_po" string="Confirm" type="object"
                            class="oe_highlight"/>

                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_vendor_po" model="ir.actions.act_window">
        <field name="name">Create RFQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vendor.rfq.mail</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vendor_rfq_mail_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>