<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_stock_location" model="ir.ui.view">
            <field name="name">Location wise Product stock</field>
            <field name="model">product.loc.stock</field>
            <field name="arch" type="xml">
                <form string="Product stock Location wise">
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <field name="product_stock_line_ids" style="pointer-events:none;">
                            <tree string="Product Stock Lines">
                                <field name="location_id"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Close" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>