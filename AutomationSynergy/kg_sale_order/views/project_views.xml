<odoo>


    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.project.form.inherit.sale.orders</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="project_sequence" invisible="1"/>
                <field name="sale" invisible="1"/>
                <field name="seq" invisible="1"/>
                <field name="is_project_location" invisible="1"/>
                <field name="stock_location_id" readonly="1"/>
                <!--                <field name="sale_order_ids" invisible="1"/>-->
            </xpath>
            <!--            <xpath expr="//div[@name='buttons']" position="inside">-->
            <!--                <button name="action_sale_order" type="object" string="Sale Orders"-->
            <!--                        icon="fa-money" class="oe_stat_button"/>-->
            <!--                <field name="sale_order_count" widget="statinfo" string="Sale Orders"/>-->
            <!--            </xpath>-->
            <xpath expr="//notebook" position="inside">
                <page string="Sale Orders">
                    <field name="sale_order_ids">
                        <tree>
                            <field name="name"/>
                            <field name="date_order"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>