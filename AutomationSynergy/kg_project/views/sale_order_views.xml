<odoo>
    <record model="ir.ui.view" id="sale_order_form_inherited_id_kg">
        <field name="name">sale.order.inherit.kg</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <page name="order_lines" position="after">
                <page name="invoice_history" string="Invoice History">
                    <field name="invoice_history_ids" readonly="1">
                        <tree name="invoice_history_lines">
                            <field name="date"/>
                            <field name="name"/>
                            <field name="percent" string="Percentage" sum="total" widget="percentage"/>
                            <field name="currency_id" column_invisible="1"/>
                            <field name="amount_total" sum="total" string="Amount" widget='monetary'
                                   options="{'currency_field': 'currency_id'}"
                            />
                            <!--&lt;!&ndash;                            <field name="percent" sum="total" widget="percentage"/>&ndash;&gt;-->
                            <!--                            <field name="amount_total" sum="total" string="Amount"/>-->
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </page>

        </field>
    </record>
</odoo>