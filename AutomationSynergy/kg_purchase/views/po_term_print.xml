<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="grid_purchaseorder_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//p[@t-field='o.notes']" position="replace">
            <label><b>Terms and Conditions :</b></label><p t-field="o.custom_terms_conditions" class="mt-4"/>
        </xpath>
        <xpath expr="//div[@t-elif='o.date_order']" position="after">
            <div t-if="o.payment_term_id" class="col-3 bm-2">
                <strong>Payment Terms:</strong>
                <p t-if="o.payment_term_id">
                    <span t-field="o.payment_term_id" class="m-0"/>
                </p>
            </div>
        </xpath>
         <xpath expr="//span[@t-field='line.date_planned']" position="replace">
            <span t-if="line.date_planned">
                <span t-field="line.date_planned" t-options='{"widget": "date"}'/>
            </span>
        </xpath>
    </template>

    <template id="purchase_rqst_inherit" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//h2" position="after">
            <div t-if="o.payment_term_id" class="col-3 bm-2">
                <strong>Payment Terms:</strong>
                <p t-if="o.payment_term_id">
                    <span t-field="o.payment_term_id" class="m-0"/>
                </p>
            </div>
        </xpath>
        <xpath expr="//span[@t-field='order_line.date_planned']" position="replace">
            <span t-if="order_line.date_planned">
                <span t-field="order_line.date_planned" t-options='{"widget": "date"}'/>
            </span>
        </xpath>
    </template>
</odoo>