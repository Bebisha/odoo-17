<!--                <xpath expr="//field[@name='incoterm_id']" position="attributes">-->
<!--                    <attribute name="required">1</attribute>-->
<!--                </xpath>-->
<!--            </field>-->
<!--        </record>-->


        <record id="kg_product_supplier_info_inherit" model="ir.ui.view">
            <field name="name">product.supplier.info.kg</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="active" invisible="1"/>
                </field>
                <field name="company_id" position="after">
                    <field name="brand_id"/>

                </field>
            </field>
        </record>


        <record id="kg_product_supplierinfo_search_view" model="ir.ui.view">
            <field name="name">kg.product.supplierinfo.search.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">

                    <group expand="0" string="Group By">
                        <filter string="Product Brand" name="groupby_brand_id" context="{'group_by': 'brand_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>