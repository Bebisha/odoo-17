<odoo>
    <data>
        <record id="kg_stock_picking_kg_boe" model="ir.ui.view">
            <field name="name">Stock.Inherits.kg</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position='after'>
                    <field name="so_boe_type" readonly="state in ('cancel', 'done')"
                           invisible="picking_type_code != 'outgoing'"/>
                    <field name="so_boe_no" readonly="state in ('cancel', 'done')"
                           invisible="picking_type_code != 'outgoing'"/>
                    <field name="so_ship_no" readonly="state in ('cancel', 'done')"
                           invisible="picking_type_code != 'outgoing'"/>
<!--                    <field name="hs_code" readonly="state in ('cancel', 'done')"-->
<!--                           invisible="picking_type_code != 'outgoing'"/>-->
<!--                    <field name="coo_code" readonly="state in ('cancel', 'done')"-->
<!--                           invisible="picking_type_code != 'outgoing'"/>-->
                    <field name="po_boe_type" readonly="state in ('cancel', 'done')"
                           invisible="picking_type_code != 'incoming'"/>
                    <field name="po_boe_no" readonly="state in ('cancel', 'done')"
                           invisible="picking_type_code != 'incoming'"/>
                    <field name="po_ship_no" readonly="state in ('cancel', 'done')"
                           invisible="picking_type_code != 'incoming'"/>

                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                       position="before">
                    <field name="hs_code" column_invisible="parent.picking_type_code != 'incoming'"/>
                    <field name="coo_code" column_invisible="parent.picking_type_code != 'incoming'"/>
                    <field name="hs_code_out"
                           column_invisible="parent.picking_type_code != 'outgoing'"/>
                    <field name="coo_code_out"
                           column_invisible="parent.picking_type_code != 'outgoing'"/>
                </xpath>

            </field>
        </record>


        <record id="view_inherit_stock_picking_tree" model="ir.ui.view">
            <field name="name">view.inherit.stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='state']" position="before">
                    <!--                <field name="picking_type_code"/>-->
                    <field name="so_boe_type" invisible="picking_type_code != 'outgoing'" optional="hide"/>
                    <field name="so_boe_no" invisible="picking_type_code != 'outgoing'" optional="show"/>
                    <field name="so_ship_no" invisible="picking_type_code != 'outgoing'" optional="hide"/>
                    <field name="po_boe_type" invisible="picking_type_code != 'incoming'" optional="hide"/>
                    <field name="po_boe_no" invisible="picking_type_code != 'incoming'" optional="show"/>
                    <field name="po_ship_no" invisible="picking_type_code != 'incoming'" optional="hide"/>
                </xpath>
                <xpath expr="//tree/field[@name='name']" position="before">
                    <field name="scheduled_date" optional="show"/>
                </xpath>


            </field>
        </record>

        <record id="view_inherit_stock_quant_tree" model="ir.ui.view">
            <field name="name">view.inherit.stock.quant.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_simple"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='lot_id']" position="before">
                    <!--                    <field name="cost"/>-->
                    <field name="picking_date"/>
                    <field name="price"/>
                </xpath>
                <xpath expr="//tree/field[@name='quantity']" position="after">
                    <field name="cost"/>
                    <!--                    <field name="picking_date"/>-->
                </xpath>
                <xpath expr="//tree/field[@name='available_quantity']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='lot_id']" position="attributes">
                    <attribute name="string">GRN NO</attribute>
                </xpath>
            </field>
        </record>


        <record id="kg_stock_move_line" model="ir.ui.view">
            <field name="name">Stock.Move.line.BW</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position='after'>
                    <!--                    <field name="cost"/>-->
                    <field name="customer_id" optional="show"/>
                    <field name="supplier_id" optional="show"/>
                    <field name="hs_code" optional="show"/>
                    <field name="coo_code" optional="show"/>
                    <field name="hs_code_out" optional="show"/>
                    <field name="coo_code_out" optional="show"/>
                    <!--                    <field name="so_boe_no" readonly="state in ('cancel', 'done')" invisible="picking_type_code != 'outgoing'"/>-->
                    <!--                    <field name="so_ship_no" readonly="state in ('cancel', 'done')" invisible="picking_type_code != 'outgoing'"/>-->
                    <!--                    <field name="po_boe_type" readonly="state in ('cancel', 'done')" invisible="picking_type_code != 'incoming'"/>-->
                    <!--                    <field name="po_boe_no" readonly="state in ('cancel', 'done')" invisible="picking_type_code != 'incoming'"/>-->
                    <!--                    <field name="po_ship_no"  readonly="state in ('cancel', 'done')" invisible="picking_type_code != 'incoming'"/>-->
                </xpath>
                <xpath expr="//field[@name='quantity']" position='after'>
                    <field name="cost"/>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position='attributes'>
                    <attribute name="string">GRN NO</attribute>
                </xpath>

                <xpath expr="//field[@name='location_id']" position='attributes'>
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='location_dest_id']" position='attributes'>
                    <attribute name="optional">hide</attribute>
                </xpath>


            </field>
        </record>


    </data>
</odoo>