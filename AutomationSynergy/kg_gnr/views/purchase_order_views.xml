<odoo>
    <record id="purchase_order_inherited" model="ir.ui.view">
        <field name="name">purchase.order.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="shipment_id" force_save="1" readonly="1" invisible="not shipment_id"/>
                <field name="is_git" invisible="1"/>


            </field>
            <field name="picking_type_id" position="after">
                <field name="purchase_type" readonly="1"/>
            </field>
        </field>
    </record>
</odoo>