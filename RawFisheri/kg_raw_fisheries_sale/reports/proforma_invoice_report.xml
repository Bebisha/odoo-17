<odoo>
    <template id="pro_forma_invoice_report_inherit" inherit_id="sale.report_saleorder_pro_forma">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="header">
                              <table class='table table-borderless table-condensed table-hover'
                               style='width:100%;margin:5pt; font-size:15px;'>
                            <tr width="100%">
                                <td width="5%" align="left">
                                    <t t-if="doc.company_id.logo">
                                        <img t-attf-src="data:image/*;base64,{{doc.company_id.logo}}"
                                             height="80px" width="120px;"/>
                                    </t>
                                    <t t-else="">
                                        <img/>
                                    </t>
                                </td>
                                <td width="95%" align="center" style="color:#006699;">
                                    <strong style="font-size:22px; text-transform:uppercase;">
                                        <span t-esc="doc.company_id.name"/>
                                    </strong>
                                    <br/>
                                    <span>As Seeb, AL-Seeb, Muscat Governorate. P.O. Box 485. 115 Sultanate of Oman
                                    </span>
                                    <br/>
                                    <span>VAT:</span>
                                    <span t-esc="doc.company_id.vat"/>
                                </td>
                            </tr>
                        </table>
                        </div>
                        <div class="container" width="100%">
                            <table width="100%" class="table-borderless" style="margin-top:70pt; font-size: 12px;">
                                <tr style="border-top: 1px solid black;border-bottom: 1px solid black;" width="100%">
                                    <td style="border-top: 1px solid black;border-bottom: 1px solid black; font-weight: bold;padding-top:2px;padding-bottom:5px;"
                                        colspan="6">
                                        Pro-Forma Invoice
                                    </td>
                                </tr>
                                <tr>
                                    <td width="15%">
                                        <strong>Order Ref.</strong>
                                    </td>
                                    <td width="25%">
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td colspan="4"/>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Date:</strong>
                                    </td>
                                    <td>
                                        <span t-field="doc.date_order"
                                              t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                                    </td>
                                    <td width="30" style="2">
                                        <strong>Reference :</strong>
                                        <span t-esc="doc.vessel_id.name"/>
                                    </td>
                                    <td width="30">
                                        <strong>Batch :</strong>
                                        <span t-esc="doc.batch_info"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Buyer:</strong>
                                    </td>
                                    <td>
                                        <strong t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td colspan="4"/>
                                </tr>
                                <tr>
                                    <td/>
                                    <td>
                                        <t t-if="doc.partner_id.street"><strong t-esc="doc.partner_id.street"/>,
                                        </t>
                                        <t t-if="doc.partner_id.street2"><strong t-esc="doc.partner_id.street2"/>,
                                        </t>
                                        <t t-if="doc.partner_id.city"><strong t-esc="doc.partner_id.city"/>,
                                        </t>
                                    </td>
                                    <td colspan="4"/>
                                </tr>
                                <tr style="border-bottom: 1px solid black;">
                                    <td style="border-bottom: 1px solid black;"/>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-if="doc.partner_id.state_id">
                                            <strong t-esc="doc.partner_id.state_id.name"/>
                                            ,
                                        </t>
                                        <t t-if="doc.partner_id.country_id">
                                            <strong t-esc="doc.partner_id.country_id.name"/>
                                        </t>
                                    </td>
                                    <td style="border-bottom: 1px solid black;" colspan="4"/>
                                </tr>
                            </table>
                            <!--                                <tr>-->
                            <!--                                    <td style="font-weight: bold;">-->
                            <!--                                        Terms of Payment-->
                            <!--                                    </td>-->
                            <!--                                    <td>-->
                            <!--                                        <t t-esc="doc.payment_term_id.name"/>-->
                            <!--                                    </td>-->
                            <!--                                    <td colspan="4"/>-->
