<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="salary_pre_payment_request_form" model="ir.ui.view">
            <field name="name">salary.pre.payment.request.form</field>
            <field name="model">salary.pre.payment.request</field>
            <field name="arch" type="xml">
                <form string="Salary Pre Payment Request">
                    <header>
                        <button name="action_request" type="object" class="btn btn-primary" string="Request"
                                invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_salary_pre_payment" class="oe_stat_button" icon="fa-book"
                                    type="object"
                                    help="Salary pre payments associated with this request"
                                    invisible="pre_payment_count == 0">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="pre_payment_count"/>
                                    </span>
                                    <span class="o_stat_text">Salary Pre Payments</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <separator/>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="currency_id"/>
                                <field name="company_currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Employees">
                                <field name="salary_pre_payment_request_line_ids">
                                    <tree editable="bottom">
                                        <field name="salary_pre_payment_request_id" column_invisible="1"/>
                                        <field name="employee_id"/>
                                        <field name="factory_manager_ids" widget="many2many_tags" optional="show"/>
                                        <field name="vessel_id" optional="show"/>
                                        <field name="description"/>
                                        <field name="advance_amount"/>
                                        <field name="amount_in_currency"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="salary_pre_payment_request_tree" model="ir.ui.view">
            <field name="name">salary.pre.payment.request.tree</field>
            <field name="model">salary.pre.payment.request</field>
            <field name="arch" type="xml">
                <tree string="Salary Pre Payment Request">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="currency_id" optional="show"/>
                    <field name="company_currency_id" column_invisible="1"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_salary_pre_payment_request_search_id" model="ir.ui.view">
            <field name="name">hr.employee.salary.pre.payment.request.search</field>
            <field name="model">salary.pre.payment.request</field>
            <field name="arch" type="xml">
                <search string="Salary Pre Payment">
                    <field name="name" string="Reference"/>

                    <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Requested" name="state_approved" domain="[('state', '=', 'requested')]"/>

                    <group expand="0" string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Currency" name="currency_id" context="{'group_by':'currency_id'}"/>
                        <filter string="Date" name="date" context="{'group_by':'date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>