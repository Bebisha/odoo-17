<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Leave Balance Report Search View-->
    <record id="negative_leave_balance_report_search" model="ir.ui.view">
        <field name="name">negative.leave.balance.report.search</field>
        <field name="model">negative.leave.balance.report</field>
        <field name="arch" type="xml">
            <search string="Leave Balance Report">
                <field name="employee_id"/>
                <field name="employee_no"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="leave_type_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_leave_type" string="Leave Type"
                            context="{'group_by': 'leave_type_id'}"/>
                    <filter name="group_job" string="Job" context="{'group_by': 'job_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Leave Balance Report Tree View-->
    <record id="negative_leave_balance_report_tree" model="ir.ui.view">
        <field name="name">negative.leave.balance.report.tree</field>
        <field name="model">negative.leave.balance.report</field>
        <field name="arch" type="xml">
            <tree string="Leave Balance Report" create="0">
                <header>
                    <button name="negative_leave_balance_pdf" type="object" string="Print PDF"/>
                </header>
                <field name="employee_id"/>
                <field name="employee_no"/>
                <field name="country_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="leave_type_id"/>
                <field name="balance_days"/>
            </tree>
        </field>
    </record>

    <!--Leave Balance Report Action-->
    <record id="action_negative_leave_balance_reports" model="ir.actions.server">
        <field name="name">Negative Leave Balance Report</field>
        <field name="model_id" ref="kg_negative_leave_allocation.model_negative_leave_balance_report"/>
        <field name="state">code</field>
        <field name="code">
            action = model.negative_leave_balance()
        </field>
    </record>

    <!--Leave Balance Report Menu-->
    <menuitem id="menu_action_negative_leave_balance_report"
              name="Negative Leave Balance Report"
              action="action_negative_leave_balance_reports"
              parent="hr_holidays.menu_hr_holidays_report"
              sequence="3"/>

</odoo>