<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_view_inherit_form">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']//group[@name='application_group']" position="after">
                    <group string="Negative Leave">
                        <field name="has_negative_leave" invisible="1"/>
                        <field name="negative_leave"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>