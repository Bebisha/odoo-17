<odoo>

    <record id="view_pol_import_wizard" model="ir.ui.view">
        <field name="name">import.pol.wizard.form</field>
        <field name="model">import.pol.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Purchase Order Lines">
                <group>
                    <field name="po_id" readonly="1" invisible="1"/>
                    <field name="is_po_import" readonly="1" invisible="1"/>
                    <field name="upload_file" filename="filename" widget="binary" required="1"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="import_po" type="object" string="Import" class="btn-primary" invisible="not is_po_import"/>
                    <button name="import_pol" type="object" string="Import" class="btn-primary" invisible="not po_id"/>
                    <button name="import_inventory_entries" type="object" string="Import" class="btn-primary"
                            invisible="1"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_purchase_orders_wizard" model="ir.actions.act_window">
        <field name="name">Import Purchase Orders</field>
        <field name="res_model">import.pol.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_is_po_import':True}</field>
    </record>


    <menuitem id="menu_import_purchase_orders" sequence="7" name="Import Purchase Orders"
              action="action_import_purchase_orders_wizard" parent="purchase.menu_procurement_management"/>

</odoo>