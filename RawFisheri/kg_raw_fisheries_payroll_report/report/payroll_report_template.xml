<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!--  Template for Payroll PDF Report  -->
        <template id="payroll_report_template">
            <t t-call="web.html_container">
                <div class="page">
                    <div class="header">
                        <table class='table table-borderless table-condensed table-hover'>
                            <tr width="100%" style="font-size:25px;">
                                <td width="75%" align="left" style="border: 1px solid white">
                                    <!--                                    <img t-if='company_logo'-->
                                    <!--                                         t-att-src='image_data_uri(o.company_id.logo)'-->
                                    <!--                                         alt='Logo' style="max-width: 150px; max-height: 100px;"/>-->
                                    <strong>
                                        <span t-esc="company_id" style="text-transform: uppercase;"/>
                                    </strong>
                                </td>
                                <td align="right" width="25%" style="border: 1px solid white">
                                    <strong>
                                        DATE :
                                        <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td colsapn="2" style="border: 1px solid white" align="center">
                                    <span style="font-weight: bold;font-size:30px; margin-left:250px;">
                                        PAYROLL REPORT DETAILED
                                    </span>
                                </td>
                            </tr>
                            <tr style="font-size:18px;">
                                <td>
                                    <strong>FROM:
                                        <t t-esc="from"/>
                                    </strong>
                                </td>
                                <td align="right">
                                    <strong>TO:
                                        <t t-esc="to"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                        <div>
                            <table width="100%" style='border-collapse:collapse;width:100%;margin:5pt;border: 1px solid black; border: 1px solid black'>
                                <thead>
                                    <tr>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>NO.</span>
                                        </th>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>Emp No.</span>
                                        </th>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>Name</span>
                                        </th>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>ID.</span>
                                        </th>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>Nationality</span>
                                        </th>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>Designation</span>
                                        </th>
                                        <th style="height:50px; border: 1px solid black;">
                                            <span>Designation</span>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>