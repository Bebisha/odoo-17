<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="report_wizard_form" model="ir.ui.view">
            <field name="name">payroll.report.wizard.form</field>
            <field name="model">payroll.report.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Payroll Report Detailed">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="employee_site" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                            <field name="vessel_id" invisible="employee_site != 'crew'"/>
                        </group>
                    </group>
                    <footer>
<!--                        <button string="PDF" name="action_print_pdf" type="object" class="btn-primary"/>-->
                        <button string="PRINT" name="action_print_xlsx" type="object" class="btn-primary"/>
                        <button string="Cancel" name="cancel" type="object" special="cancel" class="btn-cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>