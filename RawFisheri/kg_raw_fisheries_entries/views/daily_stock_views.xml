<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--   Tree view for daily stock report model   -->
    <record id="daily_stock_report_tree" model="ir.ui.view">
        <field name="name">daily.stock.tree</field>
        <field name="model">daily.stock</field>
        <field name="arch" type="xml">
            <tree string="Daily Stock Report">
                <field name="name" width="25%"/>
                <field name="date"  width="25%"/>
                <field name="vessel_id" width="25%"/>
                <field name="catch_of_day" width="25%"/>
            </tree>
        </field>
    </record>

    <!--   Form view for daily stock report model   -->
    <record id="daily_stock_report_form" model="ir.ui.view">
        <field name="name">daily.stock.form.view</field>
        <field name="model">daily.stock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>
                        <field name="name" placeholder="Reference"/>
                    </h2>
                    <separator/>
                    <group>
                        <field name="vessel_id"/>
                    </group>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="catch_of_day"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Production in Factory">
                            <field name="daily_stock_line_ids">
                                <tree editable="bottom" create="True">
                                    <field name="product_category_id" width="50%"/>
                                    <field name="quantity" width="50%"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>