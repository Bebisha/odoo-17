<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!--   Tree view for budget usage entry model   -->
        <record id="budget_usage_entry_tree" model="ir.ui.view">
            <field name="name">budget.usage.entry.tree</field>
            <field name="model">budget.usage.entry</field>
            <field name="arch" type="xml">
                <tree string="Budget Usage Entry">
                    <field name="name"/>
                    <field name="vessel_id"/>
                </tree>
            </field>
        </record>

        <!--   Form view for budget usage entry model   -->
        <record id="budget_usage_entry_form" model="ir.ui.view">
            <field name="name">budget.usage.entry.form.view</field>
            <field name="model">budget.usage.entry</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="print_report" type="object" class="btn btn-primary" string="Print"/>
                    </header>
                    <sheet>
                        <h2>
                            <field name="name" placeholder="Reference"/>
                        </h2>
                        <separator/>
                        <group>
                            <field name="vessel_id"/>
                        </group>
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Days">
                                <field name="budget_days_ids">
                                    <tree editable="bottom" create="True">
                                        <field name="activity_id" width="40%"/>
                                        <field name="actual" width="20%"/>
                                        <field name="budget" width="20%"/>
                                        <field name="variance" width="20%"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Usage Per Day">
                                <field name="budget_days_ids">
                                    <tree editable="bottom" create="True">
                                        <field name="activity_id" width="40%"/>
                                        <field name="actual" width="20%"/>
                                        <field name="budget" width="20%"/>
                                        <field name="variance" width="20%"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Total Usage">
                                <field name="budget_days_ids">
                                    <tree editable="bottom" create="True">
                                        <field name="activity_id" width="40%"/>
                                        <field name="actual" width="20%"/>
                                        <field name="budget" width="20%"/>
                                        <field name="variance" width="20%"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Energy Cost For Month">
                                <field name="budget_days_ids">
                                    <tree editable="bottom" create="True">
                                        <field name="activity_id" width="40%"/>
                                        <field name="actual" width="20%"/>
                                        <field name="budget" width="20%"/>
                                        <field name="variance" width="20%"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>