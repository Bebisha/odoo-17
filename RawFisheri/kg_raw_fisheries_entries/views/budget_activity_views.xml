<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!--   Form view for budget activity model   -->
        <record id="budget_activity_form" model="ir.ui.view">
            <field name="name">budget.activity.form</field>
            <field name="model">budget.activity</field>
            <field name="arch" type="xml">
                <form string="Budget Activity">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--   Tree view for budget activity model   -->
        <record id="budget_activity_tree" model="ir.ui.view">
            <field name="name">budget.activity.tree</field>
            <field name="model">budget.activity</field>
            <field name="arch" type="xml">
                <tree string="Budget Activity">
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>