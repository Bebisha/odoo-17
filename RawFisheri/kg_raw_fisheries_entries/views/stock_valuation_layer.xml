<odoo>

    <record id="kg_view_stock_valuation_layer_tree_inherit_d" model="ir.ui.view">
        <field name="name">kg.stock.valuation.layer.inventory.tree.inherit</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <field name="create_date" position="after">
                <field name="stock_date"/>
            </field>
        </field>
    </record>

    <record id="kg_view_stock_valuation_layer_search_inherit_d" model="ir.ui.view">
        <field name="name">kg.stock.valuation.layer.inventory.search.inherit</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_by_company_id']" position="after">
                <filter string="Inventory Date" name="inventory_date" domain="[]" context="{'group_by': 'stock_date'}"/>
            </xpath>
            <xpath expr="//filter[@name='has_remaining_qty']" position="after">
                <filter string="Today" name="filter_today"
                        domain="[('stock_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
            </xpath>
        </field>
    </record>

</odoo>