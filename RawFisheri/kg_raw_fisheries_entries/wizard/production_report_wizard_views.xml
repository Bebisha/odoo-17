<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="production_report_wizard_form" model="ir.ui.view">
        <field name="name">production.report.wizard.form</field>
        <field name="model">production.report.wizard</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Production Report">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="batch_id"/>
                        <field name="company_id" readonly="1" force_save="1"/>
                    </group>
                    <group>
                        <field name="date_to" required="1"/>
                        <field name="vessel_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Print" name="action_print_xlsx" type="object" class="btn-primary"/>
                    <button string="Cancel" name="cancel" type="object" special="cancel" class="btn-cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>