<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form_inherit_id" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.id</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='work_organization_setting_container']" position="before">
                <block title="Email Notification" id="email_notification">
                    <group>
                        <field name="passport_expiry_notification_employee_ids" widget="many2many_tags" domain="[('crew', '=', False)]"/>
                        <field name="seamans_expiry_notification_employee_ids" widget="many2many_tags" domain="[('crew', '=', False)]"/>
                    </group>
                </block>
            </xpath>
        </field>
    </record>

</odoo>