<odoo>

    <record id="action_transaction_documents_type" model="ir.actions.act_window">
        <field name="name">Documents Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">transaction.documents.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="transaction_documents_configuration" name="Configuration" parent="main_menu_transaction_documents"
              sequence="100" groups="kg_raw_fisheries_documents_portal.group_transaction_documents_administrator">
        <menuitem id="menu_transaction_documents_type" action="action_transaction_documents_type" sequence="0"/>
    </menuitem>

    <record id="transaction_documents_type_tree_view" model="ir.ui.view">
        <field name="name">Transaction Documents Type Tree View</field>
        <field name="model">transaction.documents.type</field>
        <field name="arch" type="xml">
            <tree string="Transaction Documents Type">
                <field name="name" string="Documents Type"/>
            </tree>
        </field>
    </record>

    <record id="transaction_documents_type_form_view" model="ir.ui.view">
        <field name="name">Transaction Documents Type Form View</field>
        <field name="model">transaction.documents.type</field>
        <field name="arch" type="xml">
            <form string="Transaction Documents Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Documents Type"/>
                        </h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

</odoo>