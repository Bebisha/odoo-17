<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_leave_settlement_paper" model="report.paperformat">
        <field name="name">Leave Settlement A4</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">200</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_leave_settlement" model="ir.actions.report">
        <field name="name">Leave Settlement</field>
        <field name="model">leave.settlement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kg_leave_settlement.leave_settlement_report</field>
        <field name="report_file">kg_leave_settlement.leave_settlement_report</field>
        <field name="paperformat_id" ref="paperformat_leave_settlement_paper"/>
        <field name="binding_model_id" ref="model_leave_settlement"/>
        <field name="binding_type">report</field>
    </record>
</odoo>