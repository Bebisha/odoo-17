<odoo>
    <data>

        <!--    Group Factory Manager    -->
        <record id="factory_manager" model="res.groups">
            <field name="name">Factory Manager</field>
        </record>

        <!--    Group Employee Manager    -->
        <record id="hr_manager" model="res.groups">
            <field name="name">Employee Manager</field>
        </record>

        <!--    Record Rule to show only the entries of currently logged in Factory Manager    -->
        <record model="ir.rule" id="security_rule_employee_entries_id_fm">
            <field name="name">Employee Entries</field>
            <field name="model_id" ref="model_hr_employee_entry"/>
            <field name="domain_force">[('factory_manager_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('kg_raw_fisheries_hrms.factory_manager'))]"/>
        </record>

        <!--    Record Rule to show only the sign on/off entries of currently logged in Factory Manager    -->
        <record model="ir.rule" id="security_rule_employee_sign_on_off">
            <field name="name">Employee Sign On/Off</field>
            <field name="model_id" ref="model_sign_on_off"/>
            <field name="domain_force">[('factory_manager_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('kg_raw_fisheries_hrms.factory_manager'))]"/>
        </record>

        <!--    Record Rule to show only the shop entries of currently logged in Factory Manager    -->
        <record model="ir.rule" id="security_rule_employee_shop_entries">
            <field name="name">Shop Entry</field>
            <field name="model_id" ref="model_shop_entry"/>
            <field name="domain_force">[('factory_manager_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('kg_raw_fisheries_hrms.factory_manager'))]"/>
        </record>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_contract'), ('name', '=', 'ir_rule_hr_contract_employee_manager')]"/>
            <value eval="{'noupdate': False}"/>
        </function>

        <record model="ir.rule" id="hr_contract.ir_rule_hr_contract_employee_manager">
            <field name="domain_force">
               ['|', ('employee_id.manager_ids.user_id', 'in', [user.id]), ('employee_id.user_id', '=', user.id)]
            </field>
        </record>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_contract'), ('name', '=', 'ir_rule_hr_contract_employee_manager')]"/>
            <value eval="{'noupdate': True}"/>
        </function>

    </data>
</odoo>