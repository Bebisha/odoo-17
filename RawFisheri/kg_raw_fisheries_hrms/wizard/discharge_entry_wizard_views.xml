<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="discharge_entry_wizard_form" model="ir.ui.view">
        <field name="name">discharge.entry.wizard.form</field>
        <field name="model">discharge.entry.wizard</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Discharge Entry Creation">
                <group>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="vessel_id"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                </group>

                <footer>
                    <button string="Create Entries" name="action_create_entries" type="object" class="btn-primary"/>
                    <button string="Create From Employee Entries" name="action_create_from_employee_entries"
                            type="object" class="btn-primary" invisible="0"/>
                    <button string="Cancel" name="cancel" type="object" special="cancel" class="btn-cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>