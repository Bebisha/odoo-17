<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="employee_entry_wizard_form" model="ir.ui.view">
            <field name="name">employee.entry.wizard.form</field>
            <field name="model">employee.entry.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee Entry Creation">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="vessel_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Create Entries" name="action_create_entries" type="object" class="btn-primary"/>
                        <button string="Create Entries From Previous Month" name="action_create_entries_previous_month_data" type="object" class="btn-primary"/>
                        <button string="Create Entries From Sign On/Off Entries" name="action_create_entries_from_sign_on_off" type="object" class="btn-primary"/>
                        <button string="Cancel" name="cancel" type="object" special="cancel" class="btn-cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>