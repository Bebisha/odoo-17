<odoo>
    <data noupdate="1">

        <!--   Scheduled action to update employee status   -->
        <record id="ir_cron_update_employee_state" model="ir.cron">
            <field name="name">Update Employee Status</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model._check_employee_status()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <!--    Scheduled action to create employee entry for each month    -->
        <record id="ir_cron_update_employee_entry" model="ir.cron">
            <field name="name">Update Employee Entries</field>
            <field name="model_id" ref="model_hr_employee_entry"/>
            <field name="state">code</field>
            <field name="code">model._create_employee_entries()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>
