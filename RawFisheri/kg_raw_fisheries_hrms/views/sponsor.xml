<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kg_sponsor_form" model="ir.ui.view">
            <field name="name">kg.sponsor.form</field>
            <field name="model">sponsor.sponsor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="warehouse_id" required="1"/>
                        </group>
                        <group>
                            <field name="is_vessel"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kg_sponsor_tree" model="ir.ui.view">
            <field name="name">kg.sponsor.tree</field>
            <field name="model">sponsor.sponsor</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="warehouse_id"/>
                </tree>
            </field>
        </record>

        <record id="sponsor_menu_action" model="ir.actions.act_window">
            <field name="name">Vessel</field>
            <field name="res_model">sponsor.sponsor</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Vessel" id="sponsor_menu_employee" action="sponsor_menu_action" sequence="10"
                  parent="hr.menu_config_employee"/>
    </data>
</odoo>