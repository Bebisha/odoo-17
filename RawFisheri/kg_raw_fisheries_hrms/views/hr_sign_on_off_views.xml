<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="hr_employee_sign_on_off_tree" model="ir.ui.view">
            <field name="name">hr.employee.sign.on.off.tree</field>
            <field name="model">sign.on.off</field>
            <field name="arch" type="xml">
                <tree string="Employee Period" editable="bottom">
                    <header>
                        <button name="submit_for_approval" type="object" string="Request Approval"
                                groups="kg_raw_fisheries_hrms.factory_manager"/>
                        <button name="action_approve" type="object" string="Approve"
                                groups="kg_raw_fisheries_hrms.hr_manager"/>
                    </header>
                    <field name="employee_id"/>
                    <field name="factory_manager_ids" column_invisible="1"/>
                    <field name="vessel_id"/>
                    <field name="contract_reference"/>
                    <field name="sign_on"/>
                    <field name="sign_off"/>
                    <field name="state" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_sign_on_off_search_id" model="ir.ui.view">
            <field name="name">hr.employee.sign.on.off.search</field>
            <field name="model">sign.on.off</field>
            <field name="arch" type="xml">
                <search string="Employee Sign On/Off">
                    <field name="employee_id" string="Employee"/>
                    <field name="vessel_id" string="Vessel"/>
                    <field name="contract_reference" string="Contract Reference"/>

                    <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Approved" name="state_approved" domain="[('state', '=', 'approved')]"/>

                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Vessel" name="vessel_id" context="{'group_by':'vessel_id'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Sign On" name="sign_on" context="{'group_by':'sign_on:month'}"/>
                        <filter string="Sign Off" name="sign_off" context="{'group_by':'sign_off:month'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>