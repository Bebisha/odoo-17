<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="kg_eit_project_inherit_form_view" model="ir.ui.view">
        <field name="name">kg.edit.project.inherit.form.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='settings']/group/group/field[@name='analytic_account_id']" position="attributes">
                <attribute name="widget">selection</attribute>
            </xpath>
            <xpath expr="//page[@name='settings']" position="before">
                <page name="access_users" string="Access Users">
                    <field name="project_users_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="warehouse_id"/>
                            <field name="email"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
