<odoo>
    <record id="view_user_access_wizard" model="ir.ui.view">
        <field name="name">user.access.wizard.form</field>
        <field name="model">user.access.wizard</field>
        <field name="arch" type="xml">
            <form string="User Access Report">
                <group>
                    <group>
                        <field name="user_ids" widget="many2many_tags"/>
                        <field name="company_id"/>
                    </group>
                    <group>
                        <field name="menu_ids" widget="many2many_tags" domain="[('parent_id','=',False)]"/>
                    </group>
                </group>
                <footer>
                    <button name="action_model_access_report" type="object" string="All" class="btn-primary"/>
                    <button name="action_menu_access_report" type="object" string="Menu" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_user_access_wizard" model="ir.actions.act_window">
        <field name="name">User Access Report</field>
        <field name="res_model">user.access.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="kg_settings_reporting" name="Reporting" sequence="9" parent="base.menu_administration"/>

    <menuitem id="menu_user_access_report" name="User Access Report" parent="kg_settings_reporting" sequence="1"
              action="action_user_access_wizard"/>
</odoo>
