<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- adding a field in hr contract after other allowance field -->
    <record id="kg_hr_employee_inherit_form_view" model="ir.ui.view">
        <field name="name">kg.hr.contract.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="wage_type"]' position="after">
                <field name="total_sal"/>
            </xpath>
        </field>
    </record>
</odoo>