<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_inherited_company_form_id">
        <field name="name">res.company.form.inherit</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="corresponding_bank_id" invisible="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="account" string="Accounting">
                    <group>
                        <group string="Needs Approval">
                            <field name="need_invoice_approve"/>
                            <field name="need_bill_approve"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <field name="color" position="after">
                <field name="company_seal" widget="image" class="float-start oe_avatar"/>
            </field>
        </field>
    </record>
</odoo>