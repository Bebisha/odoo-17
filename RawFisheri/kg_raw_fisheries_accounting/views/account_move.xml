<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="kg_raw_fisheries_view_account_move_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="invoice_date" position="before">
                    <field name="label_invoice_line" string="Label"
                           column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                </field>
                <field name="amount_residual_signed" position="attributes">
                    <attribute name="optional">show</attribute>
                    <attribute name="sum">Total Amount In Currency</attribute>
                    <attribute name="column_invisible">1</attribute>
                </field>
                <xpath expr="//field[@name='amount_residual_signed']" position="before">
                    <field name="amount_residual" optional="show" sum="Total"/>
                </xpath>
            </field>
        </record>

        <record id="kg_raw_fisheries_view_account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,posted"
                           invisible="move_type not in ['in_invoice','out_invoice']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"
                           invisible="move_type in ['in_invoice','out_invoice']"/>
                </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="after">
                    <widget name="web_ribbon" title="Approved" bg_color="bg-success"
                            invisible="state not in ['approved','posted'] or move_type not in ['in_invoice','out_invoice']"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="bg-danger"
                            invisible="state != 'rejected'"/>
                </xpath>
                <field name="partner_id" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>
                <field name="partner_shipping_id" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>
                <field name="invoice_line_ids" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>

                <xpath expr="//group[@id='header_right_group']/field[@name='currency_id']" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </xpath>

                <field name="partner_bank_id" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>

                <field name="delivery_date" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>

                <field name="auto_post" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>

                <field name="auto_post_until" position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </field>

                <xpath expr="//group[@id='header_right_group']/div[@name='journal_div']/field[@name='currency_id']"
                       position="attributes">
                    <attribute name="readonly">state not in ['draft','approval_requested']</attribute>
                </xpath>

                <xpath expr="//group[@id='header_right_group']/field[@name='date']" position="after">
                    <field name="kg_invoice_no" invisible="move_type != 'out_invoice'"/>
                </xpath>

                <xpath expr="//header/button[@name='action_post']" position="before">
                    <field name="need_invoice_approve" invisible="1"/>
                    <field name="need_bill_approve" invisible="1"/>
                    <field name="is_forwarding_approval" invisible="1"/>
                    <field name="first_approve_user_id" invisible="1"/>
                    <field name="approve_forwarded" invisible="1"/>
                    <field name="waiting_final_approve" invisible="1"/>

                    <button name="action_request_for_approval" string="Request For Approval" type="object"
                            class="btn btn-primary"
                            invisible="state != 'draft' or move_type != 'out_invoice' or not need_invoice_approve"/>

                    <button name="action_request_for_approval" string="Request For Approval" type="object"
                            class="btn btn-primary"
                            invisible="state != 'draft' or move_type != 'in_invoice' or not need_bill_approve"/>

                    <button name="action_approve" string="Approve" type="object" class="btn btn-primary"
                            invisible="state not in ['approval_requested'] or move_type not in ['in_invoice','out_invoice'] or waiting_final_approve"/>

                    <button name="action_final_approve" string="Final Approve" type="object" class="btn btn-primary"
                            invisible="not waiting_final_approve or state not in ['approval_requested'] or move_type not in ['in_invoice','out_invoice']"/>

                    <button name="action_reject" string="Reject" type="object" class="btn btn-primary"
                            invisible="state not in ['approval_requested'] or move_type not in ['in_invoice','out_invoice']"/>

                    <button name="action_forwarding_approval" string="Forwarding Approval" type="object"
                            class="btn btn-primary"
                            invisible="state not in ['approval_requested'] or move_type not in ['in_invoice','out_invoice'] or not is_forwarding_approval or approve_forwarded"/>

                    <button name="approve_forward" string="Forward" type="object" class="btn btn-primary"
                            invisible="1"/>

                </xpath>
                <xpath expr="//button[14]" position="attributes">
                    <attribute name="invisible">not id or state in ('posted','cancel') or move_type == 'entry'
                    </attribute>
                </xpath>
                <field name="invoice_date" position="attributes">
                    <attribute name="readonly">state in ('posted','cancel')</attribute>
                </field>
                <field name="ref" position="after">
                    <field name="analytic_account_id" invisible="1"/>
                </field>
                <xpath expr="//field[@name='to_check']" position="after">
                    <field name="currency_omr" invisible="1"/>
                </xpath>
                <field name="invoice_vendor_bill_id" position="after">
                    <field name="reason_for_reject" invisible="state != 'rejected'" readonly="1" force_save="1"/>

                    <field name="default_inv_approve_users_ids" readonly="1" force_save="1" widget="many2many_tags"
                           invisible="1"/>
                    <field name="default_bill_approve_users_ids" readonly="1" force_save="1" widget="many2many_tags"
                           invisible="1"/>

                    <field name="default_inv_final_approve_users_ids" readonly="1" force_save="1"
                           widget="many2many_tags" invisible="1"/>
                    <field name="default_bill_final_approve_users_ids" readonly="1" force_save="1"
                           widget="many2many_tags" invisible="1"/>

                    <field name="inv_approve_user_id" readonly="state in ['posted','approved']"
                           domain="[('id','in',default_inv_approve_users_ids)]"
                           invisible="move_type != 'out_invoice' or not need_invoice_approve"/>

                    <field name="bill_approve_user_id" readonly="state in ['posted','approved']"
                           invisible="move_type != 'in_invoice' or not need_bill_approve"
                           domain="[('id','in',default_bill_approve_users_ids)]"/>

                    <field name="inv_final_approve_user_id" readonly="state in ['posted','approved']"
                           domain="[('id','in',default_inv_final_approve_users_ids)]"
                           invisible="move_type != 'out_invoice' or not need_final_approve"/>

                    <field name="bill_final_approve_user_id" readonly="state in ['posted','approved']"
                           invisible="move_type != 'in_invoice' or not need_final_approve"
                           domain="[('id','in',default_bill_final_approve_users_ids)]"/>


                    <field name="is_forwarding_approval" invisible="1"/>
                    <field name="first_approve_user_id" invisible="1"/>
                    <field name="first_final_approve_user_id" invisible="1"/>
                    <field name="approve_forwarded" invisible="1"/>

                    <field name="amount_total_signed" invisible="1"/>
                    <field name="need_final_approve" invisible="1"/>
                    <field name="invoice_limit" invisible="1"/>
                    <field name="bill_limit" invisible="1"/>
                    <field name="waiting_final_approve" invisible="1"/>

                    <field name="communication" invisible="1"/>
                    <field name="approval_id" invisible="1"/>
                    <field name="final_approval_id" invisible="1"/>

                    <field name="bank_ids" widget="many2many_tags" invisible="1"/>
                    <field name="kg_analytic_account_id"/>

                </field>
            </field>
        </record>

        <record id="kg_raw_fisheries_view_account_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="supplier_tax_id" string="Supplier TaxID"/>
                </field>
                <field name="name" position="after">
                    <field name="communication" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="kg_account_move_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="invoice_date" position="before">
                    <field name="communication" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="action_approved_move_out_invoice_type" model="ir.actions.act_window">
            <field name="name">Approved Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="view_id" ref="account.view_out_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'out_invoice'),('state','=','approved')]</field>
            <field name="context">{'default_move_type': 'out_invoice','create' : False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a customer invoice
                </p>
                <p>
                    Create invoices, register payments and keep track of the discussions with your customers.
                </p>
            </field>
        </record>

        <menuitem id="menu_approved_action_move_out_invoice_type" action="action_approved_move_out_invoice_type"
                  sequence="2" parent="account.menu_finance_receivables"/>

        <record id="action_approved_move_in_invoice_type" model="ir.actions.act_window">
            <field name="name">Approved Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="view_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'in_invoice'),('state','=','approved')]</field>
            <field name="context">{'default_move_type': 'in_invoice', 'display_account_trust': True,'create' : False}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a vendor bill
                </p>
                <p>
                    Create invoices, register payments and keep track of the discussions with your vendors.
                </p>
            </field>
        </record>

        <menuitem id="menu_approved_action_move_in_invoice_type" action="action_approved_move_in_invoice_type"
                  sequence="2" parent="account.menu_finance_payables"/>

    </data>
</odoo>