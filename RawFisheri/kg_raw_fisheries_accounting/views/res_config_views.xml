<odoo>
    <record id="kg_inherit_accounting_configuration" model="ir.ui.view">
        <field name="name">Accounting Inherit Config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']/block[@name='default_taxes_setting_container']" position="after">
                <h2>Approvals</h2>
                <div class="row mt16 o_settings_container" name="approval_settings_container">
                    <div class="o_setting_right_pane">

                        <div class="content-group">
                            <h4>Approval Limits</h4>
                            <div class="row">
                                <div class="col-md-6 mt16">
                                    <label for="invoice_limit" string="Invoice" class="col-12 o_light_label"/>
                                    <field name="invoice_limit" class="oe_inline"/>
                                </div>
                                <div class="col-md-6 mt16">
                                    <label for="bill_limit" string="Vendor Bill" class="col-12 o_light_label"/>
                                    <field name="bill_limit" class="oe_inline"/>
                                </div>
                            </div>
                        </div>

                        <div class="content-group mt32">
                            <h4>First Level Approvers</h4>
                            <div class="row">
                                <div class="col-md-6 mt16">
                                    <label for="invoice_approvers_ids" string="Invoice" class="col-12 o_light_label"/>
                                    <field name="invoice_approvers_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="col-md-6 mt16">
                                    <label for="bill_approvers_ids" string="Vendor Bill" class="col-12 o_light_label"/>
                                    <field name="bill_approvers_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                            </div>
                        </div>

                        <div class="content-group mt32" invisible="invoice_limit == 0.00 and bill_limit == 0.00">
                            <h4>Final Level Approvers</h4>
                            <div class="row">
                                <div class="col-md-6 mt16">
                                    <label for="invoice_final_approvers_ids" string="Invoice"
                                           class="col-12 o_light_label" invisible="invoice_limit == 0.00"/>
                                    <field name="invoice_final_approvers_ids" widget="many2many_tags"
                                           class="oe_inline" invisible="invoice_limit == 0.00"/>
                                </div>
                                <div class="col-md-6 mt16" invisible="bill_limit == 0.00">
                                    <label for="bill_final_approvers_ids" string="Vendor Bill"
                                           class="col-12 o_light_label"/>
                                    <field name="bill_final_approvers_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>