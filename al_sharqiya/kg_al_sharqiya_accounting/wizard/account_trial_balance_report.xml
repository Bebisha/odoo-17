<odoo>
    <data>
        <record id="kg_trail_balance_menu_action_report" model="ir.actions.act_window">
            <field name="name">Trial Balance Report</field>
            <field name="res_model">trail.balance.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="kg_menu_trail_balance_report" action="kg_trail_balance_menu_action_report"
                  parent="account.menu_finance_reports" sequence="6"/>

        <record id="kg_trail_balance_report_wizard" model="ir.ui.view">
            <field name="name">Trail Balance Report</field>
            <field name="model">trail.balance.report.wizard</field>
            <field name="arch" type="xml">
                <form name="Report Options">
                    <group>
                        <group name="main_info">
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" required="1"/>
                            <field name="tag_id" domain="[('is_trial_balance', '=', True)]" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button
                                name="button_view_report" class="oe_highlight"
                                string="View"
                                type="object"/>
                        <button
                                name="button_print_pdf_report" class="oe_highlight"
                                string="Print PDF"
                                type="object"/>

                        <button
                                name="button_print_excel_report" class="oe_highlight"
                                string="Print EXCEL"
                                type="object"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>