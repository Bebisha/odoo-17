<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define Form View -->
        <record id="view_market_rate_form" model="ir.ui.view">
            <field name="name">market.rate.updation.form</field>
            <field name="model">market.rate.updation</field>
            <field name="arch" type="xml">
                <form string="Market Rate Updation">
                    <header>
                        <button name="action_submit_manager" string="Submit to Manager" type="object"
                                class="btn-primary" invisible="manager_approved==True"/>
                        <button name="action_approve" string="Approve" class="btn-primary" type="object"
                                invisible="state!='to_approve'"/>
                        <button name="action_cancel" string="Cancel" class="btn-secondary" type="object"
                                invisible="state=='cancel'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,to_approve,posted,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="view_journal_entries" type="object"
                                    class="oe_stat_button"
                                    string="Journal Entries"
                                    icon="fa-list"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="date"/>
                                <field name="currency_id"/>
                                <field name="manager_approved" invisible="1"/>
                                <field name="investment_type_id"/>

                            </group>

                        </group>
                        <notebook>
                            <page string="Investment Line">
                                <field name="market_rate_line_id" readonly="state in ['posted']">
                                    <tree editable="bottom">
                                        <field name="investment_id"/>
                                        <field name="available_shares"/>
                                        <field name="face_value"/>
                                        <field name="market_rate"/>

                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_market_rate_tree" model="ir.ui.view">
            <field name="name">market.rate.updation.tree</field>
            <field name="model">market.rate.updation</field>
            <field name="arch" type="xml">
                <tree string="Market Rate Updation">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="date"/>
                    <field name="currency_id"/>
                    <field name="investment_type_id"/>
                </tree>
            </field>
        </record>


        <record id="action_market_rate_updation" model="ir.actions.act_window">
            <field name="name">Market Rate Updation</field>
            <field name="res_model">market.rate.updation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_market_rate_tree"/>
        </record>
    </data>
</odoo>