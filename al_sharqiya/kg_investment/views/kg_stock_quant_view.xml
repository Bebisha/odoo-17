<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kg_stock_quant_form" model="ir.ui.view">
            <field name="name">kg.stock.quant.form</field>
            <field name="model">kg.stock.quant</field>
            <field name="arch" type="xml">
                <form string="Stock Quantity">

                    <sheet>
                        <group>
                            <field name="investment_id"/>
                            <field name="quantity" />
                            <field name="cost_price"/>
                            <field name="avg_cost"/>
                            <field name="is_purchase"/>
                            <field name="is_sale"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_kg_stock_quant_tree" model="ir.ui.view">
            <field name="name">kg.stock.quant.tree</field>
            <field name="model">kg.stock.quant</field>
            <field name="arch" type="xml">
                <tree string="Stock Quantity" create="0" edit="0">
                    <field name="investment_id"/>
                    <field name="quantity" sum="Total" decoration-danger="quantity &lt; 0"/>
                    <field name="price"/>
                    <field name="selling_price"/>
<!--                    <field name="cost_price" />-->
                    <field name="last_cost_price" sum="Total"/>
                    <field name="avg_cost"/>
                </tree>
            </field>
        </record>

        <record id="action_kg_stock_quant" model="ir.actions.act_window">
            <field name="name">Stock Quantity</field>
            <field name="res_model">kg.stock.quant</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_kg_stock_quant_tree"/>
        </record>
    </data>
</odoo>