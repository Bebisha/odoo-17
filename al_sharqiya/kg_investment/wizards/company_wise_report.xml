<odoo>
    <data>
        <record id="companywise_report_action_wizard_view" model="ir.ui.view">
            <field name="name">Companywise Report Wizard</field>
            <field name="model">companywise.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="company_id" required="1"/>
                            <!--                            <field name="investment_type" required="1"/>-->
                            <field name="year" required="1"/>

                            <!--                            <field name="investment_type" required="1"/>-->
                        </group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button
                                name="company_report_button"
                                string="PDF"
                                type="object"/>
                        <button
                                name="company_report_button"
                                string="XLSX"
                                type="object" context="{'output_format': 'xlsx'}"/>
                        <button string="CANCEL" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="companywise_report_action" model="ir.actions.act_window">
            <field name="name">Company wise Report</field>
            <field name="res_model">companywise.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_companywise" name="Company Wise Report" sequence="1"
                  action="companywise_report_action"
                  parent="menu_reports_investment"/>
    </data>
</odoo>
