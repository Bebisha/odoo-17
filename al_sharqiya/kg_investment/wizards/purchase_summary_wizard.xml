<odoo>
    <data>
        <record id="purchase_summary_wizard_view" model="ir.ui.view">
            <field name="name">Purchase Summary Report Wizard</field>
            <field name="model">purchase.summary.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="report_type"/>
                            <field name="company_id" required="1"/>
                            <field name="investment_type" required="1"/>
                        </group>
                        <group>
                            <field name="from_year" required="1" invisible="report_type == 'monthly'"/>
                            <field name="from_date" required="1" invisible="report_type == 'yearly'"/>

                            <field name="to_date" required="1" invisible="report_type == 'yearly'"/>
                            <field name="range" required="1" invisible="report_type == 'monthly'"/>

                        </group>
                    </group>
                    <footer>
                        <button
                                name="purchase_summary_report_button"
                                string="PDF"
                                type="object"/>
                        <button
                                name="purchase_summary_report_button_xlsx"
                                string="XLSX"
                                type="object"/>
                        <button string="CANCEL" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="purchase_summary_report_action" model="ir.actions.act_window">
            <field name="name">Purchase Summary Report</field>
            <field name="res_model">purchase.summary.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_purchase_summary" name="Purchase Summary" sequence="1"
                  action="purchase_summary_report_action"
                  parent="menu_reports_investment"/>
    </data>
</odoo>
