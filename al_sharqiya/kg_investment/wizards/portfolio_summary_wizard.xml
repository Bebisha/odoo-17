<odoo>
    <data>
        <record id="portfolio_summary_wizard_view" model="ir.ui.view">
            <field name="name">Portfolio Summary Report Wizard</field>
            <field name="model">portfolio.summary.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="company_id" required="1"/>
                            <field name="month" required="1"/>
                            <field name="year" required="1"/>

                            <!--                            <field name="investment_type" required="1"/>-->
                        </group>
<!--                        <group>-->
<!--                            <field name="from_date" />-->
<!--                            <field name="to_date"/>-->
<!--                        </group>-->
                    </group>
                    <footer>
                        <button
                                name="portfolio_summary_report_button"
                                string="PDF"
                                type="object"/>
                        <button
                                name="portfolio_summary_report_button_xlsx"
                                string="XLSX"
                                type="object"/>
                        <button string="CANCEL" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="portfolio_summary_report_action" model="ir.actions.act_window">
            <field name="name">Portfolio Summary Report</field>
            <field name="res_model">portfolio.summary.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_portfolio_summary" name="Portfolio Summary" sequence="1"
                  action="portfolio_summary_report_action"
                  parent="menu_reports_investment"/>
    </data>
</odoo>
