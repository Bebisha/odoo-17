<odoo>
    <record id="account_journal_id" model="ir.ui.view">
        <field name="name">account.journal.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']" position="after">
                <page string="Cheque Leaf's" invisible="type != 'bank'">
                    <group>
                        <field name="cheque_layout_id"/>
                    </group>
                    <field name="cheque_leaf_lines" readonly="1" create="false">
                        <tree editable="bottom">
                            <field name="name"/>
                            <!--                            <field name="cheque_number"/>-->
                            <!--                            <field name="cheque_series"/>-->
                            <field name="status"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>