<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kg_cheque_layout_tree_view" model="ir.ui.view">
        <field name="name">kg.cheque.layout.view.tree</field>
        <field name="model">kg.cheque.layout</field>
        <field name="arch" type="xml">
            <tree string="Cheque Layout">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="kg_cheque_layout_form_view" model="ir.ui.view">
        <field name="name">kg.cheque.layout.view.form</field>
        <field name="model">kg.cheque.layout</field>
        <field name="arch" type="xml">
            <form string="Cheque Layout">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Layout Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Header (In CM)">
                            <!--                            <field name="header_height"/>-->
                            <!--                            <field name="header_width"/>-->
                            <!--                            <field name="table_margin"/>-->
                            <!--                            <field name="table_margin_left"/>-->
                            <!--                            <field name="table_margin_right"/>-->
                            <!--                            <field name="table_margin_bottom"/>-->
                            <field name="font_size"/>
                            <field name="font_bold"/>

                            <!--                            <field name="header_font_size"/>-->
                            <!--                            <field name="bank_name_div_left"/>-->
                            <!--                            <field name="bank_name_div_top"/>-->
                            <!--                            <field name="payment_ref_left"/>-->
                            <!--                            <field name="payee_name_left"/>-->
                            <!--                            <field name="payment_date_left"/>-->
                            <!--                            <field name="cheque_trans_date_left"/>-->
                            <!--                            <field name="header_amount_left"/>-->
                            <!--                            <field name="currency_left"/>-->

                        </group>

                        <group>
                            <separator string="Cheque Info (In CM)"/>
                            <field name="chequeno_top"/>
                            <field name="chequeno_left"/>
                            <field name="date_top"/>
                            <field name="date_left"/>
                            <field name="payee_top"/>
                            <field name="payee_left"/>
                            <field name="word_top"/>
                            <field name="word_left"/>
                            <field name="amount_top"/>
                            <field name="amount_left"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="kg_cheque_layout_action" model="ir.actions.act_window">
        <field name="name">Cheque Layout</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kg.cheque.layout</field>
        <field name="view_mode">tree,form</field>

    </record>


