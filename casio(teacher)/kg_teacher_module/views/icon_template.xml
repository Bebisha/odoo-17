<odoo>

    <template id="template_logo_replaceds" inherit_id="website.option_header_brand_logo">
        <xpath expr="//a/span" position="replace">
            <img t-att-src="'/kg_teacher_module/static/description/ciasio.jpeg'"
                 alt="Brand Logo"/>
        </xpath>
    </template>


    <template id="my_header" inherit_id="website.layout">
        <xpath expr="//header" position="replace">
            <header>
                <div style="max-width: 1312px; margin: 0 auto; display: flex; align-items: center; padding: 10px;">
                    <img t-att-src="'/kg_teacher_module/static/description/ciasio.jpeg'"
                         style="padding: 0; margin-right: 10px; height: 36px;" alt="Brand Logo"/>
                    <nav>
                        <ul style="list-style: none; display: flex; margin: 0; padding: 0;">
                            <li style="margin-right: 20px;" t-if="website.user_id != user_id">
                                <a t-att-href="'/portal/teacher_license_code'"
                                   style="text-decoration: none; color: black;">Teacher Registration
                                </a>
                            </li>
                            <li style="margin-right: 20px;" t-if="website.user_id != user_id">
                                <a t-att-href="'https://contact.casio-mea.com/contact-us/'"
                                   style="text-decoration: none; color: black;">Support
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </header>
        </xpath>
    </template>


