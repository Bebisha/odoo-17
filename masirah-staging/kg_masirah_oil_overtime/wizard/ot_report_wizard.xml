<odoo>
    <data>
        <record id="action_ot_report_wizard" model="ir.actions.act_window">
            <field name="name">OT Report</field>
            <field name="target">new</field>
            <field name="res_model">ot.report.wizard</field>
            <field name="view_mode">form</field>
        </record>

        <record id="ot_report_wizard_form" model="ir.ui.view">
            <field name="name">ot.report.wizard.form</field>
            <field name="model">ot.report.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="OT Report">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>
                            <field name="fileout" invisible="1"/>
                            <field name="fileout_filename" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print xlsx" name="print_sif_xlsx" type="object" class="btn-primary"/>
                        <button string="Cancel" name="cancel" type="object" special="cancel" class="btn-cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <menuitem id="menu_ot_reporting" name="Reporting"
                  parent="overtime_submenu"
                  groups="hr_holidays.group_hr_holidays_user"/>
        <menuitem id="menu_ot_report" name="Overtime Report"
                  parent="menu_ot_reporting"
                  groups="hr_holidays.group_hr_holidays_user"
                  action="action_ot_report_wizard"/>
    </data>
</odoo>