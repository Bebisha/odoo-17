<odoo>
    <data>

        <menuitem id="inventory_custom_reports_root_menu" name="Custom Reports"
                  parent="stock.menu_warehouse_report" sequence="301"/>

        <record id="kg_stock_excel_report_menu_action" model="ir.actions.act_window">
            <field name="name">Stock Report - Excel</field>
            <field name="res_model">stock.excel.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="kg_menu_stock_excel_report" action="kg_stock_excel_report_menu_action"
                  parent="inventory_custom_reports_root_menu"/>

        <record id="kg_stock_report_report_wizard" model="ir.ui.view">
            <field name="name">Stock Report Wizard</field>
            <field name="model">stock.excel.report.wizard</field>
            <field name="arch" type="xml">
                <form name="Report Options">
                    <group>
                        <group name="main_info">
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button
                                name="print_excel_report" class="oe_highlight"
                                string="Print"
                                type="object"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>