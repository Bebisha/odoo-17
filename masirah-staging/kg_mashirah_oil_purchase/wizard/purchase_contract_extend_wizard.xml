<odoo>
    <data>
        <record id="purchase_contract_extend_wizard_view" model="ir.ui.view">
            <field name="name">Purchase Contract Extend Wizard</field>
            <field name="model">purchase.contract.extend.wizard</field>
            <field name="arch" type="xml">
                <form string="Revision">
                    <group>
                        <group>
                            <field name="purchase_contract_id" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <notebook>
                            <page string="Extend Lines">
                                <field name="purchase_contract_extend_line_ids">
                                    <tree editable="bottom" create="false">
                                        <field name="start_date" required="1"/>
                                        <field name="end_date" required="1"/>
                                        <field name="product_id" readonly="1" force_save="1"/>
                                        <field name="description" readonly="1" force_save="1"/>
                                        <field name="uom_id" readonly="1" force_save="1"/>
                                        <field name="unit_price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <footer>
                        <button name="apply" string="Apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>