<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="leave_application">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="header" align="center">
                            <img t-att-src="image_data_uri(doc.company_id.logo)" style="height:150px;width:170px;margin-top:-15px;" align="center" alt="Company Logo"/>
                        </div>
                        <div>
                            <h2 align="center">LEAVE APPLICATION FORM</h2>
                            <table class='table table-borderless table-condensed table-hover' align="center" style="margin-top:40px;font-size:18px;border-collapse:collapse;border-radius: 5px 5px 5px 5px;width:100%;margin:5pt;border-bottom: 2px solid black;border-top: 2px solid black;border-left: 2px solid black;border-right: 2px solid black;">
                                <tr width="100%" style="height:50px; border-bottom: 1px solid black;">
                                    <td width="20%" style="border-right:1px solid black;">
                                        <strong>EMPLOYEE NAME</strong>
                                    </td>
                                    <td colspan="2" style="border-right: 1px solid black;" align="center">
                                        <span t-esc="doc.employee_id.name"/>
                                    </td>
                                    <td width="10%" align="center">
                                        <strong>Job Title:</strong>
                                    </td>
                                    <td width="25%" style="border-right: 1px solid black;" align="center">
                                        <span t-esc="doc.employee_id.job_id.name"/>
                                    </td>
                                    <td width="10%" align="center">
                                        <strong>Date:</strong>
                                    </td>
                                    <td width="15%" align="center">
                                        <span t-esc="doc.create_date.strftime('%d-%m-%Y')"/>
                                    </td>
                                </tr>
                                <tr width="100%" style="height:50px; border-bottom: 1px solid black;">
                                    <td width="20%" style="border-right:1px solid black;">
                                        <strong>LEAVE REQUEST DATE</strong>
                                    </td>
                                    <td width="5%" align="center">
                                        <strong>From:</strong>
                                    </td>
                                    <td width="15%" style="border-right: 1px solid black;" align="center">
                                        <span t-esc="doc.date_from.strftime('%d-%m-%Y')"/>
                                    </td>
                                    <td width="10%" align="center">
                                        <strong>To:</strong>
                                    </td>
                                    <td width="25%" style="border-right: 1px solid black;" align="center">
                                        <span t-esc="doc.date_to.strftime('%d-%m-%Y')"/>
                                    </td>
                                    <td colspan="2" align="center">
                                        <strong>Total Days:</strong>
                                        <span style="margin-left: 30px;" t-esc="doc.number_of_days_display"/>
                                    </td>
                                </tr>
                                <tr width="100%" style="height:50px; border-bottom: 1px solid black;">
                                    <td width="20%" style="border-right:1px solid black;">
                                        <strong>TYPE OF LEAVE</strong>
                                    </td>
                                    <td colspan="6" align="center">
                                        <span t-esc="doc.holiday_status_id.name" style="text-transform: uppercase;"/>
                                    </td>
                                </tr>
                                <tr width="100%">
                                    <td width="20%" style="border-right:1px solid black;" rowspan="2">
                                        <strong>SIGNATURE</strong>
                                    </td>
                                    <td colspan="2" style="border-bottom:1px solid black; border-right:1px solid black; text-align:center;">
                                        <strong>Employee</strong>
                                    </td>
                                    <td colspan="2" style="border-bottom:1px solid black; border-right:1px solid black; text-align:center;">
                                        <strong>Line Manager</strong>
                                    </td>
                                    <td colspan="2" style="border-bottom:1px solid black; text-align:center;">
                                        <strong>General Manager</strong>
                                    </td>
                                </tr>
                                <tr style="height:70px; border-bottom: 1px solid black;">
                                    <td colspan="2" style=" border-right:1px solid black;"/>
                                    <td colspan="2" style=" border-right:1px solid black;"/>
                                    <td colspan="2" style=" border-right:1px solid black;"/>
                                </tr>
                                <tr width="100%" style="height:50px; border-bottom: 1px solid black;">
                                    <td width="20%" style="border-right:1px solid black;">
                                        <strong>HR Approval &amp; Date</strong>
                                    </td>
                                    <td colspan="6" align="center">
                                        <span t-esc="doc.first_approver_id.name" style="text-transform: uppercase;"/><br/>
                                        <t t-if="doc.approval_date">
                                            <span t-esc="doc.approval_date.strftime('%d/%m/%Y')"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr width="100%" style="height:50px;">
                                    <td width="20%" style="border-right:1px solid black;">
                                        <strong>Total Balance</strong>
                                    </td>
                                    <td colspan="6" align="center">
                                        <span t-esc="doc.balance_leave"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
