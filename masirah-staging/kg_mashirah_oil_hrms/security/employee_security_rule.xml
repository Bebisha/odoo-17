<odoo>
    <data>
        <record model="ir.rule" id="employee_own_record">
            <field name="name">Employee Own Data</field>
            <field name="model_id" ref="hr.model_hr_employee_public"/>
            <field name="groups" eval="[(4, ref ('base.group_user'))] "/>
            <field name="domain_force">
                [('user_id.id','=',user.id)]
            </field>
        </record>
        <record model="ir.rule" id="employee_own_payslip_rule">
            <field name="name">Employee Own Payslip</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">
                [('employee_id.user_id.id','=',user.id)]
            </field>
        </record>

    </data>
</odoo>