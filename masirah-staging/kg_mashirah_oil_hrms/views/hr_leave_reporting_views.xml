<odoo>
    <data>
        <record id="kg_hr_leave_report_calendar_view_search" model="ir.ui.view">
            <field name="name">kg.hr.leave.report.calendar.view.search</field>
            <field name="model">hr.leave.report.calendar</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_report_calendar_view_search"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="employee_id" string="Employee No." filter_domain="[('employee_id.registration_number','ilike', self)]"/>
                </field>
            </field>
        </record>

        <record id="kg_view_hr_leave_allocation_filter" model="ir.ui.view">
            <field name="name">kg.hr.holidays.filter_allocations</field>
            <field name="model">hr.leave.allocation</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_search_manager"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="employee_id" string="Employee No." filter_domain="[('employee_id.registration_number','ilike', self)]"/>
                </field>
            </field>
        </record>

        <record id="kg_hr_leave_report_search_view" model="ir.ui.view">
            <field name="name">kg.hr.leave.report.search.view</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_report_search_view"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="employee_id" string="Employee No." filter_domain="[('employee_id.registration_number','ilike', self)]"/>
                </field>
            </field>
        </record>

        <record id="kg_hr_holidays_filter" model="ir.ui.view">
            <field name="name">kg.hr.holidays.filter</field>
            <field name="model">hr.leave.report</field>
            <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter_report"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="after">
                    <field name="employee_id" string="Employee No." filter_domain="[('employee_id.registration_number','ilike', self)]"/>
                </field>
            </field>
        </record>
    </data>
</odoo>