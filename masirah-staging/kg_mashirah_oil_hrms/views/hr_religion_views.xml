<odoo>
    <data>
        <record id="menu_hr_religion_action" model="ir.actions.act_window">
            <field name="name">Religions</field>
            <field name="res_model">hr.religion</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_religion" name="Religions" action="menu_hr_religion_action"
                  parent="hr.menu_config_employee"/>

        <record id="employee_religion_view_tree" model="ir.ui.view">
            <field name="name">Employee Religion Tree View</field>
            <field name="model">hr.religion</field>
            <field name="arch" type="xml">
                <tree string="Employee Religions">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="employee_religion_view_form" model="ir.ui.view">
            <field name="name">Employee Religion Form View</field>
            <field name="model">hr.religion</field>
            <field name="arch" type="xml">
                <form string="Employee Religions">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>