<odoo>
    <data>
        <record id="kg_hr_salary_attachment_view_search" model="ir.ui.view">
            <field name="name">kg.hr.salary.attachment.search</field>
            <field name="model">hr.salary.attachment</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_attachment_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_ids']" position="after">
                    <field name="employee_ids" string="Employee No." filter_domain="[('employee_ids.registration_number','ilike', self)]"/>
                </xpath>
            </field>
        </record>

        <record id="kg_hr_work_entry_view_search" model="ir.ui.view">
            <field name="name">kg.hr.work.entry.filter</field>
            <field name="model">hr.work.entry</field>
            <field name="inherit_id" ref="hr_work_entry.hr_work_entry_view_search"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='employee_id']" position="after">
                        <field name="employee_id" string="Employee No." filter_domain="[('employee_id.registration_number','ilike', self)]"/>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>