<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Email template -->


        <record id="expiry_notification_mail" model="mail.template">
            <field name="name">Contract Expiry Remainder...!!</field>
            <field name="subject">Contract Expiry Remainder</field>
            <field name="model_id" ref="kg_mashirah_oil_hrms.model_hr_contract"/>
<!--            <field name="email_from">{{ (object.activity_user_id.email_formatted or object.company_id.email_formatted or-->
<!--                user.email_formatted) }}-->
<!--            </field>-->


            <field name="body_html" type="html">
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                        <p>Dear <t t-esc="object.employee_id.name or 'n/a'"/></p>

                        <p> This is gentle remainder to notify that your contract will end in 1 month on  <t t-esc="object.date_end"/>. </p>
                        <p> Thank You </p>
                    </div>

            </field>
<!--            <field name="lang">{{ object.activity_user_id.lang }}</field>-->
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>

