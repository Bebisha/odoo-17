<odoo>
    <data>
        <template id="account_invoice_report_template" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="header">
                                <table class='table table-borderless table-condensed table-hover'
                                       style="width:100%;">
                                    <tr>
                                        <td rowspan="2" style="width:25%;text-align: center;">

                                        </td>
                                    </tr>
                                    <tr>
                                        <td rowspan="2" style="width:50%;text-align:center;">
                                            <strong style="font-size:30px;">
                                                <span>Invoice</span>
                                            </strong>
                                        </td>

                                        <td style="width:50%;text-align: center;height: 100px;">
                                            <img t-att-src="image_data_uri(o.company_id.logo)" style="height:150px;width:170px;margin-top:-15px; margin-left: 110px
                                             position:fixed;right:50px;top:30px;" alt="Company Logo"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table>
                                    <tr>
                                        <td style="width:53%;">
                                            <strong style="font-size:13px;">Billed To</strong>
                                        </td>

                                        <td style="width:25%;">

                                        </td>

                                        <td align="right" style="width:50%;">
                                            <strong style="font-size:14px;">Invoice No:</strong>
                                            <span style="font-size:14px;" t-field="o.name"/>

                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <strong style="font-size:13px;" t-field="o.company_id.name"/>

                                        </td>

                                        <td>

                                        </td>

                                        <td align="right">
                                            <strong style="font-size:14px;">Invoice Date:</strong>
                                            <span style="font-size:14px;" t-field="o.invoice_date"/>

                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <strong style="font-size:13px;" t-field="o.company_id.street"/>,

                                        </td>

                                        <td>

                                        </td>

                                        <td align="right">
                                            <strong style="font-size:14px;">Payment Term:</strong>
                                            <span style="font-size:14px;" t-field="o.invoice_payment_term_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong style="font-size:13px;" t-field="o.company_id.bldg_no"/>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong style="font-size:13px;" t-field="o.company_id.country_id"/>,
                                            <strong style="font-size:14px;" t-field="o.company_id.zip"/>

                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <br/>
                            <div style="width:100%;">
                                <div style="width:100%;">
                                    <strong style="font-size:14px;">Ref:</strong>
                                    <strong style="font-size:14px;" t-field="o.name"/>
                                </div>
                            </div>
                            <table style="border: 1px solid black;border-collapse: collapse;">
                                <tr>
                                    <th style="border: 1px solid black;">Sr No</th>
                                    <th style="border: 1px solid black;">Particulars</th>
                                    <th style="border: 1px solid black;">Quantity Bbls</th>
                                    <th style="border: 1px solid black;">Benchmark Crude Price/bbl</th>
                                    <th style="border: 1px solid black;">Deductions USD/bbl</th>
                                    <th style="border: 1px solid black;">Net USD Price/bbl</th>
                                    <th style="border: 1px solid black;">Amount USD</th>
                                </tr>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="current_total" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="current_subtotal"
                                           t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="current_total" t-value="current_total + line.price_total"/>

                                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="line.display_type == 'product'"
                                               name="account_invoice_line_accountable">
                                                <td align="center" style="border: 1px solid black;font-size:14px;">
                                                    <span t-field="line.product_id.default_code"/>

                                                </td>

                                                <td align="center" name="account_invoice_line_name"
                                                    style="border: 1px solid black;font-size:14px;">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}">
                                                    </span>
                                                </td>
                                                <td align="center" name="td_quantity" class="text-end"
                                                    style="border: 1px solid black;">
                                                    <span t-field="line.quantity"/>
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom">
                                                        units
                                                    </span>
                                                </td>

                                                <td align="center" name="td_price_unit" style="border: 1px solid black;"
                                                    t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                                </td>
                                                <td style="border: 1px solid black;">

                                                </td>
                                                <td style="border: 1px solid black;">

                                                </td>
                                                <td align="center" name="td_subtotal" class="text-end o_price_total"
                                                    style="border: 1px solid black;">
                                                    <span class="text-nowrap" t-field="line.price_subtotal">
                                                    </span>
                                                </td>
                                            </t>

                                        </tr>

                                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-end">
                                                <td colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span
                                                            t-out="current_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    >31.05
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>

                                    </t>
                                </tbody>
                            </table>
                            <div>
                                <table style="width:100%;border: 1px solid black;">
                                    <tr>
                                        <td style="width:20%">
                                            <span style="font-size:15px;">
                                                <strong>Sub-Total:</strong>

                                            </span>
                                        </td>
                                        <td style="width:80%">
                                            <span style="font-size:13px;">
                                                <strong></strong>
                                            </span>
                                        </td>
                                        <td align="center">
                                            <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <table>
                                <tr>
                                    <td>

                                    </td>
                                    <td>

                                    </td>
                                    <td>
                                        <t t-call="kg_mashirah_oil_accounting.new_report_subtotal_template"/>
                                    </td>
                                </tr>
                            </table>
                            <div>
                                <table>
                                    <tr>
                                        <td style="padding-top:20px;">
                                            <strong style="font-size:15px;">
                                                Delivery Term:
                                            </strong>
                                            <br/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:20px;width:50%;">
                                            <strong style="font-size:15px;">
                                                Vessel:
                                            </strong>
                                        </td>
                                        <td>
                                            <strong style="font-size:15px;padding-top:20px;">
                                                Bill Of Lading Date:
                                            </strong>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="padding-top:20px;">
                                            <strong style="font-size:15px;">
                                                Payment Terms:
                                            </strong>
                                            <span style="font-size:13px;" t-field="o.invoice_payment_term_id"/>


                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:20px;">
                                            <strong style="font-size:15px;">
                                                Payment Due Date:
                                            </strong>

                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <br/>
                            <div style="width:100%;">
                                <div style="width:100%;">
                                    <strong style="font-size:14px;">Bank Details For Remittance</strong>

                                </div>
                            </div>
                            <table style="width:100%;">
                                <td colspan="6">


                                    <table style="border: 1px solid black;border-collapse: collapse;width:75%;">

                                        <tr>
                                            <td style="border: 1px solid black;">Beneficiary</td>

                                            <td style="border: 1px solid black;">
                                                <span style="font-size:14px;"
                                                      t-field="o.partner_bank_id.acc_holder_name"/>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid black;">Bank Name</td>
                                            <td style="border: 1px solid black;">
                                                <span style="font-size:14px;" t-field="o.partner_bank_id.bank_id"/>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid black;">Place</td>
                                            <td style="border: 1px solid black;">Swanson</td>

                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid black;">Bank Account</td>

                                            <td style="border: 1px solid black;">
                                                <span style="font-size:14px;" t-field="o.partner_bank_id.acc_number"/>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid black;">Swift Code</td>
                                            <td style="border: 1px solid black;">
                                                <span style="font-size:14px;" t-field="o.partner_bank_id.bic"/>
                                            </td>


                                        </tr>
                                    </table>
                                </td>
                                <td colspan="6">
                                    <table>
                                        <tr>
                                            <td style="padding-top:90px;">
                                                (Authorized Signature)
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                            </table>

                            <br/>
                            <div style="width:100%;">
                                <div style="width:100%;">
                                    <strong style="font-size:14px;">Note:</strong>

                                </div>
                            </div>


                        </div>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>