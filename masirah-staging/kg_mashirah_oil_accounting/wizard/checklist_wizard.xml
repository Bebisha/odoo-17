<odoo>
    <data>
          <record id="kg_tax_checklist_report_menu_action_report" model="ir.actions.act_window">
            <field name="name">VAT Checklist</field>
            <field name="res_model">kg.checklist.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="kg_menu_tax_checklist_report" action="kg_tax_checklist_report_menu_action_report" sequence="1"
                  parent="kg_mashirah_oil_accounting.accounting_custom_reports_root_menu"/>

        <record id="kg_tax_checklist_report_wizard" model="ir.ui.view">
            <field name="name">VAT Checklist Report Wizard</field>
            <field name="model">kg.checklist.wizard</field>
            <field name="arch" type="xml">
                <form name="Report Options">
                    <group>
                        <group name="main_info">
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button
                                name="button_checklist_report" class="oe_highlight"
                                string="Print"
                                type="object"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>