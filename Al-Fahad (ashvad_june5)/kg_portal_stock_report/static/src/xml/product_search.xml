<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!--    Template for showing table containing product and quantity-->
    <t t-name="productSearch">
        <div class="table_main_view center">
            <table class="table table-bordered">
                <t t-if="result">
                    <thead>
                        <th class="col-md-4">Product</th>
                        <th class="col-sm-2">Quantity</th>
<!--                        <th class="col-sm-2">Free to Use</th>-->
                        <th class="col-sm-3">Incoming(Transit)</th>
                        <th class="col-sm-3">Outgoing(Transit)</th>
                    </thead>
                    <tbody>
                        <t t-foreach="result" t-as="o" t-key="o.id">
                            <tr>
                                <td class="col-md-5">
<!--                                    <a t-attf-href="'/report/pdf/account.report_invoice/%s' % o.id">-->
                                        <t t-esc="o['display_name']"/>

<!--                                    </a>-->
                                </td>
                                <td class="col-sm-1">
                                    <t t-esc="o['qty_available']"/>
                                </td>
<!--                                <td class="col-sm-1">-->
<!--                                    <t t-esc="o['free_qty']"/>-->
<!--                                </td>-->
                                <td class="col-sm-1">
                                    <t t-esc="o['incoming_qty']"/>
                                </td>
                                <td class="col-sm-1">
                                    <t t-esc="o['outgoing_qty']"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </table>
        </div>
    </t>
</templates>
