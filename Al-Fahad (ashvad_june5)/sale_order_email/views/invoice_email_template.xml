<odoo>
    <data>
        <record id="invoice_email_template_name" model="mail.template">
            <field name="name">INVOICE EMAIL TEMPLATE NAME</field>
            <field name="model_id" ref="sale_order_email.model_account_move"/>
            <field name="subject">{{ object.company_id.name }}</field>
            <field name="email_from">{{(object.company_id.email)}}</field>
            <field name="partner_to">{{object.partner_id.id}}</field>
            <field name="description">Add Description</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        <b>Dear <t t-out="object.partner_id.name"/>,
                        </b>
                        <br/>
                        <br/>

                        Your Invoice
                        <b>
                            <t t-out="object.payment_reference"/>
                        </b>
                        has been generated.
                        <br/>
                        <br/>

                        <b>Invoice Details:</b>
                        <br/>
                        <br/>
                        - Invoice Number:
                        <t t-out="object.payment_reference"/>
                        <br/>
                        - Invoice Date:
                        <t t-out="object.invoice_date"/>
                        <br/>
                        - Amount:
                        <t t-out="object.amount_total"/>
                        <br/>
                        <br/>

                        <a class="btn btn-primary" role="button"
                           t-att-href="'%s'%object.env.context.get('customer_url')">View Invoice
                        </a>
                        <br/>
                        <br/>

                        Thank you for your business.
                        <br/>
                        <br/>
                        Best regards,
                        <br/>
                        <br/>
                        <t t-out="object.company_id.name"/>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>