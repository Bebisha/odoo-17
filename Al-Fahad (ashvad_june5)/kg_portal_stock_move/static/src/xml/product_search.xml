<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- Template for showing table containing product and quantity -->
    <t t-name="productStockSearch">
        <div class="table-responsive">
            <table class="table table-bordered">
                <t t-if="result">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Reference</th>
                            <th>Product</th>
                            <!-- <th>Free to Use</th> -->
                            <th>Lot/Serial No.</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Quantity</th>
                            <th>Unit</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="result" t-as="o" t-key="o.id">
                            <tr>
                                <td><t t-esc="o['date']"/></td>
                                <td><t t-esc="o['reference']"/></td>
                                <td><t t-esc="o['product_id'][1]"/></td>
                                <!-- <td><t t-esc="o['free_qty']"/></td> -->
                                <td><t t-esc="o['lot_id']"/></td>
                                <td><t t-esc="o['location_id'][1]"/></td>
                                <td><t t-esc="o['location_dest_id'][1]"/></td>
                                <td><t t-esc="o['quantity']"/></td>
                                <td><t t-esc="o['product_uom_id'][1]"/></td>
                                <td><t t-esc="o['state']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </table>
        </div>
    </t>
</templates>
