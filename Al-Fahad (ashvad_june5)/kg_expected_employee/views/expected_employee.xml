<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_emp_management" model="ir.actions.act_window">
        <field name="name">External Employee</field>
        <field name="res_model">expected.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_no content_smiling_face">
                Create Employee Record
            </p>
        </field>
    </record>

    <record id="expected_employee_view_form" model="ir.ui.view">
        <field name="name">expected.employee.view.form</field>
        <field name="model">expected.employee</field>
        <field name="arch" type="xml">
            <form string="School">
                <sheet>
                    <group>
                        <field name="emp_name"/>
                        <field name="department"/>
                        <field name="emp_reg"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="expected_employee_view_tree" model="ir.ui.view">
        <field name="name">expected.employee.tree</field>
        <field name="model">expected.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="emp_name"/>
                <field name="department"/>
                <field name="emp_reg"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_my_model_root" name="External Employee"
             />
    <menuitem id="menu_my_model_root1" name="Employee" parent="menu_my_model_root" sequence="0"
              action="action_emp_management"/>

</odoo>
