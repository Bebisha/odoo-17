<?xml version = "1.0" encoding = "UTF-8" ?>
<odoo>
    <template id="product_enquiry_form" name="Product Enquiry Form">
        <t t-call="website.layout">
            <div class="container mt16 mb16">
                <form action="/shop/product_enquiry/submit" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="product_id" t-att-value="product.id"/>
                    <h1>
                        <label>Enquiry Form</label>
                    </h1>
                    <br/>
                    <div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input style="width:500px;" type="text" name="name" placeholder="Enter your name..."
                                   class="form-control" required="required"/>
                        </div>
                        <br/>
                        <div class="form-group">
                            <label for="phone">Contact Number</label>
                            <input style="width:500px;" type="phone" name="phone"
                                   placeholder="Enter your contact number..." class="form-control" required="required"/>
                        </div>
                        <br/>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input style="width:500px;" type="email" name="email" placeholder="Enter your email..."
                                   class="form-control" required="required"/>
                        </div>
                        <br/>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea style="width:500px;" name="message" placeholder="Type your message..."
                                      class="form-control" required="required"/>
                        </div>
                        <br/>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>


                </form>
            </div>
        </t>
    </template>


    <template id="product_enquiry_thanks" name="Product Enquiry Thanks">
        <t t-call="website.layout">
            <div class="container mt16 mb16">
                <h2 style="background-color:#ACD793;" align="center">Thank You for Your Enquiry</h2>
                <p align="center">We have received your enquiry and will get back to you soon.</p>
            </div>
        </t>
    </template>

</odoo>

