<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_product_enquiry" model="ir.actions.act_window">
            <field name="name">Product Enquiry</field>
            <field name="res_model">product.enquiry</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_enquiry_view_form" model="ir.ui.view">
            <field name="name">product.enquiry.form</field>
            <field name="model">product.enquiry</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="message" readonly="1"/>
                            </group>
                            <group>
                                <field name="email" readonly="1"/>
                                <field name="phone" readonly="1"/>
                            </group>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_enquiry_view_tree" model="ir.ui.view">
            <field name="name">product.enquiry.tree</field>
            <field name="model">product.enquiry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <menuitem
                id="product_enquiry_sale_order"
                name="Enquiries"
                parent="sale.sale_order_menu"
                sequence="20"
                action="action_product_enquiry"/>
    </data>
</odoo>
