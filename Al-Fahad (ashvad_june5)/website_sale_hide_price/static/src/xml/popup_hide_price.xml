<?xml version="1.0" encoding="utf-8" ?>

<templates xml:space="preserve">
    <t t-name="website_sale_hide_price.popups" t-inherit="website_sale.addToCartNotification"
       t-inherit-mode="extension">
        <xpath expr="//div[@t-foreach='props.lines']/div[3]" position="replace">
                <t t-if="line.website_show_price">
                   <div class="col-3 d-flex flex-column align-items-end gap-1"
                        t-out="getFormattedPrice(line)"/>
                </t>
        </xpath>
    </t>
</templates>




