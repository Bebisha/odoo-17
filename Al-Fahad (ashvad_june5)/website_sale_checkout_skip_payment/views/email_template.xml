<odoo>
    <data>
        <record id="sale_order_action_confirm_template" model="mail.template">
            <field name="name">EMAIL TEMPLATE NAME</field>
            <field name="model_id" ref="website_sale_checkout_skip_payment.model_sale_order"/>
            <field name="subject">{{object.company_id.name}}</field>
            <field name="email_from">{{(object.company_id.email)}}</field>
            <field name="partner_to">{{object.user_id.id}}</field>
            <field name="description">Add Description</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        <b>Dear <t t-out="object.user_id.name"/>,
                        </b>
                        <br/>

                        A new Sale Order has been placed by
                        <b>
                            <t t-out="object.partner_id.name"/>
                        </b>
                        <br/>
                        <br/>

                        <b>Order Details:</b>
                        <br/>
                        <br/>
                        - Order Number:
                        <t t-out="object.name"/>
                        <br/>
                        <br/>
                        - Order Date:
                        <t t-out="object.date_order"/>
                        <br/>
                        <br/>
                        - Total Amount:
                        <t t-out="object.amount_total"/>
                        <br/>
                        <br/>
                        <a class="btn btn-primary" role="button"
                           t-att-href="'%s'%object.env.context.get('customer_url')">View
                            Sale 0rder
                        </a>
                        <br/>
                        <br/>

                        Please review the order and take necessary actions.
                        <br/>
                        <br/>
                        Best regards,
                        <br/>
                        <br/>
                        <t t-out=" object.company_id.name"/>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>