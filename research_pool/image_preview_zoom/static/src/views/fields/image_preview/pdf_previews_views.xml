<templates>
    <t t-name="file_preview_zoom.FilePreviewField">
        <!-- Button with the specific classes -->
        <button class="btn btn-link btn-sm lh-1 fa fa-download o_download_file_button">
            <i class="fa fa-2x fa-warning"></i>
        </button>
        <!-- Container for file preview -->
        <div class="file-preview-container">
            <img class="file-preview-image" style="display: none;" />
            <div class="file-name-display">No file selected</div>
        </div>
    </t>
</templates>

