<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_weekly_stock_move">
        <t t-call="web.basic_layout">
            <div class="page">
                <center>
                    <b>
                        <h3>Monthly Stock Move Report</h3>
                    </b>
                </center>
                <center>
                    <b>
                        <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                        To
                        <t t-esc="(datetime.datetime.now() + datetime.timedelta(days=6)).strftime('%Y-%m-%d')"/>
                    </b>
                </center>
                <br/>
                <t t-foreach="docs.get_product_groups().items()" t-as="product_groups">
                    <center>
                        <b>
                            <h4>
                                <t t-esc="product_groups[0]"/>
                            </h4>
                        </b>
                    </center>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Move Reference</th>
                                <th>Source Location</th>
                                <th>Destination Location</th>
                                <th>Quantity</th>
                                <th>Remaining Quantity</th>
                                <th>Move Date</th>
                            </tr>
                        </thead>


                        <tbody>
                            <t t-foreach="product_groups[1]" t-as="move">

                                <tr>
                                    <td>
                                        <t t-esc="move.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="move.location_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="move.location_dest_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="move.product_uom_qty"/>
                                    </td>
                                    <td>
                                         <t t-esc="move.product_id.qty_available - move.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <t t-esc="move.date.strftime('%Y-%m-%d')"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </div>
        </t>


    </template>
    <record id="report_weekly_stock" model="ir.actions.report">
        <field name="name">Monthly Stock Report</field>
        <field name="model">stock.move</field>
        <field name="binding_model_id" ref="model_stock_move"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kg_stock_move_report.report_weekly_stock_move</field>
        <field name="report_file">kg_stock_move_report.report_weekly_stock_move</field>
    </record>

</odoo>