<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_saleorder_aircrafts">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <div class="header" style="margin-bottom:20px;">
                        <table style="width: 100%; margin-bottom: 8px;" class="table-borderless">
                            <tr width="100%">
                                <td style="width: 70%;">
                                    <img t-att-src="image_data_uri(doc.company_id.logo)"
                                         style="max-height:80px; max-width:100%;" alt="Company Logo"/>
                                </td>
                                <td style="text-align: right; vertical-align: bottom;width: 30%;">
                                    <h2 style="margin-top: 5px; font-size: 20px;">CHARTER QUOTE</h2>
                                </td>
                            </tr>
                            <tr width="100%" style="margin:0">
                                <td style="width: 100%;border-top: 1pt solid black;" colspan="2"/>
                            </tr>
                        </table>
                    </div>
                    <p style="font-size: 12px;text-align: right;margin-top: 5px;">VX-575962/EGPD EIKN | 14.08 | OW</p>
                    <div style="margin-top: 20px;">
                        <p>
                            <strong>Dear Valued Client,</strong>
                        </p>
                        <p>
                            Based on your requirement, we are pleased to offer the below options.
                            <br/>
                            Quotes are subject to aircraft availability at the time of confirmation.
                        </p>
                    </div>


                    <table style="width: 100%; border: 1px solid #ccc; border-collapse: collapse; margin-top: 10px; font-size: 13px; height:60pt">
                        <thead style="background-color: #e8cfe2;">
                            <!--                                <tr>-->
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                Date
                            </th>
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                From
                            </th>
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                To
                            </th>
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                Departure
                            </th>
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                Arrival
                            </th>
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                F.T
                            </th>
                            <th style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                PAX
                            </th>
                            <!--                                </tr>-->
                        </thead>
                        <tbody style="border-bottom:1px solid #e8cfe2;">
                            <!--                                <tr style="width: 100%;">-->
                            <td style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                <t t-esc="doc.date_order.strftime('%d.%m.%Y')"/>
                            </td>
                            <td style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                Aberdeen, United Kingdom (EGPD)
                                <!--                                        <t t-esc="doc.route_from or 'Aberdeen, United Kingdom (EGPD)'"/>-->
                            </td>
                            <td style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                Knock, Charlestown, Ireland (EIKN)
                                <!--                                        <t t-esc="doc.route_to or 'Knock, Charlestown, Ireland (EIKN)'"/>-->
                            </td>
                            <td style="border-r€ight: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                10:00
                                <!--                                        <t t-esc="doc.departure_time or '10:00'"/>-->
                            </td>
                            <td style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                11:02
                                <!--                                        <t t-esc="doc.arrival_time or '11:02'"/>-->
                            </td>
                            <td style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                01:02
                                <!--                                        <t t-esc="doc.flight_time or '01:02'"/>-->
                            </td>
                            <td style="border-right: 1pt solid #e8cfe2;padding-left:5px;padding-right:5px;padding-top:5px;padding-bottom:5px;">
                                2
                                <!--                                        <t t-esc="doc.passenger_count or '2'"/>-->
                            </td>
                        </tbody>
                    </table>

                    <!-- AIRCRAFT CARDS -->
                    <t t-foreach="doc.order_line" t-as="line">
                        <div style="margin-top: 30px;" >
                            <div style="background-color: #e8cfe2; padding: 8px;">
                                <strong>
                                    <t t-esc="line.product_id.name"/>
                                </strong>
                                <span style="float: right;">
                                    <strong>€
                                        <t t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                    </strong>
                                </span>

                            </div>

                            <table style="width: 100%; height: 100pt; border-collapse: collapse; border-spacing: 0; border: 0;" class="table-borderless">
                                <tr style="height: 50pt;border: 0;" >

                                    <!-- Left: Main Image -->
                                    <td style="width: 33%; padding: 5px; border: 0;">
                                        <t t-if="line.product_id.product_tmpl_id.image_main">
                                            <img t-att-src="'data:image/*;base64,%s' % line.product_id.product_tmpl_id.image_main.decode('utf-8')"
                                                 style="width: 100%; height: 200pt; object-fit: cover;"/>
                                        </t>
                                    </td>

                                    <!-- Center: Stacked Interior + Layout -->
                                    <td style="width: 33%; padding: 5px; vertical-align: top; border: 0;">
                                        <table style="width: 100%; border-collapse: collapse; border-spacing: 0; border: 0;">
                                            <tr>
                                                <td style="padding: 0; border: 0;">
                                                    <t t-if="line.product_id.product_tmpl_id.image_layout">
                                                        <img t-att-src="'data:image/*;base64,%s' % line.product_id.product_tmpl_id.image_layout.decode('utf-8')"
                                                             style="width: 100%; height: 100pt; object-fit: cover;"/>
                                                    </t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 2px 0 0 0; border: 0;">
                                                    <t t-if="line.product_id.product_tmpl_id.image_interior">
                                                        <img t-att-src="'data:image/*;base64,%s' % line.product_id.product_tmpl_id.image_interior.decode('utf-8')"
                                                             style="width: 100%; height: 100pt; object-fit: cover;"/>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>

                                    <!-- Right: Aircraft Specs -->
                                    <td style="width: 33%; padding-left: 50px; padding-top: 20px; vertical-align: top; border: 0;">
                                        <p><strong>YOM</strong>:
                                            <t t-esc="line.product_id.product_tmpl_id.year_of_manufacture or 'N/A'"/>
                                        </p>
                                        <p><strong>Refurbished</strong>:
                                            <t t-esc="line.product_id.product_tmpl_id.refurbished or 'N/A'"/>
                                        </p>
                                        <p><strong>Seats</strong>:
                                            <t t-esc="line.product_id.product_tmpl_id.seats or 'N/A'"/>
                                        </p>
                                        <p><strong>WiFi</strong>:
                                            <t t-esc="line.product_id.product_tmpl_id.wifi or 'No'"/>
                                        </p>
                                        <p><strong>Smoking</strong>:
                                            <t t-esc="line.product_id.product_tmpl_id.smoking or 'No'"/>
                                        </p>
                                        <p><strong>Remarks</strong>:
                                            <t t-esc="line.product_id.product_tmpl_id.remarks or 'N/A'"/>
                                        </p>
                                    </td>

                                </tr>
                            </table>

                        </div>
                    </t>
                    <!-- Footer -->
                    <div class="footer o_standard_footer">
                        <table width="100%" class="table table-borderless table-sm" style="background-color: #e8cfe2;">
                            <tr>
                                <td>
                                    Abdelkader Hadj Messaoud –
                                </td>
                                <td>
                                    <a href="mailto:abdelkader@voyex.aero" style="color: #000; text-decoration: none;">
                                        abdelkader@voyex.aero
                                    </a>
                                </td>
                                <td>
                                    <a href="https://voyex.aero/" style="color: #000; text-decoration: none;"
                                       target="_blank">
                                        www.voyex.aero
                                    </a>
                                </td>
                            </tr>

                        </table>

                    </div>


                </div>
            </t>
        </t>
    </template>
</odoo>
