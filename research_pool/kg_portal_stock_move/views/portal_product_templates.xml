<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Template for showing Portal product availability-->
    <template id="portal_my_house" name="Portal Product availability"
              customize_show="True"
              inherit_id="portal.portal_my_home" priority="100">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <div class="o_portal_category row g-2 mt-3"
                 id="portal_common_category_stock">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="icon" t-value="'/kg_portal_stock_move/static/description/icn.png'"/>

                    <t t-set="title">Stock Move Availability</t>
                    <t t-set="text">View, check availability of Products in
                        Portal
                    </t>
                    <t t-set="url" t-value="'/my/pro'"/>
                    <t t-set="placeholder_count" t-value="'s_count'"/>
                </t>
            </div>
        </xpath>
    </template>

    <!--    Template for showing product details and quantity in a table-->
    <template id="portal_stock_product_availability" name="Portal availability">
        <t t-call="portal.portal_layout">
            <div class="o_portal_category row g-2 mt-3" id="portal_common_category_move"/>
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Stock Move Availability</t>
            </t>
            <form class="s_website_form form-horizontal container-fluid mt32">
                <style>
                    .form-group > .col-sm-4 {
                    display: inline-block;
                    margin-right: 10px;
                    }
                </style>
                <h3>
                    <label class="col-md-3 col-sm-4 control-label" for="name">Stock Move History</label>
                </h3>
                <br/>
                <div class="form-group">
                    <div class="col-sm-4 col-md-3">
                        <label for="date_from">From</label>
                        <input type="date" name="date_from" class="form-control" id="date_from"
                               style="max-width: 200px;"/>
                    </div>
                    <div class="col-sm-4 col-md-3">
                        <label for="date_to">To</label>
                        <input type="date" name="date_to" class="form-control" id="date_to" style="max-width: 200px;"/>
                    </div>
                </div>
                <br/>
                <div class="col-sm-4 col-md-6 o_website_product_search_move">
                    <input type="text" class="form-control o_portal_product_input_move" id="product_name_input_move"
                           name="products_search_move" required="" placeholder="Search products..."/>
                    <div aria-label="Search" title="Search" clickable="1"
                         style="position: relative;left: 620px;top: -30px;">
                        <i class="fa fa-search" style="color: black;"/>
                    </div>
                </div>
                <div>
                    <div class="product_move_results_table col-sm-13 col-md-15"/>
                </div>
                <a href="/stock/download/move" class="fa fa-download" id="download_products_move">Download</a>
            </form>
        </t>
    </template>
</odoo>
