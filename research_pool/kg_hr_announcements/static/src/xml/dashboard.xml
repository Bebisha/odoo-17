<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="HRDashboard">
        <div class="" style="background-color: #E6E6FA;"> <!-- Light purple background -->
            <div>
                <center>
                    <h1 style="margin:20px;">
                        Employee Dashboard
                    </h1>
                </center>
            </div>
            <t t-call="EmployeeDashboard"/>
        </div>
    </t>
    <t t-name="EmployeeDashboard">
        <div style="text-align: center;">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 2.5%; padding-right: 10px; border-right: 1px solid black;"></td>
                    <td style="width: 95%; border: 1px solid black; padding: 10px;">
                        <div class="col-xs-12 hr_notification" style="height:400px; overflow-y: auto;">
                            <div class="col-xs-12" style="padding: 0;">
                                <div class="hr_notification_head"
                                     style="position: sticky; top: 0; border-bottom: 1px solid black; padding-bottom: 5px; font-weight: bold; height: 50px; font-size: 20px;">
                                    <i class="fa fa-bullhorn fa-lg"></i>
                                    Upcoming Announcements
                                </div>
                            </div>

                            <div>

                                <div class="col-xs-16" style="margin-top: 20px;">
                                    <div class="col-sm-12 col-lg-12"
                                         style="padding: 0; display: flex; justify-content: center;">
                                        <div class="text-color" style="max-width: 100%;">
                                            <div>
                                                <div class="media-body">
                                                    <div id="announcement_data"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </td>
                    <td style="width: 2.5%; padding-left: 10px;"></td>
                </tr>
            </table>
        </div>
    </t>
</templates>
