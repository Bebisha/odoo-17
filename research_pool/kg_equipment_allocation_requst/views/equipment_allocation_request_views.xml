<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.ui.view" id="equipment_form_view">
        <field name="name">equipment.allocation.request.form</field>
        <field name="model">equipment.allocation.request</field>
        <field name="arch" type="xml">
            <form string="Employee Equipment">
                <header>
                    <button type="object" string="Submit To Manager" name="submit_to_manager"
                            class="oe_highlight" state="waiting" invisible="state != 'new'"/>
                    <button type="object" string="Validate" name="validate_allocation"
                            confirm="Are you sure you want to validate this personal equipment allocation?"
                            class="oe_highlight" state="allocated" invisible="state != 'waiting'"/>
                    <button type="object" string="Reject" name="reject_allocation"
                            confirm="Are you sure you want to expire this personal equipment allocation?" state="rejected" invisible="state != 'waiting'"/>
                    <button type="object" string="Return" name="return_allocation"
                            state="rejected"  invisible="state != 'allocated'"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="new,waiting,allocated,rejected,return"/>
                </header>
                <sheet>
                    <field name="request_number"/>
                    <h1>
                        <field name="name" placeholder="e.g. John Doe" required="1"/>
                    </h1>
                    <group>

                        <group name="main">
                            <field name="employee_id"/>

                            <field name="equipment_id"/>
                            <field name="allocation_type" widget="radio"/>
                        </group>

                        <group>
                            <field name="start_date"/>
                            <field name="allocation_date" invisible="state in ['new', 'waiting']"/>

                            <label for="duration_type" string="Duration"/>
                            <div class="row">
                                <div class="col">
                                    <field name="duration_value" col="1"/>
                                </div>
                                <div class="col">
                                    <field name="duration_type" col="3"/>
                                </div>
                            </div>
                             <field name="expected_return_date" invisible="state  in ['new', 'waiting']"/>
                            <field name="return_date" invisible="state != 'return'"/>


                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Add a description..."
                                       options="{'collaborative': true}"/>
                            </page>
                        </notebook>

                    </group>


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="equipment_tree_view">
        <field name="name">equipment.allocation.request.tree</field>
        <field name="model">equipment.allocation.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="equipment_id"/>
                <!--                <field name="product_id"/>-->
                <!--                <field name="employee_id" groups="hr.group_hr_user"/>-->
                <!--                <field name="quantity"/>-->
                <!--                <field name="product_uom_id"/>-->
                <!--                <field name="start_date"/>-->
                <!--                <field name="state"/>-->
                <!--                <field name="equipment_request_id" invisible="1"/>-->
            </tree>
        </field>
    </record>
