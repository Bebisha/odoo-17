    </record>
    <record model="ir.actions.act_window" id="equipment_act_window">
        <field name="name">Allocations</field>
        <field name="res_model">equipment.allocation.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_filter_valid_state':1}</field>
    </record>

    <record model="ir.ui.menu" id="hr_personal_equipment_menu">
        <field name="name">Equipment Allocation</field>
        <field name="parent_id" ref="maintenance.menu_maintenance_title"/>
