<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--        Adding document details as smart button in employee. -->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.oh.employee.documents.expiry</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <!--                <button class="oe_stat_button" name="action_document_view" type="object" icon="fa-list-ol">-->
                <!--&lt;!&ndash;                    <field string="Documents" name="document_count" widget="statinfo"/>&ndash;&gt;-->
                <!--                </button>-->
            </div>

        </field>
    </record>
    <!--     Form view of hr_employee_document model -->
    <record id="hr_employee_document_view_form" model="ir.ui.view">
        <field name="name">hr.employee.document.view.form</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_ref_id" string="Employee"/>
                            <field name="document_type_id"/>
                            <!--                            <field name="doc_attachment_ids" widget="many2many_binary" class="oe_inline"/>-->
                            <label for="doc_attachment_ids"/>
                            <!--                            <div style="display: flex; align-items: center;">-->
                            <!--                                <field name="doc_attachment_ids" widget="many2many_binary" class="oe_inline"/>-->
                            <!--                                  <i class="fa fa-print" style="margin-left: 15px;" />-->
                            <!--                                <button  class="oe_link oe_read_only pt-0" title="Import Data" name ="demo"-->
                            <!--                                       >-->

                            <!--                                </button>-->
                            <!--                            </div>-->
                            <div class="oe_inline">
                                <field name="doc_attachment_ids" widget="many2many_binary" class="oe_inline"/>
                                <!-- Button for import -->
                                <button name ="demo" type="button" id="import_button" class="btn btn-primary o_import_button"
                                        title="Import Data" >
                                    <i class="fa fa-upload"/>
                                    Import
                                </button>
                            </div>
                            <field name="attachment_filename" icon="fa-download" invisible="1"/>
                            <field name="download_link" icon="fa-download" invisible="1"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="notification_type"/>
                            <field name="before_days" invisible="notification_type == 'single'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
       <field name="name">sale.order</field>
       <field name="model">sale.order</field>
       <field name="inherit_id" ref="sale.view_order_form"/>
       <field name="arch" type="xml">
           <xpath expr="//form" position="attributes">
               <attribute name="js_class">model_info</attribute>
           </xpath>
       </field>
   </record>
    <!--     Tree view of hr_employee_document model -->
    <record id="hr_employee_document_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.document.views.tree</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="document_type_id"/>
                <field name="expiry_date"/>
                <field name="document_id" string="Employee"/>
            </tree>
        </field>
    </record>
    <!--     Defines a search view for HR Employee Documents. -->
    <record id="hr_employee_document_view_search" model="ir.ui.view">
        <field name="name">hr.employee.document.view.search</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <search string="Employee Documents">
                <group expand="0" string="Group By">
                    <filter name="Employee" string="Employee" domain="[]" context="{'group_by':'document_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <!--     Configures an action window for HR Employee Documents. -->
    <record id="hr_employee_document_action" model="ir.actions.act_window">
        <field name="name">Employee Documents</field>
        <field name="res_model">hr.employee.document</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--         Creates a menu item for HR Employee Documents.-->
    <menuitem id="hr_employee_document_menu" name="Documents" parent="hr.menu_hr_employee_payroll"
              action="hr_employee_document_action" groups="hr.group_hr_manager"/>
</odoo>