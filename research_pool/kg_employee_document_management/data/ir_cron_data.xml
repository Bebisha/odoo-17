<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <!-- Scheduled action to sent mail about the document expiry.-->
        <record id="ir_cron_scheduler_employee_reminder" model="ir.cron">
            <field name="name">Employee Document Expiration</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.mail_reminder()</field>
        </record>

        <!-- Scheduled action to sent mail about the document expiry.-->
        <record id="ir_cron_scheduler_employee_reminder_vishnu" model="ir.cron">
            <field name="name">Employee Document Expiration to HR New</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_employee_document"/>
            <field name="state">code</field>
            <field name="code">model.hr_mail_reminder()</field>
        </record>
    </data>
</odoo>
