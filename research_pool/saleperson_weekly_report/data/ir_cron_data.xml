<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <!-- Scheduled action to sent mail about the document expiry.-->
        <record id="ir_cron_scheduler_salesperson_report" model="ir.cron">
            <field name="name">Sales Person Week update</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.mail_weekly_sales_report()</field>
        </record>
        <record id="ir_cron_monthly_sales_report" model="ir.cron">
            <field name="name">Monthly Sales Report</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.mail_monthly_sales_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall"
                   eval="(DateTime.now() + relativedelta(day=31, months=+1)).strftime('%Y-%m-%d 00:00:00')"/>
        </record>

    </data>
</odoo>