<odoo>
    <data>

        <record id="sif_report_action_view" model="ir.actions.act_window">
            <field name="name">Salary Information File (SIF)</field>
            <field name="target">new</field>
            <field name="res_model">sif.report.wizard</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem id="sif_report_wizard_menu"
                  parent="hr_payroll.menu_hr_payroll_report" action="sif_report_action_view"/>

        <record id="sif_report_wizard_form" model="ir.ui.view">
            <field name="name">sif.report.wizard.form</field>
            <field name="model">sif.report.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Salary Information File">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="fileout" invisible="1"/>
                            <field name="fileout_filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print xlsx" name="print_sif_xlsx" type="object" class="btn-primary"/>
                        <button string="Cancel" name="cancel" type="object" special="cancel" class="btn-cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>

