<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="standard_used_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Standard Used</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">standard.used</field>

    </record>
    <record id="standard_used_tree" model="ir.ui.view">
        <field name="name">work.instruction.tree.views</field>
        <field name="model">standard.used</field>
        <field name="arch" type="xml">
            <tree>
                <field name="scope_id" domain="[('is_scope', '=', True)]" string="SCOPE"/>
                <field name="product_category_id" string="INSTRUMENTS" domain="[('parent_id','=',scope_id)]"/>
                <field name="name"/>
                <field name="display_name" invisible="1"/>


            </tree>
        </field>
    </record>
    <record id="standard_used_form" model="ir.ui.view">
        <field name="name">standard.used.form.views</field>
        <field name="model">standard.used</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="scope_id" domain="[('is_scope', '=', True)]" string="SCOPE"/>
                            <field name="product_category_id" string="INSTRUMENTS" domain="[('parent_id','=',scope_id)]"/>
                            <field name="name"/>
                            <field name="display_name" invisible="1"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="standard_used_menu"
              action="standard_used_action"
              name="Standard Used"
              parent="job_sheet_menu_03"/>

</odoo>
