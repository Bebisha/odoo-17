    <record id="kg_product_template_form_view_inherit003" model="ir.ui.view">
        <field name="name">kg.product.templates.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="domain">['&amp;',('product_group_id', '=', product_group_id),('parent_id','=',False)]</attribute>
            </xpath>

        </field>
    </record>
    <record id="kg_product_template_form_view_inherit004" model="ir.ui.view">
        <field name="name">kg.product.prodct.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="domain">['&amp;',('product_group_id', '=', product_group_id),('parent_id','=',False)]</attribute>
            </xpath>

        </field>
    </record>


