     <record id="product_template_group_inherit_view_int" model="ir.ui.view">
        <field name="name">product.template.inherit.group</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_po_id']" position='after'>
                <field name="is_equipment"/>
            </xpath>
        </field>
     </record>
     <record id="action_product_template_custom_scope" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
         <field name="domain">[('is_equipment','=',True)]</field>
        <field name="context">{'search_default_is_equipment': 1,'default_is_equipment': True,'default_detailed_type': 'product','default_product_group_id':'Calibration'}
        </field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
    </record>

