<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- School Form -->
    <record model="ir.ui.view" id="equipment_master_form">
        <field name="name">equipment.tool.master</field>
        <field name="model">equipment.master</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="equipment_category"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- School List -->
    <record model="ir.ui.view" id="equipment_master_list">
        <field name="name">equipment.tool.master.list</field>
        <field name="model">equipment.master</field>
        <field name="arch" type="xml">
            <tree string="Equipment List">
                 <field name="name"/>
                <field name="equipment_category"/>

            </tree>
        </field>
    </record>

    <!-- School Search -->
    <record model="ir.ui.view" id="equipment_master_search">
        <field name="name">equipment.master.search</field>
        <field name="model">equipment.master</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- School Action -->
    <record model="ir.actions.act_window" id="equipment_master_action">
        <field name="name">Equipment</field>
        <field name="res_model">equipment.master</field>
        <field name="view_mode">tree,form</field>
    </record>
