<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_timesheet_confirm_wizard_form" model="ir.ui.view">
        <field name="name">timesheet.confirm.wizard.form</field>
        <field name="model">timesheet.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Duplicate Timesheet Found" class="o_form_dialog">
                <div class="oe_title">
                    <h4>Duplicate Timesheet</h4>
                </div>

                <div style="margin-top: 8px;">
                    <p style="font-size: 13px;">
                        A timesheet already exists for the same date, task, and user.
                        Do you want to create another one?
                    </p>
                </div>

                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Create Anyway"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
