<odoo>
    <data>

        <record id="kg_brands_action" model="ir.actions.act_window">
            <field name="name">Brands</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_product_brands" name="Brands" parent="stock.menu_product_in_config_stock"
                  action="kg_brands_action"/>

        <record model="ir.ui.view" id="product_brands_tree">
            <field name="name">product.brand.tree</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree string="Brands">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="old_code"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_brands_form">
            <field name="name">product.brand.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Brands">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="code" required="1"/>
                                <field name="old_code" required="1"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>