<odoo>
    <data>

        <record id="sub_category_action" model="ir.actions.act_window">
            <field name="name">Sub Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sub.category</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_sub_category" name="Sub Category" parent="stock.menu_product_in_config_stock"
                  action="sub_category_action"/>

        <record model="ir.ui.view" id="sub_category_tree">
            <field name="name">sub.category.tree</field>
            <field name="model">sub.category</field>
            <field name="arch" type="xml">
                <tree string="Sub Category">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sub_category_form">
            <field name="name">sub.category.form</field>
            <field name="model">sub.category</field>
            <field name="arch" type="xml">
                <form string="Sub Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>