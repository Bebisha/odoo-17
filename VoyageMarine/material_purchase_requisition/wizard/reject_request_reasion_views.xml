<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_rejection_reason_wizard" model="ir.ui.view">
        <field name="name">mr.reject.reason.wizard.form</field>
        <field name="model">rejection.reason.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="mr_id" invisible="1" force_save="1"/>
                        <field name="rejection_reason" required="1"/>
                        <field name="is_reject" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Submit" type="object" name="action_reject_button" class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
