<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="group_id" options="{'no_create': True}"/>
                <field name="groups_approved_ids" string="Groups Approved" widget="many2many_tags" invisible="1"/>
                <field name="users" readonly="0" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="operating_unit_id" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group name="gsm_group" string="GSM details">
                    <group>
                        <field name="gsn_number" string="GSM No."/>
                        <field name="usage_limit" string="Limit"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Purchase Requisition Settings" invisible="1">
                    <group>
                        <field name="destination_location_id" groups="hr.group_hr_manager"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>