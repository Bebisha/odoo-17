<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_type_tree" model="ir.ui.view">
        <field name="name">purchase.type.tree</field>
        <field name="model">purchase.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_purchase_type_form" model="ir.ui.view">
        <field name="name">purchase.type.form</field>
        <field name="model">purchase.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_purchase_type" model="ir.actions.act_window">
        <field name="name">Purchase Type</field>
        <field name="res_model">purchase.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_conf" name="Configuration" parent="material_purchase_requisition.menu_requisition"
              sequence="5"/>
    <menuitem id="menu_purchase_type"
              name="Purchase Type"
              action ="action_purchase_type"
              parent="menu_conf"
              sequence="1"/>

</odoo>