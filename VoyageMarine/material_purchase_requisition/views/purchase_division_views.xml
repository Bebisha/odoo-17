<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_division_tree" model="ir.ui.view">
        <field name="name">purchase.division.tree</field>
        <field name="model">purchase.division</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="purchase_type_id"/>
            </tree>
        </field>
    </record>
    <record id="view_purchase_division_form" model="ir.ui.view">
        <field name="name">purchase.division.form</field>
        <field name="model">purchase.division</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="purchase_type_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_purchase_division" model="ir.actions.act_window">
        <field name="name">Purchase Division</field>
        <field name="res_model">purchase.division</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_purchase_division"
              name="Purchase Division"
              action ="action_purchase_division"
              parent="menu_conf"
              sequence="1"/>

</odoo>