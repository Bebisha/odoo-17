<odoo>
    <data>
        <record id="invoice_attachment_master_action" model="ir.actions.act_window">
            <field name="name">Invoice Attachments</field>
            <field name="res_model">invoice.attachment.master</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="invoice_attachment_master_menu_id" action="invoice_attachment_master_action"
                  parent="account.account_invoicing_menu" sequence="4"/>

        <record id="invoice_attachment_master_view_tree" model="ir.ui.view">
            <field name="name">Invoice Attachments Tree View</field>
            <field name="model">invoice.attachment.master</field>
            <field name="arch" type="xml">
                <tree string="Invoice Attachments">
                    <field name="name"/>
                    <field name="bill_type"/>
                    <field name="invoice_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="invoice_attachment_master_view_form" model="ir.ui.view">
            <field name="name">Invoice Attachments Form View</field>
            <field name="model">invoice.attachment.master</field>
            <field name="arch" type="xml">
                <form string="Invoice Attachments">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="bill_type"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>