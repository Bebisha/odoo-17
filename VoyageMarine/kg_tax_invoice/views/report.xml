<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_tax_print" model="report.paperformat">
        <field name="name">Tax Invoice Print</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">50</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">50</field>
        <field name="disable_shrinking" eval="False"/>
        <field name="dpi">90</field>
    </record>

    <record id="standard_pdf_tax_invoice_report" model="ir.actions.report">
        <field name="name">Tax Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kg_tax_invoice.voyage_tax_invoice_report</field>
        <field name="report_file">kg_tax_invoice.voyage_tax_invoice_report</field>
        <field name="print_report_name">('Tax Invoice')</field>
        <field name="binding_model_id" ref="account_accountant.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_tax_print"/>
    </record>
</odoo>