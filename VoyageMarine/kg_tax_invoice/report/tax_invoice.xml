            <t t-foreach="docs" t-as="doc">
                <t t-foreach="range(4)" t-as="index">
                    <t t-set="copy_label">
                        <t t-if="index == 0">Customer Copy</t>
                        <t t-elif="index == 1">Copy - 1</t>
