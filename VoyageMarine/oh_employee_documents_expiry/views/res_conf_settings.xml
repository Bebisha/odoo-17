<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_document_exp_setting_new" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.schedular</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="80"/>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='work_organization_setting_container']" position="before">
                     <block title="Document Expiry" name="work_document_exp_setting_container">
                        <setting company_dependent="1" help="Configure the users for receiving document expiry notification" id="default_doc_exp">
                            <field name="hr_expiry_manager_ids" required="1" widget="many2many_tags" class="o_light_label" />
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
