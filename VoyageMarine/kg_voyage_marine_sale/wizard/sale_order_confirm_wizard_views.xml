<odoo>
    <record id="view_sale_order_confirm_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.confirm.wizard.form</field>
        <field name="model">sale.order.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Purchase Reference">
                <p>Please enter the Customerâ€™s PO Reference before confirming this quotation.</p>
                <group>
                    <field name="po_reference"/>
                </group>
                <footer>
                    <button string="Save" type="object" name="action_confirm_with_reference" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_confirm_wizard" model="ir.actions.act_window">
        <field name="name">Purchase Reference</field>
        <field name="res_model">sale.order.confirm.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
