<odoo>
    <record id="view_order_line_wizard_form" model="ir.ui.view">
        <field name="name">order.line.wizard.form</field>
        <field name="model">order.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Order Lines Wizard">
                <sheet>
                    <group>
                        <field name="order_line_ids">
                            <tree editable="bottom" create="0" >
                                <field name="order_line_id" column_invisible="1"/>
                                <field name="name"/>
                                <field name="product_group_id"/>
                                <field name="category_id"/>
                                <button name="action_create_product" type="object" string="Create Product"
                                        class="btn-primary"/>
<!--                                        attrs="{'invisible': [('product_created', '=', True)]}"/>-->
                            </tree>
                        </field>
                    </group>
                    <footer>
                         <button name="action_create_all_products" type="object" string="Create All Products"
                                class="btn-primary"/>
<!--                                attrs="{'invisible': [('all_products_created', '=', True)]}"/>-->
                        <button string="Close" class="btn-secondary" special="cancel"/>
                        <!--                        <button string="Created Product" class="btn-secondary" special="cancel"/>-->
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
