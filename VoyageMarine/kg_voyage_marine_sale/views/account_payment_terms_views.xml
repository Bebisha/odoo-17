<odoo>
    <data>

        <record id="kg_view_payment_term_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.term.view.form.inherit</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="after">
                    <label for="days"/>
                    <field name="days"/>
                </xpath>
            </field>
        </record>

        <record id="kg_view_payment_term_tree_inherit" model="ir.ui.view">
            <field name="name">account.payment.term.view.tree.inherit</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="days"/>
                </field>
            </field>
        </record>

    </data>
</odoo>