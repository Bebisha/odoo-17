<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_package_list_form" model="ir.ui.view">
        <field name="name">package.list.form</field>
        <field name="model">package.list</field>
        <field name="arch" type="xml">
            <form string="Package List">
                <header>
                    <button name="action_cipl" string="Print CIPL" type="object"
                            class="btn-primary"

                    />
                </header>
                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_sale_order"
                                type="object" icon="fa-bars" string="Sale Order" invisible="packing_form_count == 0">
                            <field name="packing_form_count" widget="statinfo" string="Sale Order"/>


                        </button>

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1" string="Packing list no"/>
                            <field name="sale_order_id"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                            <field name="consignee_id"/>
                            <field name="bill_id"/>
                            <field name="invoice_id"/>
                            <field name="vessel_id"/>
                            <field name="project_name"/>
                            <field name="job_no"/>
                            <field name="po_ids" widget="many2many_tags" invisible="1"/>
                            <field name="po_reference" />


                        </group>
                        <group>
                            <field name="commercial_inv_no" readonly="1" force_save="1"/>
                            <field name="model_of_transport"/>
                            <field name="no_of_packages"/>
                            <field name="total_net_weight"/>
                            <field name="total_gross_weight"/>
                            <field name="total_volume"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Packing Lines Tab -->
                        <page string="Packing Lines">
                            <field name="packing_line_ids">
                                <tree editable="bottom">
                                    <field name="box_no"/>
                                    <field name="tag_no"/>
                                    <field name="product_id"/>
                                    <field name="product_tempt_id" optional="hide"/>
                                    <field name="description"/>
                                    <field name="product_uom_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                    <field name="net_weight_per_unit"/>
                                    <field name="dimension_l"/>
                                    <field name="dimension_w"/>
                                    <field name="dimension_h"/>
                                    <field name="gross_weight"/>
                                    <field name="packing_type"/>
                                </tree>
                            </field>
                        </page>
                        <!-- Commercial Lines Tab -->
                        <page string="Commercial Lines">
                            <field name="commercial_line_ids">
                                <tree editable="bottom">
                                     <field name="box_no" />
                                    <field name="tag_no" string="PO Item No."/>
                                    <field name="product_id"/>
                                    <field name="product_tempt_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                    <field name="country_of_orgin"/>
                                    <field name="hs_code"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_package_list_tree" model="ir.ui.view">
        <field name="name">package.list.tree</field>
        <field name="model">package.list</field>
        <field name="arch" type="xml">
            <tree string="Package List">
                <field name="sale_order_id"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_package_list" model="ir.actions.act_window">
        <field name="name">Package List</field>
        <field name="res_model">package.list</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Package List
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_package_list_main" name="Package Management" sequence="10"/>
    <menuitem id="menu_package_list" name="Package List" parent="sale.sale_menu_root" action="action_package_list"
              sequence="20"/>

    <menuitem id="menu_package_list_inventory" name="Package List" parent="stock.menu_stock_root" action="action_package_list"
              sequence="20"/>
</odoo>
