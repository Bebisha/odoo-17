<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherit_view" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_ok']" position='after'>
<!--                <field name="is_discount_product"/>-->
            </xpath>
        </field>
    </record>

        <record id="product_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.view.form.inherit1</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="is_discount_product"/>
            </field>

        </field>
    </record>
</odoo>