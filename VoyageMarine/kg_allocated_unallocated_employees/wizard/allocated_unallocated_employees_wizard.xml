<odoo>

    <record id="allocated_unallocated_emp_form_view" model="ir.ui.view">
        <field name="name">allocated.unallocated.employees.form.view</field>
        <field name="model">allocated.unallocated.employees</field>
        <field name="arch" type="xml">
            <form string="Allocated Unallocated Employees">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="company_id" required="1"/>
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

     <record id="action_allocated_unallocated_emp_wizard" model="ir.actions.act_window">
        <field name="name">Allocated/Unallocated Employees</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">allocated.unallocated.employees</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="allocated_unallocated_emp_menu" action="action_allocated_unallocated_emp_wizard"
              parent="hr.hr_menu_hr_reports" sequence="16"/>

</odoo>