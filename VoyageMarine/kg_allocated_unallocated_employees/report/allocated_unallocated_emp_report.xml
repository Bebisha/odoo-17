<odoo>
    <template id="allocated_unallocated_emp_tmp">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
            <div class="page">
                <div class="header">
                    <table class='table-borderless' width="100%">
                        <tr width="100%">
                            <td width="75%" align="left" style="font-size:20px;padding-top:50px;">
                                <strong>
                                    <span t-esc="company_name"/>
                                </strong>
                            </td>
                            <td width="25%" align="right" style="padding-top:50px;">
                                <strong>
                                    <span>Page:
                                        <span class="page"/>
                                        of
                                        <span class="topage"/>
                                    </span>
                                </strong>
                            </td>
                        </tr>
                        <tr width="100%">
                            <td width="100%" align="left" style="font-size:10px;" colspan="2">
                                <t t-if="company_zip">
                                    <span>P.O.Box:</span>
                                    <span t-esc="company_zip"/>,
                                </t>
                                <t t-if="company_state">
                                    <span t-esc="company_state"/>,
                                </t>
                                <t t-if="company_country_code">
                                    <span t-esc="company_country_code"/>
                                </t>
                            </td>
                        </tr>
                        <br/>
                    <tr width="40%">
                        <td width="20%" align="left" style="font-size:10px;">
                            <span>Date From : </span><span t-esc="start_date"/><span> Date To : </span><span t-esc="end_date"/>
                        </td>
                        </tr>
                    </table>
                </div>

                <table class='table-borderless' width="100%">
                        <tr width="100%">
                            <td width="100%" align="center" style="font-size:10px;padding-top:20px;" colspan="2">
                                <h5>
                                    <strong>
                                    <span>Allocated Employees</span>
                                </strong>
                                </h5>
                            </td>
                        </tr>
                    </table>
                <div class="mt32">
                    <table width="100%" style="border-collapse:collapse;">
                        <tr>
                            <!-- Allocated Employees -->
                            <td valign="top" style="padding:5px;">
                                <table width="100%" style="border-collapse:collapse; border:1px solid #000;">
                                    <thead>
                                        <tr>
                                            <th style="border:1px solid #000; text-align:center; width:10%;padding:5px;">Sl.No</th>
                                            <th style="border:1px solid #000; text-align:left;padding:5px;">Emp ID</th>
                                            <th style="border:1px solid #000; text-align:left;padding:5px;">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="allocated_employees">
                                            <t t-set="i" t-value="1"/>
                                            <t t-foreach="allocated_employees" t-as="emp">
                                                <tr>
                                                    <td style="border:1px solid #000; text-align:center;padding:5px;">
                                                        <span t-esc="i"/>
                                                        <t t-set="i" t-value="i+1"/>
                                                    </td>
                                                    <td style="border:1px solid #000;padding:5px;">
                                                        <span t-esc="emp['employee_no']"/>
                                                    </td>
                                                    <td style="border:1px solid #000;padding:5px;">
                                                        <span t-esc="emp['name']"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <t t-if="not allocated_employees">
                                            <tr>
                                                <td colspan="2" style="border:1px solid #000; text-align:center;padding:5px;">
                                                    No Allocated Employees
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </td>

                        </tr>
                    </table>
                </div>

                <table class='table-borderless' width="100%" style="page-break-before: always;">

                        <tr width="100%">
                            <td width="100%" align="center" style="font-size:10px;padding-top:20px;" colspan="2">
                                <h5>
                                    <strong>
                                    <span>Unallocated Employees</span>
                                </strong>
                                </h5>
                                
                            </td>
                        </tr>
                    </table>
                <div class="mt32">
                    <table width="100%" style="border-collapse:collapse;">
                        <tr>
                            <!-- Unallocated Employees -->
                            <td valign="top" style="padding:5px;">
                                <table width="100%" style="border-collapse:collapse; border:1px solid #000;">
                                    <thead>
                                        <tr>
                                            <th style="border:1px solid #000; text-align:center; width:10%;padding:5px;">Sl.No</th>
                                            <th style="border:1px solid #000; text-align:left;padding:5px;">Emp ID</th>
                                            <th style="border:1px solid #000; text-align:left;padding:5px;">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="unallocated_employees">
                                            <t t-set="j" t-value="1"/>
                                            <t t-foreach="unallocated_employees" t-as="emp">
                                                <tr>
                                                    <td style="border:1px solid #000; text-align:center;padding:5px;">
                                                        <span t-esc="j"/>
                                                        <t t-set="j" t-value="j+1"/>
                                                    </td>
                                                    <td style="border:1px solid #000;padding:5px;">
                                                        <span t-esc="emp['employee_no']"/>
                                                    </td>
                                                    <td style="border:1px solid #000;padding:5px;">
                                                        <span t-esc="emp['name']"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <t t-if="not unallocated_employees">
                                            <tr>
                                                <td colspan="2" style="border:1px solid #000; text-align:center;padding:5px;">
                                                    No Unallocated Employees
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>


            </div>
            </t>
        </t>
    </template>
</odoo>