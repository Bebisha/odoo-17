<odoo>

    <record id="res_config_settings_view_form_kg" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='crm']" position="inside">
                <div id='margin'>
                    <h2>Estimation Margin</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="margin" string="Estimation Margin"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="margin" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>