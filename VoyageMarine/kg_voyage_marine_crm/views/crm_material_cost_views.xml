<odoo>
    <data>

        <record id="action_material_cost" model="ir.actions.act_window">
            <field name="name">Material Cost</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.material.cost</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>

        <record id="material_cost_tree_view" model="ir.ui.view">
            <field name="name">kg.materialcost.tree.view</field>
            <field name="model">crm.material.cost</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="is_confirm" column_invisible="1"/>
                    <field name="code" required="1" />
                    <field name="product_id" required="1" />
                    <field name="description" widget="section_and_note_text" />
                    <field name="quantity" />
                    <field name="uom_id" />
                    <field name="margin" />
                    <field name="unit_price" />
                    <field name="total" sum="Total" />
                    <field name="main_product_id" column_invisible="1"/>
                    <button name="unlink" type="object" icon="fa-trash" title="Delete"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>