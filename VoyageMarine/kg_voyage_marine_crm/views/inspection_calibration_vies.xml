    <!-- Tree View -->
    <record id="view_tree_inspection_calibration" model="ir.ui.view">
        <field name="name">inspection.calibration.tree</field>
        <field name="model">inspection.calibration</field>
        <field name="arch" type="xml">
            <tree string="Inspection Calibrations">
                <field name="product_ids"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_form_inspection_calibration" model="ir.ui.view">
        <field name="name">inspection.calibration.form</field>
        <field name="model">inspection.calibration</field>
        <field name="arch" type="xml">
            <form string="Inspection Calibration">
                <sheet>
                    <group>
                        <field name="product_ids">
                            <tree editable="bottom">
                                <field name="name"/>
<!--                                <field name="type"/>-->
<!--                                <field name="sale_ok"/>-->
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
