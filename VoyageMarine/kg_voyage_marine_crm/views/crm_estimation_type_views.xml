<odoo>
    <data>

        <record id="action_estimation_type" model="ir.actions.act_window">
            <field name="name">Estimation Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.estimation.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_crm_estimation_type" name="Type of Work" parent="crm.crm_menu_config"
                  action="action_estimation_type"/>

        <record model="ir.ui.view" id="estimation_type_tree">
            <field name="name">estimation.type.tree</field>
            <field name="model">crm.estimation.type</field>
            <field name="arch" type="xml">
                <tree string="Type of Work">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="estimation_type_form">
            <field name="name">crm.estimation.type.form</field>
            <field name="model">crm.estimation.type</field>
            <field name="arch" type="xml">
                <form string="Type of Work">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>