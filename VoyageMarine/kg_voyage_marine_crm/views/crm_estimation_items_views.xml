<odoo>
    <data>

        <record id="action_items_cost" model="ir.actions.act_window">
            <field name="name">Items Cost</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.estimation.item</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>

        <record id="items_cost_tree_view" model="ir.ui.view">
            <field name="name">kg.crm.estimation.item.tree.view</field>
            <field name="model">crm.estimation.item</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="is_confirm" column_invisible="1"/>
                    <field name="code" required="1"/>
                    <field name="product_id"/>
                    <field name="description" widget="section_and_note_text"/>
                    <field name="quantity"/>
                    <field name="is_sub_item" column_invisible="1"/>
                    <field name="uom_id"/>
                    <field name="margin"/>
                    <field name="unit_price"/>
                    <field name="total" sum="Total"/>
                    <field name="main_product_id" column_invisible="1"/>
                    <field name="subitems_total" column_invisible="1"/>
                    <button name="unlink" type="object" icon="fa-trash" title="Delete"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>