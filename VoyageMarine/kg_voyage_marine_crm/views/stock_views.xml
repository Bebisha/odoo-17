                <field name="model_id" column_invisible="parent.picking_code != 'incoming'"/>
                <field name="make_id" column_invisible="parent.picking_code != 'incoming'"/>
                <field name="make" column_invisible="1"/>
                <field name="remark" column_invisible="parent.picking_code != 'incoming'"/>
