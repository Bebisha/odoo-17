<odoo>
    <data>
        <record id="inspection_lead_access_rule" model="ir.rule">
            <field name="name">Inspection Leads Access Rule</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="domain_force">[('inspection_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <!--            <field name="perm_read" eval="1"/>-->
            <!--            <field name="perm_write" eval="1"/>-->
            <!--            <field name="perm_create" eval="0"/>-->
            <!--            <field name="perm_unlink" eval="0"/>-->
        </record>

        <record id="inspection_lead_access_rule_admin" model="ir.rule">
            <field name="name">Inspection Leads Administrator</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

    </data>
</odoo>