<odoo>
    <data>
        <record model="ir.ui.view" id="kg_create_rfq_form_view">
            <field name="name">Create RFQ</field>
            <field name="model">kg.create.rfq.wizard</field>
            <field name="arch" type="xml">
                <form string="Create RFQ Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="vendor_id" domain="[('supplier_rank','>', 0) ]"/>
                                <field name="x_new_vendor_remark"
                                       placeholder="Please enter the vendor name as it is new."/>
                                <field name="estimation_id" readonly="1" force_save="1" invisible="not estimation_id"/>
                                <field name="opportunity_id" readonly="1" force_save="1"
                                       invisible="not opportunity_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines" name="kg_wizard_order_lines">
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="code"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="units" optional="hide"/>
                                        <field name="qty"/>
                                        <field name="price_unit"/>
                                        <field name="total"/>
                                        <field name="material_cost_id" column_invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="kg_create_rfq_button" type="object" class="btn-primary"
                                string="Create RFQ"/>
                        <button string="Cancel" special="cancel" class="btn-secondary" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="kg_create_rfq_form_view_action" model="ir.actions.act_window">
            <field name="name">Create RFQ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kg.create.rfq.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="kg_create_rfq_form_view"/>
            <field name="target">new</field>
        </record>



    </data>
</odoo>
