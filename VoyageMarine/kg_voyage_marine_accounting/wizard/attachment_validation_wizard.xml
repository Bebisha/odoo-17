<odoo>
    <record id="view_attachment_validation_wizard_form" model="ir.ui.view">
        <field name="name">attachment.validation.wizard.form</field>
        <field name="model">attachment.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Attachment Validation">

                <field name="sale_order_ids" widget="many2many_tags" invisible="1"/>
                <field name="message" nolabel="1"/>

                <footer>
                    <button string="Skip and Create Invoice" type="object" class="btn-primary" name="create_invoice"/>
                    <button string="Cancel/Update Attachment" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_attachment_validation_wizard_for" model="ir.actions.act_window">
        <field name="name">Warning</field>
        <field name="res_model">attachment.validation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
