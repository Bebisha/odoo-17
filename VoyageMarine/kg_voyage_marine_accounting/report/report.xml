<odoo>
    <data>
        <record id="action_soa_report" model="ir.actions.report">
            <field name="name">Statement of Account</field>
            <field name="model">statement.account.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kg_voyage_marine_accounting.soa_report_template_id</field>
            <field name="report_file">kg_voyage_marine_accounting.soa_report_template_id</field>
            <field name="print_report_name">'Statement of Account'</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="kg_voyage_marine_accounting.paperformat_custom_soa"/>
        </record>
        <record id="action_report_credit_note" model="ir.actions.report">
            <field name="name">Credit Note</field>
            <field name="model">account.move</field>
<!--            <field name="domain">[('move_type', '=', 'out_refund')]</field>-->
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kg_voyage_marine_accounting.report_credit_note</field>
            <field name="report_file">kg_voyage_marine_accounting.report_credit_note</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="print_report_name">'Credit Note - %s' % object.name</field>
            <field name="binding_type">report</field>

            <field name="paperformat_id" ref="kg_voyage_marine_accounting.paperformat_credit_note"/>
        </record>

        <record id="action_report_debit_note" model="ir.actions.report">
            <field name="name">Debit Note</field>
            <field name="model">account.move</field>
<!--            <field name="domain">[('move_type', '=', 'out_refund')]</field>-->
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kg_voyage_marine_accounting.report_debit_note</field>
            <field name="report_file">kg_voyage_marine_accounting.report_debit_note</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="print_report_name">'Debit Note - %s' % object.name</field>
            <field name="binding_type">report</field>

            <field name="paperformat_id" ref="kg_voyage_marine_accounting.paperformat_credit_note"/>
        </record>
    </data>
</odoo>