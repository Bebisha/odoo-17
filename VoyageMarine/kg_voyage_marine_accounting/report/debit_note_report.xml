    <template id="report_debit_note">
        <t t-call="web.html_container">
            <t t-if="docs.filtered(lambda d: d.move_type == 'in_refund')">
                <t t-foreach="docs.filtered(lambda d: d.move_type == 'in_refund')" t-as="doc">
                    <t t-call="kg_voyage_marine_accounting.report_debit_note_template"
                       t-lang="doc.partner_id.lang"/>
                </t>
            </t>
            <t t-else="">
                <div>
                    <p>Report is not available.</p>
                </div>
            </t>
        </t>
        <!--        </t-call>-->
    </template>

