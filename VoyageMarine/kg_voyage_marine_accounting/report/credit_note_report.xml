    <template id="report_credit_note">
        <t t-call="web.html_container">
            <t t-if="docs.filtered(lambda d: d.move_type == 'out_refund')">
                <t t-foreach="docs.filtered(lambda d: d.move_type == 'out_refund')" t-as="doc">
                    <t t-call="kg_voyage_marine_accounting.report_credit_note_template"
                       t-lang="doc.partner_id.lang"/>
                </t>
            </t>
            <t t-else="">
                <div>
                    <p>Report is not available.</p>
                </div>
            </t>
        </t>
        <!--        </t-call>-->
    </template>


    <template id="custom_external_layout_voyage">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header o_company_#{company.id}_layout">
            <div class="row mb8" style="margin: 0; padding-top: 15px;">
                <div class="col-4" style="text-align: left; font-size: 14px;">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;"
                         alt="Logo"/>
                </div>
                <div class="col-8 text-end" style="text-align: right; font-size: 14px;">
                    <t t-if="doc and doc.company_id" style="margin: 0; padding-bottom: 0;">
                        <t t-if="doc.company_id.name" style="font-size: 2.5em; font-weight: bold;"
                           t-esc="doc.company_id.name"/>
                        <t t-if="doc.company_id.phone">
                            <span style="font-size: 14px;" t-esc="doc.company_id.phone"/>
                            <i class="fa fa-phone" aria-hidden="true"
                               style="margin-left: 5px; border-radius: 50%; background-color: #ddd; padding: 5px;"></i>
                            <br/>
                        </t>
                        <t t-if="doc.company_id.mobile">
                            <span style="font-size: 14px;" t-esc="doc.company_id.mobile"/>
                            <i class="fa fa-fax" aria-hidden="true"
                               style="margin-left: 5px; border-radius: 50%; background-color: #ddd; padding: 5px;"></i>
                        </t>
                        <t t-if="doc.company_id.email">
                            <span style="font-size: 14px;" t-esc="doc.company_id.email"/>
                            <i class="fa fa-map-marker" aria-hidden="true"
                               style="margin-left: 5px; border-radius: 50%; background-color: #ddd; padding: 5px;"></i>
                        </t>
                        <span>PO box:</span>
                        <span t-if="doc.company_id.zip" t-esc="doc.company_id.zip"/>
                        <span t-if="doc.company_id.city" t-esc="doc.company_id.city"/>
                        <span t-if="doc.company_id.country_id.name"
                              t-esc="doc.company_id.country_id.name"/>
                        <t t-if="doc.company_id.zip or doc.company_id.city or doc.company_id.country_id.name">
                            <i class="fa fa-map-marker mx-2" aria-hidden="true"
                               style="border-radius: 50%; background-color: #ddd; padding: 5px;"></i>
                        </t>
                    </t>
                </div>
            </div>
            <div style="border-bottom: 1px solid black;margin: 0; padding-bottom: 0;"></div>
        </div>
        <t t-if="doc.company_id.vat">
            <table width="100%" style="margin-top: 10px;" class="table-borderless">
                <tr>
                    <td style="width: 100%; font-size: 14px;padding-bottom:10px;" align="right">
                        <span style="font-size: 14px; font-weight: bold;">TRN:</span>
                        <span style="font-size: 14px; font-weight: bold; margin-left: 5px;"
                              t-esc="doc.company_id.vat"/>
                    </td>
                </tr>
            </table>
        </t>

        <div class="article">
            <t t-raw="0"/>
        </div>


        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div style="font-size:11px" class="last-page">
                <p align="right">**General Terms &amp; Condition Shall apply**</p>
            </div>
            <div style="text-align:center;font-size: 14px;">
                <p t-if="doc.company_id.website" style="font-size: 12px;font-weight: bold;"
                   t-esc="doc.company_id.website"/>

            </div>


            <div style="border-top: 1px solid black; display: flex; justify-content: space-between; align-items: flex-start; padding-top: 15px;">
                <div>
                    <table width="100%" class="table table-borderless table-sm">
                        <tr>
                            <td width="100%">
                                <div style="text-align: left;font-size:14px">
                                    A professional Supplier and Service provider for All Electrical &amp;
                                    Instrumentation, Automation&amp; Control, Fire &amp; Safety,
                                    Navigation and Communication and Calibration requirements for Marine, Oil &amp; Gas
                                    and Energy Industry.
                                </div>
                            </td>
                            <!--                            <td width="22%">-->
                            <!--                                <div style="text-align: right; ">-->
                            <!--                                    <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"-->
                            <!--                                         style="max-height: 40px;max-width: 70px;" alt="Logo"/>-->
                            <!--                                </div>-->
                            <!--                            </td>-->
                        </tr>
                    </table>
                </div>

                <div t-if="report_type == 'pdf'" style="color:black; text-align: center;">
                    Page:
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
            </div>

        </div>
    </template>
</odoo>

