<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the existing stock return picking form view -->
    <record id="view_inherit_stock_return_picking_form" model="ir.ui.view">
        <field name="name">Inherit Stock Return Picking Form</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_return_moves']" position="before">
                <div class="alert alert-warning">
                    <strong>Warning:</strong> Please inform the accounts department before processing the return.
                </div>
            </xpath>
        </field>
    </record>
</odoo>
