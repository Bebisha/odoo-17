<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_transientmodel_wizard_form" model="ir.ui.view">
        <field name="name">transient.form</field>
        <field name="model">create.purchaseorder</field>
        <field name="arch" type="xml">
            <form string="Sale Order">
                <p class="oe_grey"></p>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('supplier_rank','&gt;', 1),('is_approved', '=', True)]"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="sale_id" widget="many2many_tags" readonly="1" force_save="1"
                                   context="{'default_sale_id': active_id}"/>
                        </group>
                        <group>
                            <field name="date_order"/>
                        </group>
                    </group>
                    <br></br>
                    <notebook>
                        <page string="Order Lines" name="wizard_order_lines">
                            <field name="new_order_line_ids" nolabel="1">
                                <tree editable="botttom" create='false'>
                                    <field name="order_line_id" invisible="1" optional="hide"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom" class="oe_inline"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_purchase_order" string="Create RFQ" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_transient_model_wizard" model="ir.actions.act_window">
        <field name="name">Create RFQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.purchaseorder</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_sale_id': active_id}</field>
        <field name="groups_id" eval="[(4, ref('kg_purchase.group_restricted_create_rfq_so'))]"/>
    </record>

</odoo>