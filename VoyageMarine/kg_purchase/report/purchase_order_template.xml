                        <span style="font-size: 14px;" t-if="doc.company_id.city" t-esc="doc.company_id.city"/>
                        <span style="font-size: 14px;" t-if="doc.company_id.country_id.name"
                              t-esc="doc.company_id.country_id.name"/>
