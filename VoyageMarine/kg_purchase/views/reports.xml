<odoo>
    <record id="paperformat_po_print" model="report.paperformat">
        <field name="name">PO Print</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">42</field>
        <field name="margin_bottom">35</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="disable_shrinking" eval="False"/>
        <field name="dpi">90</field>
    </record>
    <record id="paperformat_purchase_quotation_print" model="report.paperformat">
        <field name="name">RFQ Print</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">42</field>
        <field name="margin_bottom">35</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="disable_shrinking" eval="False"/>
        <field name="dpi">90</field>
    </record>
    <record id="standard_pdf_purchase_order_report" model="ir.actions.report">
        <field name="name">Purchase Order</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kg_purchase.voyage_report_purchase_order</field>
        <field name="report_file">kg_purchase.voyage_report_purchase_order</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Request for Quotation - %s' %
            (object.name) or 'Purchase Order - %s' % (object.name))
        </field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_po_print"/>
    </record>
    <record id="standard_pdf_purchase_quotation_report" model="ir.actions.report">
        <field name="name">Request for Quotation</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kg_purchase.voyage_report_purchase_quotation</field>
        <field name="report_file">kg_purchase.voyage_report_purchase_quotation</field>
        <field name="print_report_name">'Request for Quotation - %s' % (object.name)</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_purchase_quotation_print"/>
    </record>

    <record id="purchase.action_report_purchase_order" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

    <record id="purchase.report_purchase_quotation" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

</odoo>