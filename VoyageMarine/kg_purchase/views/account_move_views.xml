<odoo>
    <data>
        <record id="kg_view_move_form_inherit" model="ir.ui.view">
            <field name="name">kg.account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='invoice_vendor_bill_id']" position='after'>
                    <field name="picking_ids" widget="many2many_tags" string="GRN reference"/>
                </xpath>


                <xpath expr="//notebook/page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='partner_id']"
                       position="attributes">
                    <attribute name="domain">[('state', '=', 'approval'),('is_company','=',True)]</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_move_line_form_inhir" model="ir.ui.view">
            <field name="name">account.move.line.form.inhir</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position='after'>
                    <field name="has_abnormal_deferred_dates" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>