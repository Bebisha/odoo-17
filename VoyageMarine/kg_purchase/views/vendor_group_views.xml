<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vendor_group_tree" model="ir.ui.view">
        <field name="name">vendor.group.tree</field>
        <field name="model">vendor.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_vendor_group_form" model="ir.ui.view">
        <field name="name">vendor.group.form</field>
        <field name="model">vendor.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_vendor_group" model="ir.actions.act_window">
        <field name="name">Vendor Groups</field>
        <field name="res_model">vendor.group</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_vendor_group_tree"/>
    </record>

    <menuitem id="menu_vendor_group" name="Vendor Groups" parent="purchase.menu_purchase_config" action="action_vendor_group" sequence="3"/>
</odoo>
