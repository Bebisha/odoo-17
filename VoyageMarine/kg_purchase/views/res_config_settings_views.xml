<odoo>
    <data>
        <record id="approval_configuration_purchase" model="ir.ui.view">
            <field name="name">Approval</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='purchase_setting_container']" position="before">
                    <h2>Approvals</h2>
                    <div class="row mt16 o_settings_container" name="booking_setting_container">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="vendor_approval_ids" string="Vendor Approval users"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="vendor_approval_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="purchase_manager_ids" string="Purchase Manager"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="purchase_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="general_manager_ids" string="General Manager"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="general_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="finance_manager_ids" string="Finance Manager"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="finance_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="line_manager_ids" string="Line Manager"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="line_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="department_manager_ids" string="Asset Manager"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="department_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="hr_manager_ids" string="HR Manager"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="hr_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                                <div class="mt16">
                                    <label for="account_team_ids" string="Account"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="account_team_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>
        <record id="credit_limit_sale" model="ir.ui.view">
            <field name="name">Approval</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='account_use_credit_limit']" position="after">
<!--                    <div class="col-xs-12 col-md-6 o_setting_box" >-->
<!--                        <div class="o_setting_right_pane">-->
                            <div class="content-group mt-2" invisible=" account_use_credit_limit == False ">
                                <div class="row">
                                    <label class="col-lg-8 " for="account_credit_limit_action">
                                        Credit Limit Action
                                    </label>
                                    <field name="account_use_credit_limit" invisible="1"/>
                                    <div class="col-lg-8">

                                        <field name="account_credit_limit_action" class="o_light_label mt16"

                                               widget="radio"
                                               options="{'vertical': true}"

                                        />
                                    </div>

                                </div>
                            </div>
<!--                                                        </div>-->
<!--                    </div>-->
                </xpath>

            </field>
        </record>
    </data>
</odoo>
