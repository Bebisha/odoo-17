<odoo>
    <record model="ir.ui.view" id="view_partner_list_form_inherited">
        <field name="name">view.partner.form.inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">

                <header>
                    <button name="action_approval" string="Approve" type="object"
                            class="oe_highlight" invisible="state == 'approval'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,approval"/>
                </header>
            </xpath>
        </field>
    </record>
    <record id="res_partner_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.view.kanban.inherit.customer.supplier.approval</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_partner_categories')]" position="inside">
                <span class="oe_kanban_list_many2many">
                    <field name="state" widget="badge" decoration-info="state == 'new'"
                           decoration-success="state == 'approval'"/>
                </span>
            </xpath>
        </field>
    </record>
    <!--     FILTER -->
    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.view.search.inherit.customer.supplier.approval</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/group" position="inside">
                <field name="po_type"/>
                <filter string="Approved" name="Approve" domain="[('state','=','approval')]"/>
                <filter string="State" name="state" context="{'group_by':'state'}"/>
                <filter string="Local" name="local" domain="[('po_type', '=', 'local')]"/>
                <filter string="Middle East" name="meast" domain="[('po_type', '=', 'meast')]"/>
                <filter string="International" name="international" domain="[('po_type', '=', 'international')]"/>
                <filter string="Sister Concern" name="sisconcern" domain="[('po_type', '=', 'sisconcern')]"/>
                <filter string="Subcontracting" name="subcontracting" domain="[('po_type', '=', 'subcontracting')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_po_type" string="Purchase Order Type" context="{'group_by': 'po_type'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account.res_partner_action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company':
            True, 'default_customer_rank': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a customer.
            </p>
        </field>
    </record>

    <record id="account.res_partner_action_supplier" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company':
            True, 'default_supplier_rank': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new supplier in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a supplier.
            </p>
        </field>
    </record>

    <record id="action_res_partner_action_customer_invoice_id" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('state','=','approval')]</field>
        <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'Approve', 'default_is_company':
            True, 'default_customer_rank': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a customer.
            </p>
        </field>
    </record>
    <record id="res_partner_action_supplier_inherit" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('state','=','approval')]</field>
        <field name="context">{'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company':
            True, 'default_supplier_rank': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new supplier in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a supplier.
            </p>
        </field>
    </record>

    <menuitem id="account.menu_account_customer" name="Customers" parent='account.menu_finance_receivables'
              action="action_res_partner_action_customer_invoice_id"
              sequence="110"/>

    <menuitem id="account.menu_account_supplier" name="Vendors" parent='account.menu_finance_payables'
              action="res_partner_action_supplier_inherit" sequence="200"/>


    <record id="vendor_approval_email_template" model="mail.template">
        <field name="name">Vendor Approval Request</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">Vendor Approval Request for ${object.name}</field>
        <field name="body_html">
            <![CDATA[
            <p>Dear ${object.user_id.name},</p>
            <p>A new vendor, ${object.name}, has been created by ${object.create_uid.name}. Please verify and approve the vendor.</p>
        ]]>
        </field>
        <field name="email_to">${object.approval_manager_email}</field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="kg_view_partner_property_form_inherit" model="ir.ui.view">
        <field name="name">kg.res.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']/field[@name='show_credit_limit']" position="after">
                <group>
                    <group>
                        <!--                        <field name="is_coa_installed" invisible="1"/>-->
                        <field name="is_outstanding"/>
                    </group>
                </group>
            </xpath>
            <field name="vat" position="after">
                <field name="customer_rank" invisible="1"/>
                <field name="vendor_group_id" invisible="supplier_rank == 0"/>
                <field name="supplier_rank" invisible="1"/>
                <field name="po_type"
                />

            </field>
        </field>
    </record>
    <record id="view_partner_form_inherit_credit_limit" model="ir.ui.view">
        <field name="name">res.partner.form.credit.limit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_payment_term_id']" position="after">
<!--                <field name="property_payment_term_ids" widget="many2many_tags"/>-->
                <field name="max_payment_days" />
                <field name="apply_credit_limit"/>
<!--               <field name="property_payment_term_ids"-->
<!--       domain="[('days','&lt;=',max_payment_days)]"/>-->



            </xpath>
<!--            <xpath expr="//field[@name='use_partner_credit_limit']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//field[@name='property_payment_term_id']" position="attributes">-->
<!--                <attribute name="domain">[('id', 'in', property_payment_term_ids)]</attribute>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='property_payment_term_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_payment_term_form_iherit" model="ir.ui.view">
        <field name="name">account.payment.term.form.inh</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_field_highlight']" position="after">
                <!--                <group>-->
                <field name="is_default_payment_term"/>
                <!--                </group>-->
            </xpath>
        </field>
    </record>

</odoo>