<odoo>
    <data>

        <record model="ir.ui.view" id="kg_hr_employee_inherit_form_view">
            <field name="name">kg.hr.employee.form.inherit.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h2" position="before">
                    <field name="employee_no" readonly="1"/>
                </xpath>
                <field name="work_email" position="after">
                    <field name="outsource_employee"/>
                    <field name="branch"/>
                    <field name="staff_worker"/>
                </field>

                <field name="coach_id" position="after">
                    <field name="contract_type"/>
                </field>
                <field name="marital" position="before">
                    <field name="father_name"/>
                    <field name="mother_name"/>
                </field>
                <xpath expr="//notebook/page[@name='hr_settings']/group/group[@name='active_group']" position="inside">
                    <field name="joining_date"/>
                    <field name="leaving_date"/>
                </xpath>
                <field name="passport_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="visa_no" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="visa_expire" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <xpath expr="//notebook/page[@name='personal_information']/group" position="inside">
                    <group string="Passport">
                        <field name="passport_id"/>
                        <field name="passport_issue_from"/>
                        <field name="passport_issue_date"/>
                        <field name="passport_expiry_date"/>
                    </group>
                    <group string="Visa">
                        <field name="visa_no"/>
                        <field name="visa_designation_id"/>
                        <field name="visa_type"/>
                        <field name="visa_issue_date"/>
                        <field name="visa_expire"/>
                    </group>
                    <group string="Labour Card">
                        <field name="personal_no_from_labour_card"/>
                        <field name="labour_card_no"/>
                        <field name="labour_card_issue_date"/>
                        <field name="labour_card_expiry_date"/>
                    </group>
                    <group string="Medicals">
                        <field name="medical_insurance_no"/>
                        <field name="medical_insurance_category"/>
                        <field name="medical_insurance_issue_date"/>
                        <field name="medical_insurance_expiry_date"/>
                    </group>
                    <group string="Others">
                        <field name="accomodation"/>
                    </group>
                </xpath>
            </field>
        </record>


        <record id="kg_outsource_employee_action" model="ir.actions.act_window">
            <field name="name">Outsource Employees</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,form</field>
            <field name="domain">[('outsource_employee', '=',True)]</field>
        </record>

        <menuitem id="kg_outsource_employee_menu"
                  parent="hr.menu_hr_employee_payroll"
                  action="kg_outsource_employee_action"
                  groups="hr.group_hr_manager"/>

    </data>
</odoo>