<odoo>
    <data>

        <record model="ir.ui.view" id="kg_hr_job_inherit_form_view">
            <field name="name">kg.hr.job.form.inherit.view</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="after">
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="kg_hr_job_inherit_tree_view">
            <field name="name">kg.hr.job.tree.inherit.view</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code"/>
                </field>
            </field>
        </record>

    </data>
</odoo>