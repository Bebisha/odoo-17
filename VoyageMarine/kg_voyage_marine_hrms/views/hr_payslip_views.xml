<odoo>
    <data>

        <record id="kg_view_hr_payslip_form_inherit" model="ir.ui.view">
            <field name="name">kg.hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="attributes">
                    <attribute name="domain">[('outsource_employee', '=', False)]</attribute>
                </field>
                <field name="struct_id" position="after">
                    <field name="fixed_ot_allowance" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="action_send_payslips" model="ir.actions.server">
            <field name="name">Send Payslips by Email</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="state">code</field>
            <field name="binding_view_types">form,list</field>
            <field name="code">
                action = records.action_send_payslips_email()
            </field>
        </record>

        <record id="action_send_payslips_batchs" model="ir.actions.server">
            <field name="name">Send Payslips by Email</field>
         <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
            <field name="state">code</field>
            <field name="binding_view_types">form,list</field>
            <field name="code">
                action = records.action_send_bach_payslips_email()
            </field>
        </record>

    </data>
</odoo>
