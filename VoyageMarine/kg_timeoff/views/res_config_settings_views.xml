<odoo>
    <data>
        <record id="approval_configuration_timeoff" model="ir.ui.view">
            <field name="name">TimeOff Approval</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='languages']" position="after">
                     <block title="TimeOff Approvals" name="timeoff_setting_container">
<!--                    <h5>TimeOff Approvals</h5>-->
                    <div class="row mt16 o_settings_container" name="booking_setting_container">
                        <div class="o_setting_right_pane">
                            <div class="content-group">

                                <div class="mt16">
                                    <label for="general_manager_ids" string="General Manager Approval"
                                           class="col-3 col-lg-3 o_light_label"/>
                                    <field name="general_manager_ids" widget="many2many_tags" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                     </block>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
