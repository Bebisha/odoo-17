<odoo>
    <record id="crm_stage_form" model="ir.ui.view">
        <field name="name">crm.stage.kg</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <field name="is_won" position="before">
                <field name="is_opportunity"/>
            </field>

        </field>
    </record>
    <record id="crm_stage_tree" model="ir.ui.view">
        <field name="name">crm.stage.kg.tree</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <field name="is_won" position="before">
                <field name="is_opportunity"/>
            </field>

        </field>
    </record>
</odoo>