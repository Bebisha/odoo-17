<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_inherit_sale_team" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.crm_team</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app/block[@name='convert_visitor_setting_container']" position="after">
                    <block title="CRM Team" name="crm_team_setting_container">
                        <setting string="CRM Team">
                            <label for="crm_team_id" string="CRM Team"/>
                            <field name="crm_team_id"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
