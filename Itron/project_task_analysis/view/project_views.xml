<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_task_form_inherit1" model="ir.ui.view">
            <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="task_type"/>
                    <field name="criticality"/>
                    <field name="hours_spent_avg"/>

                    <field name="date_start" required="1"/>
                </xpath>

            </field>
        </record>
        <record id="project_task_tree_inherit1" model="ir.ui.view">
            <field name="name">project.task.tree.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="before">
                    <field name="date_start" optional="hide"/>
                    <field name="criticality" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
