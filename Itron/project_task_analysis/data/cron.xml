<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">

        <record id="reset_to_pool_scheduler" model="ir.cron">
            <field name="name">Resource Allocation to Pool</field>
            <!--            <field eval="True" name="active"/>-->
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=1, minute=30, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field> <!-- Repeats indefinitely -->
            <field name="model_id" ref="project_task_analysis.model_project_resource_pool"/>
            <field name="state">code</field>
            <field name="code">model.action_resource_allocation()</field>
            <field name="priority" eval="5"/>
        </record>


        <record id="ir_cron_update_odoo_assignees" model="ir.cron">
            <field name="name">Project Team: Update Assignees</field>
            <field name="model_id" ref="model_daily_task_assign"/>
            <field name="state">code</field>
            <field name="code">model.kg_update_project_team()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="cron_send_second_level_email" model="ir.cron">
            <field name="name">Send Second Level Email</field>
            <field name="model_id" ref="model_project_resource_pool"/>
            <field name="state">code</field>
            <field name="code">model.send_second_level_emails()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>


    </data>

</odoo>
