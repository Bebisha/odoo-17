<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_extend_resource_wizard" model="ir.ui.view">
            <field name="name">extended.resource.wizard</field>
            <field name="model">extended.resource</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Extension Details">
                            <group>
                                <field name="is_new" string="New Task" widget="boolean_toggle" readonly="is_new == False"/>
<!--                                       attrs="{'invisible': [('is_new', '=', False)]}" />-->
                                <field name="is_new" string="Existing Task" widget="boolean_toggle"  readonly="is_new == True"/>
<!--                                       attrs="{'invisible': [('is_new', '=', True)]}" />-->
                            <field name="extend_hrs" string="Total Hours" widget="float_time"/>
                            <field name="extend_date" string="Date"/>

                            </group>
                            <field name="comments" placeholder="Reason for the extension"/>

                            <field name="task_ids" >
                                <tree editable="bottom">
                                    <field name="line" invisible="1"/>
                                    <field name="description" force_save="1"  readonly="parent.is_new == False"/>
<!--                                           attrs="{'readonly': [('parent.is_new', '=', False)]}" />-->
                                    <field name="start_date" readonly="parent.is_new == False"/>
<!--                                           attrs="{'readonly': [('parent.is_new', '=', False)]}"/>-->
                                    <field name="end_date"/>
                                    <field name="task_id" invisible="1"/>
                                    <field name="planned_hrs" force_save="1" widget="float_time" readonly="parent.is_new == False"/>
<!--                                           attrs="{'readonly': [('parent.is_new', '=', False)]}" />-->
                                    <field name="extend_hrs" sum="Total" widget="float_time" readonly="parent.is_new == False"/>
<!--                                           attrs="{'column_invisible': [('parent.is_new', '=', True)]}" -->

                                </tree>
                            </field>


                        </group>
                        <footer>
                            <button name="confirm_button" string="Request" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>


                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>