<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_project_reject_reason" model="ir.ui.view">
            <field name="name">project.reject.reason.wizard</field>
            <field name="model">project.reject.reason</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="reason" string="Reject Reason" placeholder="Reject Reason"/>
                        <footer>
                            <button name="reject_button" string="Reject" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>