<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_timesheet'), ('name', '=', 'timesheets_analysis_report_comp_rule')]"/>
            <value eval="{'noupdate': False}"/>
        </function>


        <record id="project.group_project_manager" model="res.groups">
            <field name="name">Team Lead</field>
        </record>

        <record model="ir.rule" id="project_lead_all_project_tasks_rule">
            <field name="name">Project/Task: project manager: see all tasks linked to a project</field>
            <field name="model_id" ref="model_project_task"/>
            <field name="domain_force">[
                    '|',
                    ('project_id', '!=', False),
                    ('user_ids', 'in', [user.id]),
                    ('project_id.project_team_id.timesheet_user_ids', 'in', [user.id])
                ]</field>
            <field name="groups" eval="[(4,ref('project.group_project_manager'))]"/>
        </record>


        <record id="group_project_administrator" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="base.module_category_services_project"/>
            <field name="implied_ids"
                   eval="[(4, ref('project.group_project_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="ir.rule" id="project_administrator_all_project_tasks_rule">
            <field name="name">Project/Task: project administrator: see all tasks linked to a project</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('kg_itron_timesheet.group_project_administrator'))]"/>
        </record>
        <record model="ir.rule" id="timesheet_hours_company_rule">
            <field name="name">Timesheet Hours Company wise</field>
            <field name="model_id" ref="kg_itron_timesheet.model_timesheet_analysis_report"/>
            <field name="domain_force">[('company_id', 'in', company_ids )]</field>
        </record>

        <record model="ir.rule" id="hr_timesheet.timesheets_analysis_report_comp_rule">
            <field name="domain_force">[('employee_id.company_id', 'in', company_ids), ('employee_id.active', '=',
                True),('project_id.project_team_id.timesheet_user_ids', 'in', [user.id])]
            </field>
        </record>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_timesheet'), ('name', '=', 'timesheets_analysis_report_comp_rule')]"/>
            <value eval="{'noupdate': True}"/>
        </function>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_timesheet'), ('name', '=', 'timesheet_line_rule_approver')]"/>
            <value eval="{'noupdate': False}"/>
        </function>

        <record model="ir.rule" id="hr_timesheet.timesheet_line_rule_approver">
            <field name="domain_force">
                <![CDATA[
        [
            ('project_id', '!=', False),
            ('project_id.project_team_id.timesheet_user_ids', 'in', [user.id]),
            '|',
            ('project_id.privacy_visibility', '!=', 'followers'),
            ('project_id.message_partner_ids', 'in', [user.partner_id.id])
        ]
        ]]>
            </field>
        </record>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_timesheet'), ('name', '=', 'timesheet_line_rule_approver')]"/>
            <value eval="{'noupdate': True}"/>
        </function>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_timesheet'), ('name', '=', 'timesheet_line_rule_manager')]"/>
            <value eval="{'noupdate': False}"/>
        </function>

        <record model="ir.rule" id="hr_timesheet.timesheet_line_rule_manager">
            <field name="groups" eval="[(5, 0, 0), (4, ref('hr_timesheet.group_timesheet_manager'))]"/>
        </record>

        <function name="write" model="ir.model.data">
            <value model="ir.model.data"
                   search="[('module', '=', 'hr_timesheet'), ('name', '=', 'timesheet_line_rule_manager')]"/>
            <value eval="{'noupdate': True}"/>
        </function>

    </data>
</odoo>
