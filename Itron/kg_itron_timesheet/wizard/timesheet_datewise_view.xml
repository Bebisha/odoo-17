<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_timesheet_datewise_wizard" model="ir.ui.view">
        <field name="name">timesheet.datewise.wizard.form</field>
        <field name="model">timesheet.datewise.wizard</field>
        <field name="arch" type="xml">
            <form string="Datewise Timesheet Filter">
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="company_id"/>
                        <field name="project_id"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                        <field name="employee_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_show_timesheets" type="object" class="btn-primary" string="Show Timesheets"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_timesheet_datewise_wizard" model="ir.actions.act_window">
        <field name="name">Datewise Timesheet</field>
        <field name="res_model">timesheet.datewise.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_timesheet_datewise_wizard"
              name="Monthly Timesheet Report"
              parent="hr_timesheet.menu_timesheets_reports"
              action="action_timesheet_datewise_wizard"
              sequence="15"/>
</odoo>