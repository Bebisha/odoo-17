<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_timesheet_report_form_id" model="ir.ui.view">
            <field name="name">employee.timesheet.report.form</field>
            <field name="model">employee.timesheet.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Employee Timesheet Report">
                            <group>
                                <field name="date" required="True"/>
                                <field name="day" invisible="date == False"/>
                            </group>
                            <group>
                                <field name="employee_id" required="True"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Timesheets">
                                <field name="employee_timesheet_report_line_ids" no-create="True">
                                    <tree create="0" delete="0">
                                        <field name="project_id" readonly="True" force_save="1"/>
                                        <field name="task_id" force_save="1"/>
                                        <field name="start_time"  force_save="1"/>
                                        <field name="end_time"   force_save="1"/>
                                        <field name="hours_spent" readonly="True" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="employee_timesheet_report_line_tree_id">
            <field name="name">employee.timesheet.report.line.tree</field>
            <field name="model">employee.timesheet.report.line</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="start_time" />
                    <field name="end_time" />
                    <field name="hours_spent" widget="timesheet_uom"/>
                </tree>
            </field>
        </record>

        <record id="employee_timesheet_report_line_search_id" model="ir.ui.view">
            <field name="name">employee.timesheet.report.line.filter</field>
            <field name="model">employee.timesheet.report.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <group expand="1" string="Group By...">
                        <filter string="Employee" name="groupby_employee_id" domain="[]"
                                context="{'group_by': 'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="employee_timesheet_report_action_id" model="ir.actions.act_window">
            <field name="name">Employee Timesheet Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.timesheet.report</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="employee_timesheet_report_menu_id" action="employee_timesheet_report_action_id"
                  parent="hr_timesheet.menu_timesheets_reports"
                  name="Employee Timesheet Report" sequence="11"/>

    </data>
</odoo>