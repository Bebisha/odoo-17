<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kg_project_task_view_tree_inherit" model="ir.ui.view">
        <field name="name">kg.project.task.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
    <record id="view_task_search_form_inherit" model="ir.ui.view">
        <field name="name">project.task.search.form.inherit.milestone.replace</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form_base"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='milestone_id']" position="replace">
                <field name="milestone_ids"/>
            </xpath>
             <xpath expr="//filter[@name='milestone']" position="replace">
            <filter string="Milestone" name="milestone" context="{'group_by': 'milestone_ids'}" groups="project.group_project_milestone"/>
        </xpath>
        </field>
    </record>

</odoo>