<odoo>
    <data>

        <record id="employee_date_wise_timesheet_tree_view" model="ir.ui.view">
            <field name="name">employee.date.wise.timesheet.tree.view</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <tree string="Employee/Date Wise Timesheet" default_order="date desc">
                    <field name="project_id" options="{'no_create_edit': True}" required="1"
                           readonly="1" width="250px"
                           context="{'search_default_my_projects': True}"/>
                    <field name="task_id" optional="show" options="{'no_create_edit': True}" widget="task_with_hours"
                           context="{'default_project_id': project_id, 'search_default_my_tasks': True, 'search_default_open_tasks': True}"
                           readonly="1" width="450px"/>
                    <field name="name"/>
                    <field name="date_start" readonly="1"/>
                    <field name="date_end" readonly="1"/>
                    <field name="unit_amount" optional="show" widget="timesheet_uom" sum="Total"
                           readonly="1" width="100px"
                           decoration-danger="unit_amount &gt; 24 or unit_amount &lt; 0"
                           decoration-muted="unit_amount == 0"/>
                </tree>
            </field>
        </record>

        <record id="kg_employee_wise_timesheet_action" model="ir.actions.act_window">
            <field name="name">Employee Wise Timesheet</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="employee_date_wise_timesheet_tree_view"/>
            <field name="context">{'create': False,'group_by': ['employee_id','date:day']}</field>
        </record>

<!--        <menuitem id="kg_timesheet_report_menu" parent="hr_timesheet.timesheet_menu_root" name="Timesheet Overview" sequence="70"/>-->

        <menuitem id="kg_employee_wise_timesheet_menu" parent="hr_timesheet.menu_hr_time_tracking"
                  action="kg_employee_wise_timesheet_action"
                  sequence="30"/>

        <record id="kg_date_wise_timesheet_action" model="ir.actions.act_window">
            <field name="name">Date Wise Timesheet</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="employee_date_wise_timesheet_tree_view"/>
            <field name="context">{'create': False,'group_by': ['date:day','employee_id']}</field>
        </record>

        <menuitem id="kg_date_wise_timesheet_menu" parent="hr_timesheet.menu_hr_time_tracking"
                  action="kg_date_wise_timesheet_action"
                  sequence="50"/>

    </data>
</odoo>