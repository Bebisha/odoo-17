<odoo>


    <record id="action_early_late_request" model="ir.actions.act_window">
        <field name="name">Early Departure / Late Arrival</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">early.late.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="kg_attendance.early_late_request_tree"/>


    </record>

    <menuitem id="kg_attendance_menu_requests" parent="hr_attendance.menu_hr_attendance_root" sequence="11"
              name="Requests"/>
    <menuitem id="kg_early_late_request" parent="kg_attendance_menu_requests" sequence="1"
              action="action_early_late_request"/>

    <record model="ir.ui.view" id="early_late_request_tree">
        <field name="name">early.late.request.tree</field>
        <field name="model">early.late.request</field>
        <field name="arch" type="xml">
            <tree string="Early Departure / Late Arrival" default_order="name desc">
                <field name="name"/>
                <!--                    <field name="date" widget="date"/>-->
                <field name="employee_id"/>
                <field name="type"/>
                <field name="effective_date"/>
                <field name="time_string"/>
                <field name="late_hrs" invisible="type=='early_departure'"/>
                <field name="early_hrs" invisible="type=='late_arrival'"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_early_late_request_form" model="ir.ui.view">
        <field name="name">early.late.request.form</field>
        <field name="model">early.late.request</field>
        <field name="arch" type="xml">
            <form string="Early Departure / Late Arrival">
                <header>
                    <button name="confirm_buton" type="object" string="Confirm" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_first_approval" type="object" string="Approve" class="btn-primary"
                            invisible="state != 'request'"
                            groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user"/>

                    <!--                        <button name="action_second_approval" type="object" string="Validate" class="btn-primary"-->
                    <!--                                invisible="state != 'lm_approved'" groups="base.group_erp_manager"/>-->
                    <button name="action_reject" type="object" string="Return" class="btn-secondary"
                            invisible="state != 'request'"
                            groups="base.group_erp_manager"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to draft" class="btn-primary"
                            invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,request"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                            <!--                                <field name="user_id"/>-->
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="is_readonly == True"/>
                            <field name="type" readonly="is_readonly == True"/>
                            <field name="date_late" invisible="type  != 'late_arrival'"
                                   readonly="is_readonly == True"/>
                            <field name="date_early" invisible="type  == 'late_arrival'"
                                   readonly="is_readonly == True"/>

                            <label for="hours" string="Time"/>
                            <div>
                                <field name="hours" class="oe_inline"
                                       readonly="is_readonly == True"/>
                                :
                                <field name="minutes" class="oe_inline"
                                       readonly="is_readonly == True"/>
                                :
                                <field name="seconds" class="oe_inline"
                                       readonly="is_readonly == True"/>
                            </div>
                            <field name="is_readonly" invisible="1"/>
                            <field name="time_string" invisible="1"/>
                            <field name="early_hrs" invisible="type  == 'late_arrival'"/>
                            <field name="late_hrs" invisible="type  != 'late_arrival'"/>
                            <field name="display_type" invisible="1"/>

                            <field name="company_name" invisible="1"/>
                            <field name="confirm_date" invisible="1"/>

                        </group>
                        <group>
                            <field name="reason" readonly="state  in ('lm_approved','cancel')"/>
                            <field name="is_reason_editable" invisible="1"/>
                            <field name="reason_for_return" force_save="1"
                                   readonly="state == 'cancel' or not is_reason_editable"
                                   invisible="state in ['lm_approved','draft']"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_early_late_request_search" model="ir.ui.view">
        <field name="name">early.late.request.search</field>
        <field name="model">early.late.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id" string="Employee"/>
                <field name="type" string="Type"/>
                <field name="effective_date" string="Effective Date"/>

                <filter string="Today" name="Today" separator="1"
                        domain="[('effective_date','&gt;=', ((context_today()+datetime.timedelta(days=0)).strftime('%Y-%m-%d'))), ('effective_date','&lt;=', ((context_today()+datetime.timedelta(days=0)).strftime('%Y-%m-%d')))]"
                        help="Today"/>

                <filter name="effective_date_filter" string="This Week" domain="[
                        ('effective_date', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(weeks=-1,days=1,weekday=0), datetime.time(0,0,0)).to_utc()).strftime('%Y-%m-%d %H:%M:%S')),
                        ('effective_date', '&lt;', (datetime.datetime.combine(context_today() + relativedelta(days=1,weekday=0), datetime.time(0,0,0)).to_utc()).strftime('%Y-%m-%d %H:%M:%S'))]"/>

                <filter string="Current Month" name="current_month"
                        domain="[('effective_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('effective_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_location_id']" position="after">
                <field name="is_check_employee"/>
            </xpath>
        </field>
    </record>
</odoo>
