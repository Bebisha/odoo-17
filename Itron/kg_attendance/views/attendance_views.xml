<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_action_kg_attendance" model="ir.ui.view">
        <field name="name">kg.attendance.form</field>
        <field name="model">kg.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Attendance Details">
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                     <field name="attendance_line_ids">
                        <tree  editable="bottom">
                            <field name="employee_name"/>
                            <field name="employee_id"/>
                            <field name="time_in"/>
                            <field name="time_out"/>
                        </tree>
                     </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kg_attendance_tree_view" model="ir.ui.view">
        <field name="name">kg.attendance.tree.view</field>
        <field name="model">kg.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendance">
                <field name="date"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_kg_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kg.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="main_menu_kg_attendance" parent="hr_attendance.menu_hr_attendance_root" name="Attendance" sequence="20"/>
    <menuitem id="menu_kg_attendance" action="action_kg_attendance"
              parent="main_menu_kg_attendance" name="Attendance" sequence="21"/>
</odoo>