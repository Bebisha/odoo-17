<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_action_kg_attendance_report" model="ir.ui.view">
        <field name="name">kg.attendance.wizard.form</field>
        <field name="model">kg.attendance.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Attendance Details Report">
                        <group>
                            <field name="date" required="True"/>
                        </group>
                        <group>
                            <field name="company_id" required="True"/>
                        </group>
<!--                        <br></br>-->
<!--                        <br></br>-->
<!--                        <br></br>-->
<!--                    <div class="oe_title" style="text-align: center;">-->
<!--                        <h4>Attendance Details Report</h4>-->
<!--                    </div>-->
<!--                        <br></br>-->
<!--                        <br></br>-->
                    </group>
                     <field name="attendance_ids" no-create="True">
                        <tree editable="bottom" create="0" delete="0">
                            <field name="employee_name" readonly="True"/>
                            <field name="employee_id" readonly="True"/>
                            <field name="time_in" readonly="True"/>
                            <field name="time_out" readonly="True"/>
                        </tree>
                </field>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_kg_attendance_report" model="ir.actions.act_window">
        <field name="name">Attendance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kg.attendance.report</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_kg_attendance_report" action="action_kg_attendance_report"
              parent="kg_attendance.main_menu_kg_attendance"
              name="Attendance Report" sequence="25"/>
</odoo>