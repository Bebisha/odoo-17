                        <field name="code">4</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_4_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">4. Zero rated supplies (Base)</field>
                            </record>
                            <record id="tax_report_line_4_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">4. Zero rated supplies (Tax)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_5" model="account.report.line">
                        <field name="name">5. Exempt Supplies</field>
                        <field name="code">5</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_5_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">5. Exempt supplies (Base)</field>
                            </record>
                            <record id="tax_report_line_5_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">5. Exempt supplies (Tax)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_6" model="account.report.line">
                        <field name="name">6. Goods imported into the UAE</field>
                        <field name="code">6</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_6_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">7. Goods imported into the UAE (Base)</field>
                            </record>
                            <record id="tax_report_line_6_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">7. Goods imported into the UAE (Base)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_7" model="account.report.line">
                        <field name="name">7. Adjustments to Goods imported into the UAE</field>
                        <field name="code">7</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_7_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">7. Goods imported into the UAE (Base)</field>
                            </record>
                            <record id="tax_report_line_7_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">7. Goods imported into the UAE (Base)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_8" model="account.report.line">
                        <field name="name">8. Totals</field>
                        <field name="code">8</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_8_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">1a.net + 1b.net + 1c.net + 1d.net + 1e.net + 1f.net + 1g.net + 2.net+ 3.net + 4.net + 5.net+ 6.net+ 7.net</field>
                            </record>
                            <record id="tax_report_line_8_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">1a.net + 1b.tax + 1c.tax + 1d.tax + 1e.tax + 1f.tax + 1g.tax + 2.tax+ 3.tax + 4.tax + 5.tax+ 6.tax+ 7.tax</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="tax_report_line_vat_expenses_in_uae" model="account.report.line">
                <field name="name">Vat on Expenses and All Other Inputs</field>
                <field name="hierarchy_level">0</field>
                <field name="children_ids">
                    <record id="tax_report_line_9" model="account.report.line">
                        <field name="name">9. Standard Rated Expenses</field>
                        <field name="code">9</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_9_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">10. Standard rated expenses (Base)</field>
                            </record>
                            <record id="tax_report_line_9_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">10. Standard rated expenses (Tax)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_10" model="account.report.line">
                        <field name="name">10. Supplies subject to the reverse charge provisions</field>
                        <field name="code">10</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_10_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">11. Supplies subject to the reverse charge provisions (Base)</field>
                            </record>
                            <record id="tax_report_line_10_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">11. Supplies subject to the reverse charge provisions (Tax)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_11" model="account.report.line">
                        <field name="name">11. Totals</field>
                        <field name="code">11</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_11_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">9.net + 10.net</field>
                            </record>
                            <record id="tax_report_line_11_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">aggregation</field>
                                <field name="formula">9.tax + 10.tax</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="tax_report_line_vat_due_in_uae" model="account.report.line">
                <field name="name">Net VAT Due</field>
                <field name="hierarchy_level">0</field>
                <field name="children_ids">
                    <record id="tax_report_line_12" model="account.report.line">
