                        <field name="code">3</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_3_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">3. Supplies subject to reverse charge provisions (Base)</field>
                            </record>
                            <record id="tax_report_line_3_tax_tag" model="account.report.expression">
