                    <record id="tax_report_line_1f" model="account.report.line">
                        <field name="name">1f. Standard Rated Supplies in Ras Al Khaimah</field>
                        <field name="code">1f</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_1f_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">f. Ras Al-Khaima (Base)</field>
                            </record>
                            <record id="tax_report_line_1f_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">f. Ras Al-Khaima (Tax)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_1g" model="account.report.line">
                        <field name="name">1g. Standard Rated Supplies in Fujairah</field>
                        <field name="code">1g</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_1g_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">g. Fujairah (Base)</field>
                            </record>
                            <record id="tax_report_line_1g_tax_tag" model="account.report.expression">
                                <field name="label">tax</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">g. Fujairah (Tax)</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_line_2" model="account.report.line">
                        <field name="name">2. Tax Refunds Provided top Tourists under the Tax Refunds for Tourists Scheme</field>
                        <field name="code">2</field>
                        <field name="expression_ids">
                            <record id="tax_report_line_2_base_tag" model="account.report.expression">
                                <field name="label">net</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">2. Tax Refunds provided to Tourists under the Tax Refunds for Tourists Scheme (Base)</field>
                            </record>
                            <record id="tax_report_line_2_tax_tag" model="account.report.expression">
