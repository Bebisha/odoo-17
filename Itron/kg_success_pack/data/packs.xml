        <record id="ir_cron_success_pack_action" model="ir.cron">
            <field name="name">Success Package: Send Daily Report</field>
            <field name="model_id" ref="model_kg_success_pack"/>
            <field name="state">code</field>
            <field name="code">model._send_daily_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=2, minute=00, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
        </record>
        <record id="ir_cron_success_pack_weekly" model="ir.cron">
            <field name="name">Success Package: Send Weekly Report</field>
            <field name="model_id" ref="model_kg_success_pack"/>
            <field name="state">code</field>
            <field name="code">model._send_weekly_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
<!--            <field name="nextcall"-->
<!--                   eval="(DateTime.now().replace(hour=2, minute=00, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>-->
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        <record id="ir_cron_pack_project_close" model="ir.cron">
            <field name="name">Pack Projects Close expired</field>
            <field name="model_id" ref="model_pack_projects"/>
            <field name="state">code</field>
            <field name="code">model.cron_close_button()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=2, minute=00, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <record id="success_pack_project_projects" model="project.project">
            <field name="date_start" eval="DateTime.today() - relativedelta(weeks=9)"/>
            <field name="date" eval="DateTime.today() + relativedelta(weekday=4,weeks=1)"/>
            <field name="name">Success Pack Projects</field>
            <field name="color">3</field>
            <field name="active_success_pack">True</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="privacy_visibility">portal</field>
        </record>
        <record id='kg_success_pack_dev_proj_milestone' model='project.milestone'>
            <field name='name'>Development</field>
            <field name="project_id" ref="success_pack_project_projects"/>
        </record>
        <record id='kg_success_pack_support_proj_milestone' model='project.milestone'>
            <field name='name'>Support</field>
            <field name="project_id" ref="success_pack_project_projects"/>
        </record>
    </data>
</odoo>
