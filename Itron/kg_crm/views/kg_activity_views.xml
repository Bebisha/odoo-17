<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="kg_activity_view_form" model="ir.ui.view">
        <field name="name">kg_activity_view_form</field>
        <field name="model">kg.activity</field>
        <field name="arch" type="xml">
            <form string="Activity">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="kg_activity_view_tree" model="ir.ui.view">
        <field name="name">kg_activity_view_tree</field>
        <field name="model">kg.activity</field>
        <field name="arch" type="xml">
            <tree string="Activity">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="kg_activity_action" model="ir.actions.act_window">
        <field name="name">Activity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kg.activity</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_kg_activity" name="Activity" parent="crm.crm_menu_config" action="kg_activity_action"
              sequence="26"/>
</odoo>
