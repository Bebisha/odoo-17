<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lead_activity_status_view_form" model="ir.ui.view">
        <field name="name">lead_activity_status_view_form</field>
        <field name="model">lead.activity.status</field>
        <field name="arch" type="xml">
            <form string="Activity Status">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="lead_activity_status_view_tree" model="ir.ui.view">
        <field name="name">lead_activity_status_view_tree</field>
        <field name="model">lead.activity.status</field>
        <field name="arch" type="xml">
            <tree string="Activity Status">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="lead_activity_status_action" model="ir.actions.act_window">
        <field name="name">Activity Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lead.activity.status</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_lead_activity_status" name="Activity Status" parent="crm.crm_menu_config" action="lead_activity_status_action"
              sequence="2"/>
</odoo>
