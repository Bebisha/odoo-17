<odoo>
    <data>
        <record id="kg_project_updates_report_action" model="ir.actions.act_window">
            <field name="name">Project Updates</field>
            <field name="res_model">project.status.update.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="kg_menu_project_updates_report"
                  name="Project Updates"
                  action="kg_project_updates_report_action"
                  parent="project.menu_project_report"/>

        <record id="project_updates_status_wizard_view" model="ir.ui.view">
            <field name="name">Project Updates Wizard</field>
            <field name="model">project.status.update.wizard</field>
            <field name="arch" type="xml">
                <form name="Report Options">
                    <group>
                        <group name="main_info">
                            <field name="date_from" required="1"/>
                            <field name="project" widget="many2many_tags"/>
                        </group>
                        <group name="date_to">
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button
                                name="button_project_updates_report_view"
                                string="VIEW"
                                type="object"/>
                        <button
                                name="button_project_updates_report"
                                string="PDF"
                                type="object"/>

                        <button string="CANCEL" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>