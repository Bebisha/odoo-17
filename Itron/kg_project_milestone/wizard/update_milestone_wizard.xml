<odoo>
    <data>

        <record id="view_update_milestone_wizard_form" model="ir.ui.view">
            <field name="name">update.milestone.wizard.form</field>
            <field name="model">update.milestone.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="type" widget="radio"/>
                            <field name="file" invisible="type !='import'"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Download XLSX" type="object" name="action_download_milestones" class="oe_highlight" invisible="type !='sample'"/>
                        <button string="Import" type="object" name="import_sample_template" class="oe_highlight" invisible="type !='import'"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>