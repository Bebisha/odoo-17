<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">


        <record id="mail_send_to_users_for_timeline_alert" model="ir.cron">
            <field name="name">TimeLine End date Getting Close</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=3, minute=30, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field> <!-- Repeats indefinitely -->
            <field name="model_id" ref="kg_project_milestone.model_timeline_line_sec"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_action_email()</field>
            <field name="priority" eval="5"/>
        </record>



        <record id="mail_send_to_users_for_timeline_alert" model="ir.cron">
            <field name="name">TimeLine End date Getting Close 2</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=3, minute=30, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field> <!-- Repeats indefinitely -->
            <field name="model_id" ref="kg_project_milestone.model_timeline_line"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_action_email()</field>
            <field name="priority" eval="5"/>
        </record>
    </data>
</odoo>