<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="milestone_tree_view" model="ir.ui.view">
        <field name="name">milestone.view.tree</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
              <tree decoration-danger="is_deadline_exceeded" decoration-muted="is_reached" editable="bottom">
                <field name="name"/>
                <field name="deadline" optional="show"/>
                <field name="is_reached" optional="show"/>
                <field name="is_deadline_exceeded" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="milestone_form_view" model="ir.ui.view">
        <field name="name">milestone.view.form</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <form string="Milestone">
                
                    <sheet string="Project">
                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button class="oe_stat_button" type="object"
                            name="view_tasks" icon="fa-tasks"> Tasks
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="project_id" invisible="0"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                        </group>
                        <group>
                            <field name="is_reached"/>
                            <field name="is_deadline_exceeded" readonly="1"/>
                            <field name="is_deadline_future" readonly="1"/>

                        </group>
                    </group>
                   
                </sheet>
            </form>
        </field>
    </record>

    <record id="milestone_kanban_view" model="ir.ui.view">
        <field name="name">milestone.view.kanban</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors">

                <field name="name" string="Milestone"/>
                <field name="project_id" string="Project"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form">
                            <div class="row">
                                <div class="col-12">
                                    <strong><field name="name" string="Name"/></strong>
                                </div>
                            </div><br/>
                            <div class="row">
                                <div class="col-12">
                                    <b>Project:</b><strong><field name="project_id" string="Project Name"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <label for="deadline" string="Deadline"/>
                                    <b>Deadline:</b> <field name="deadline" string="Deadline"/>
                                </div>
                                <div class="col-8">
                                    <label for="reached_date" string="Date"/>
                                    <t t-if="reached_date"><b>Deadline Reached:</b></t> <field name="reached_date" string="Date"/>
                                </div>
                                <div class="col-4">
                                    <div class="oe_kanban_bottom_right float-right">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="project_milestone_view_search" model="ir.ui.view">
        <field name="name">project.milestone_search</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <search string="Project Milestone">
                <field name="name"/>
                <field name="project_id"/>
                <field name="deadline"/>
                <field name="is_reached"/>
                <field name="is_deadline_exceeded"/>
                <separator/>
                <filter string="Milestone Reached" name="draft_state" domain="[('is_reached', '=', True)]"/>
                <separator/>

                <filter string="Create Date" name="filter_create_date" date="create_date"/>
                <group expand="1" string="Group By">
                    <filter string="Project" name="groupby_project_id" context="{'group_by':'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="milestone_menu_action" model="ir.actions.act_window">
        <field name="name">Milestone</field>
        <field name="res_model">project.milestone</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_groupby_project_id':1}</field>
        <field name="search_view_id" ref="project_milestone_view_search"/>
    </record>

    <menuitem name="Milestone"
              groups="project.group_project_manager"
              parent="project.menu_main_pm"
              id="milestone_menu"
              action="milestone_menu_action"
              sequence="1"/>

</odoo>