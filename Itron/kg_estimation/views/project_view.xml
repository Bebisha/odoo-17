<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="project_task_view_inherit">
            <field name="name">project.task.view.inherit1</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="before">
                    <field name="estimation_id"/>
                    <field name="estimation_line_id" domain="[('estimation_id', '=', estimation_id)]"/>
                </field>
            </field>
        </record>

        <record id="project_task_gantt_view" model="ir.ui.view">
            <field name="name">project.tasks.gantt.view.gantt</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <gantt
                        date_start="date_from"
                        date_stop="date_to"
                        default_group_by="project_id"
                        default_scale="week"
                        color="project_id"
                        scales="day,week,month,year"
                        precision="{'day': 'hour:full', 'week': 'day:full', 'month': 'day:full', 'year': 'day:full'}">
                    <field name="project_id"/>
                    <templates>
                        <div t-name="gantt-popover" class="container-fluid">
                            <div class="row no-gutters">
                                <div class="col">
                                    <ul class="pl-1 mb-0">
                                        <li>
                                            <strong>Start Date:</strong>
                                            <t t-esc="userTimezoneStartDate.format('YYYY-MM-DD hh:mm:ss A')"/>
                                        </li>
                                        <li>
                                            <strong>Stop Date:</strong>
                                            <t t-esc="date_to.format('YYYY-MM-DD hh:mm:ss A')"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </templates>
                </gantt>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_gantt_form">
            <field name="name">Project Task Gantt</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="tag_ids" position="after">
                    <field name="date_from" invisible="1"/>
                    <field name="date_to" invisible="1"/>
                </field>
                <xpath expr="//field[@name='milestone_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
