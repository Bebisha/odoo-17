<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="PoolDashboard">
        <div class="dashboard-container"
             style="padding: 20px; background-color: #f9f9f9; font-family: Arial, sans-serif;">
            <center>
                <h1 style="margin-bottom: 20px; color: #2c3e50; font-weight: bold;">
                    Resource Pool Dashboard
                </h1>
            </center>
            <br/>
            <div class="row" style="display: flex; justify-content: center; gap: 20px; margin-bottom: 30px;">
                <div class="card" t-on-click="redirectToRunningProjects"
                     style="width: 220px; border: none; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5); background-color: #ffffff; text-align: center;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 15px; color: #333;">Running Projects:</h5>
                        <p class="card-text" style="font-size: 24px; font-weight: bold; ">
                            <t t-esc="state.running_count"/>
                        </p>
                    </div>
                </div>
                <div class="card" t-on-click="redirectToEngagementProjects"
                     style="width: 220px; border: none; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5); background-color: #ffffff; text-align: center;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 15px; color: #333;">Engagement Projects:</h5>
                        <p class="card-text" style="font-size: 24px; font-weight: bold;">
                            <t t-esc="state.engagement_count"/>
                        </p>
                    </div>
                </div>
            </div>
            <br/>
            <div id="dashboard-content"
                 style="background-color: #ffffff; border-radius: 8px; padding: 20px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <table class="table table-hover table-striped"
                       style="width: 100%; border-collapse: collapse; text-align: center;">
                    <thead style="background-color:#2c3e50; color: #fff;">
                        <tr>
                            <th style="padding: 12px; font-size: 16px;">Employee</th>
                            <th style="padding: 12px; font-size: 16px;">Project</th>
                            <th style="padding: 12px; font-size: 16px;">Team Lead</th>
                            <th style="padding: 12px; font-size: 16px;">Engagement Model</th>
                            <th style="padding: 12px; font-size: 16px;">Start Date</th>
                            <th style="padding: 12px; font-size: 16px;">End Date</th>
                            <th style="padding: 12px; font-size: 16px;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.result" t-as="pool" t-key="pool.id">
                            <tr style="background-color: #f7f7f7; border-bottom: 1px solid #ddd;">
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.employee_name"/>
                                </td>
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.project_name"/>
                                </td>
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.team_lead_name"/>
                                </td>
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.engagement_model"/>
                                </td>
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.start_date"/>
                                </td>
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.end_date"/>
                                </td>
                                <td style="padding: 10px; font-size: 14px; color: #333;">
                                    <t t-esc="pool.status"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row" style="display: flex; flex-wrap: wrap; gap: 20px; margin-top: 20px;">
            <div class="card"
                 style="width: 100%; border: none; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5); background-color: #ffffff;">
                <div class="card-body">
                    <!-- Centered Header -->
                    <h5 class="card-title"
                        style="font-size: 18px; font-weight: bold; color: #333; text-align: center;">Resource
                        Pool
                    </h5>

                    <!-- Conditional Table Display -->
                    <t t-if="state.pool_lines.length > 0">
                        <!-- Full-width table -->
                        <table class="table table-hover table-striped"
                               style="width: 100%; border-collapse: collapse; text-align: left;">
                            <thead style="background-color:#2c3e50; color: #fff;">
                                <tr>
                                    <th style="padding: 12px 160px; font-size: 16px; text-align: left;">Employee</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="state.pool_lines" t-as="line" t-key="line.pool_id">
                                    <tr style="background-color: #f7f7f7; border-bottom: 1px solid #ddd;">
                                        <td style="padding: 10px 160px; font-size: 14px; color: #333; text-align: left;">
                                            <t t-esc="line.resource_name"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <p class="card-text" style="font-size: 18px; color: #e74c3c;">No Pool Lines Available
                        </p>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
