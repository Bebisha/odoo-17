<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="late_coming_dashboard_action" model="ir.actions.client">
        <field name="name">Late Arrival Dashboard</field>
        <field name="tag">late_coming_dashboard</field>
    </record>
    <record id="late_coming_waiting_dashboard_action" model="ir.actions.client">
        <field name="name">Late Arrival Approval Dashboard</field>
        <field name="tag">late_coming_approval_dashboard</field>
    </record>
<!--    <menuitem name="Late Arrival Dashboard" id="late_coming_dashboard_menu"-->
<!--              sequence="30" parent="hr_attendance.menu_hr_attendance_root" action="late_coming_dashboard_action" groups="hr_holidays.group_hr_holidays_manager"/>-->

    <template id="employee_late_arivale_template" name="Employee Casual Leave">
        <div class="container mt-4 text-center">
            <!-- Center the header -->
            <h1 style="text-align: center;">Late Requests for
                <t t-esc="employee.name"/>
            </h1>

            <!-- Table container centered -->
            <div style="overflow-x:auto; margin-top: 30px; max-width: 90%; margin-left: auto; margin-right: auto;">
                <table style="width: 100%; max-width: 1200px; border-collapse: collapse; font-size: 14px; border-radius: 10px; border: 1px solid #ddd; text-align: left; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); margin: 0 auto;">
                    <thead style="background-color: #343a40; color: white; text-transform: uppercase; font-weight: bold; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                        <tr>
                            <th style=" text-align: center;padding: 12px; min-width: 150px; border-left: 1px solid #ddd;">Request Date</th>
                            <th style="text-align: center;padding: 12px; min-width: 150px; border-left: 1px solid #ddd;">Time of Arrival
                            </th>
                            <th style="padding: 12px; min-width: 100px; text-align: center; border-left: 1px solid #ddd;">
                                Late By
                            </th>

                        </tr>
                    </thead>
                    <tbody style="background-color: #f9f9f9;">
                        <t t-foreach="late_requests" t-as="request">
                            <tr style="background-color: #fff; border-bottom: 1px solid #ddd;">
                                <!-- Request Date with new format: day/month/year -->
                                <td style="padding: 12px; text-align: center; border-left: 1px solid #ddd; border-bottom-left-radius: 10px;">
                                    <a t-att-href="'/update_is_show_back?record_id=' + str(request.id) + '&amp;model_name=early.late.request'"
                                       style="color: #007bff; text-decoration: none;">
                                        <t t-esc="request.date_late.strftime('%d/%m/%Y')"/>
                                    </a>
                                </td>

                                <td style="padding: 12px; text-align: center; border-left: 1px solid #ddd;">
                                    <a t-att-href="'/update_is_show_back?record_id=' + str(request.id) + '&amp;model_name=early.late.request'"
                                       style="color: #007bff; text-decoration: none;">
                                        <t t-esc="request.time_string"/>
                                    </a>
                                </td>

                                <td style="padding: 12px; color: #f44336; text-align: center; border-left: 1px solid #ddd; border-bottom-right-radius: 10px;">
                                    <a t-att-href="'/update_is_show_back?record_id=' + str(request.id) + '&amp;model_name=early.late.request'"
                                       style="color: #f44336; text-decoration: none;">
                                        <t t-esc="request.late_hrs"/>
                                    </a>
                                </td>
                            </tr>
                        </t>
                    </tbody>

                </table>
            </div>

            <!-- Back Button with Icon -->
            <a href="#" onclick="history.back();" class="btn btn-secondary"
               style="margin-top: 40px; padding: 10px 20px; background-color: #007bff; color: white; border-radius: 5px; text-decoration: none; box-shadow: 0px 2px 8px rgba(0, 123, 255, 0.2); display: inline-flex; align-items: center;">
                <i class="fa fa-arrow-left" style="margin-right: 10px;"></i>
                Back
            </a>
        </div>
    </template>


</odoo>