<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="kg_sales_target_view_form" model="ir.ui.view">
        <field name="name">kg.sales.target.view.form</field>
        <field name="model">kg.sales.target</field>
        <field name="arch" type="xml">
            <form string="Sales Target">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="user_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="year"/>
                            <field name="start_date" invisible="1"/>
                            <field name="end_date" invisible="1"/>
                        </group>
                        <group>
                        </group>
                        <group>
                            <label for="lead_target"/>
                            <div class="o_row">
                                <field name="lead_target"/>
                                <field name="lead_target_freq"/>
                            </div>
                            <label for="prop_target"/>
                            <div class="o_row">
                                <field name="prop_target"/>
                                <field name="prop_target_freq"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Targets">
                            <field name="target_line_ids">
                                <tree editable="bottom">
                                    <field name="target_id" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="revenue_head_id" domain="[('year', '=', parent.year)]"
                                           options="{'no_create': True, 'no_open': True}" required="1" force_save="1"/>
                                    <field name="unallocated_per" widget="percentage"/>
                                    <field name="target_per" widget="percentage"/>
                                    <field name="target_amount"/>
                                </tree>
                            </field>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <group class="oe_subtotal_footer" colspan="2" name="sale_total">
                                    <field name="tot_per" widget="percentage"/>
                                    <field name="annual_target_amount"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                            <separator string="Month wise Target"/>
                            <field name="monthly_target_lines" invisible="0">
                                <tree string="Monthly Target Lines" editable="top" edit="0" create="0" delete="0">
                                    <field name="sales_target_id" column_invisible="1"/>
                                    <field name="month" force_save="1"/>
                                    <field name="year" force_save="1"/>
                                    <field name="start_date" column_invisible="1"/>
                                    <field name="end_date" column_invisible="1"/>
                                    <field name="target" sum="True"/>
                                    <field name="company_id" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <button string="View" name="view_splits" type="object" class="btn-primary"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

    <record id="kg_sales_target_view_tree" model="ir.ui.view">
        <field name="name">kg.sales.target.view.form.tree</field>
        <field name="model">kg.sales.target</field>
        <field name="arch" type="xml">
            <tree string="Sales Target">
                <field name="user_id"/>
                <field name="year"/>
                <field name="lead_target" string="Lead Target(Daily)" sum="Lead Target(Daily)"/>
                <field name="prop_target" string="Proposal Target(Weekly)" sum="Proposal Target(Weekly)"/>
                <field name="annual_target_amount" sum="Total Annual Target"/>
                <field name="tot_per" widget="percentage" sum="Total Allocated(%)"/>
                <field name="achieved_target_amount" sum="Total Achieved"/>
                <field name="achieved_target_per" widget="percentage"/>
                <field name="company_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="kg_sales_target_action" model="ir.actions.act_window">
        <field name="name">Sales Target</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kg.sales.target</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>

