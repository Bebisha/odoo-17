<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="cron_accrual_leave_number_days" model="ir.cron">
        <field name="name">Annual Leave - Update number of days</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_hr_leave_allocation"/>
        <field name="code">model.cron_update_days()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="(DateTime.now().replace(month=1, day=20)).strftime('%Y-%m-%d 00:00:00')"/>
    </record>

