<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="model_account_move_action_line_invoice" model="ir.actions.server">
            <field name="name">Link Invoice</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_view_types">tree,form</field>
            <field name="state">code</field>
            <field name="code">action = records.link_invoice()</field>
        </record>

        <record id="model_account_move_action_line_so" model="ir.actions.server">
            <field name="name">Link Sale Order</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">tree</field>
            <field name="state">code</field>
            <field name="code">action = records.link_so_invoice()</field>
        </record>

        <record id="model_account_move_action_line_reconcile" model="ir.actions.server">
            <field name="name">Link Payment - Vendor Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">tree</field>
            <field name="state">code</field>
            <field name="code">action = records.link_payment_with_bills()</field>
        </record>

        <record id="model_account_move_action_ci_reconcile" model="ir.actions.server">
            <field name="name">Link Payment - Customer Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">tree</field>
            <field name="state">code</field>
            <field name="code">action = records.link_payment_with_invoice()</field>
        </record>

        <record id="model_account_move_action_qty_inv" model="ir.actions.server">
            <field name="name">Update Qty Inv</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">action = records.update_qty_invoiced()</field>
        </record>
    </data>
</odoo>
