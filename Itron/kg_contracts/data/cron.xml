<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">


        <record id="mail_send_to_contractors_for_alert" model="ir.cron">
            <field name="name">Contract End date Getting Expired Amc</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=3, minute=30, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field> <!-- Repeats indefinitely -->
            <field name="model_id" ref="kg_contracts.model_project_contract_request_amc"/>
            <field name="state">code</field>
            <field name="code">model.action_contract_end_date_over()</field>
            <field name="priority" eval="5"/>
        </record>

        <record id="mail_send_to_contractors_for_alert_on/off" model="ir.cron">
            <field name="name">Contract End date Getting Expired</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=3, minute=30, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="numbercall">-1</field> <!-- Repeats indefinitely -->
            <field name="model_id" ref="kg_contracts.model_project_contract_request"/>
            <field name="state">code</field>
            <field name="code">model.action_contract_end_date_over()</field>
            <field name="priority" eval="5"/>
        </record>
        <record id="crone_action_to_contract_expiration_amc" model="ir.cron">
            <field name="name">Contract Expiration Cron AMC</field>
            <field name="model_id" ref="model_project_contract_request_amc"/>
            <field name="code">model.cron_action_to_expire()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="crone_action_to_contract_expiration" model="ir.cron">
            <field name="name">Contract Expiration Cron</field>
            <field name="model_id" ref="model_project_contract_request"/>
            <field name="code">model.cron_action_to_expire()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>

</odoo>