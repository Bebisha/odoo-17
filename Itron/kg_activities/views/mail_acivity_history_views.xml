    <!-- inherited form view of mail.activity   -->
    <record id="view_mail_activity_form_inherit_id" model="ir.ui.view">
        <field name="name">mail.activity.form.inherit</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <field name="stage" widget="statusbar" invisible="not helpdesk_id" options="{'clickable':'1'}"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='activity_type_id']" position="before">
                <field name="helpdesk_id" invisible="not helpdesk_id"/>
            </xpath>
            <xpath expr="//field[@name='summary']" position="after">
                <field name="planned_hrs" />
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="before">
                <field name="start_date" />
            </xpath>
        </field>
    </record>


    <record id="all_activity_tree_view_id" model="ir.ui.view">
        <field name="name">mail activity history tree view</field>
        <field name="model">mail.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="activity_type_id"/>
                <field name="user_id"/>
                <field name="summary"/>
                <field name="note"/>
                <field name="start_date" string="Start Date"/>
                <field name="date_deadline" string="End Date"/>
                <field name="res_model" optional="hide"/>
                <field name="planned_hrs" widget="float_time"/>
                <field name="hours_spent" widget="float_time"/>
            </tree>
        </field>
    </record>



    <record model="ir.actions.server" id="my_activity_id_actions">
        <field name="name">My Activity</field>
        <field name="model_id" ref="kg_activities.model_custom_activity"/>
        <field name="state">code</field>
        <field name="code">action = {
            'name': 'My Activity',
            'type': 'ir.actions.act_window',
            'res_model': 'mail.activity',
            'target': 'current',
            'view_mode': 'tree,form,kanban,pivot,calendar',
            'domain': [('user_id', '=', env.user.id)],
            'context':{ 'default_res_model': 'custom.activity','default_res_id' :
            env.ref('kg_activities.record_custom_activity').id},
            }
        </field>
    </record>

    <record model="ir.actions.server" id="all_activity_actions">
        <field name="name">All Activity</field>
        <field name="model_id" ref="kg_activities.model_custom_activity"/>
        <field name="state">code</field>
        <field name="code">action = {
            'name': 'All Activity',
            'type': 'ir.actions.act_window',
            'res_model': 'mail.activity',
            'target': 'current',
            'view_mode': 'tree,form,kanban,pivot,calendar',
            'context':{ 'default_res_model': 'custom.activity','default_res_id' :
            env.ref('kg_activities.record_custom_activity').id},
            }
        </field>
    </record>

    <record id="activity_report_graph_action" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">mail.activity</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="context">{
            'search_default_completion_date': 1,
            'graph_mode': 'bar',

            }
        </field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
            <p>
                Start scheduling activities on your opportunities
            </p>
        </field>
    </record>

    <!-- ACTION Activity Plans -->
    <record id="mail_activity_plan_action_mail_activity_history" model="ir.actions.act_window">
        <field name="name">Plans</field>
        <field name="res_model">mail.activity.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="mail.mail_activity_plan_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new plan
            </p>
        </field>
    </record>
</odoo>