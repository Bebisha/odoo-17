    <template id="kg_so_with_logo">
        <t t-call="web.html_container"/>
        <t t-foreach="request.env['sale.order'].browse(form['sale_id'][0])" t-as="o">
            <t t-if="form['report_type'] == 'with'">
                <t t-call="kg_curr_conv.report_so_with_header" t-lang="o.partner_id.lang"/>
            </t>
            <t t-if="form['report_type'] == 'without'">
                <t t-call="kg_curr_conv.report_so_without_header"/>
            </t>
        </t>
    </template>
