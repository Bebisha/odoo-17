<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="paperformat_po_report_id" model="report.paperformat">
            <field name="name">PO A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">52</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">47</field>
            <field name="dpi">90</field>
        </record>

        <record id="kg_print_invoice" model="ir.actions.report">
           <field name="name">Invoice</field>
           <field name="model">account.move</field>
           <field name="report_type">qweb-pdf</field>
           <field name="report_name">kg_curr_conv.kg_invoice_with_header</field>
           <field name="report_file">kg_curr_conv.kg_invoice_with_header</field>
           <field name="print_report_name">(object._get_report_base_filename())</field>
        </record>


        <record id="po_with_logo" model="ir.actions.report">
            <field name="name">PO</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kg_curr_conv.kg_po_with_logo</field>
            <field name="report_file">kg_curr_conv.kg_po_with_logo</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="paperformat_id" ref="kg_curr_conv.paperformat_po_report_id"/>

        </record>

        <record id="so_with_logo" model="ir.actions.report">
           <field name="name">SO</field>
           <field name="model">sale.order</field>
           <field name="report_type">qweb-pdf</field>
           <field name="report_name">kg_curr_conv.kg_so_with_logo</field>
           <field name="report_file">kg_curr_conv.kg_so_with_logo</field>
           <field name="print_report_name">(object._get_report_base_filename())</field>
        </record>
    </data>
</odoo>
