<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="itron_external_header_po">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
            <div class="col-xs-12" style="line-height:15pt;">
                <div class="col-xs-6" style="float: left">
                        <t>
                            <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}" height="100px" width="250px"/>
                        </t>
                </div>
                <div class="col-xs-6" style="float: right">
                    <div class="float-right" align="right" style="font-size: 12pt;line-height: 23px;">
                        <br/>
                        <span class="text-left" style="font-size: 18pt;font-weight: bold;font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri;" t-field="o.company_id.name"/><br/>
                        <t t-if="o.company_id.zip">PO Box #<span t-field="o.company_id.zip"/> , </t><t t-if="o.company_id.street"><span t-field="o.company_id.street"/></t><br/>
                        <t t-if="o.company_id.street2"><span t-field="o.company_id.street2"/> , </t><t t-if="o.company_id.city"><span t-field="o.company_id.city"/></t><br/>
                        <t t-if="o.company_id.state_id"><span t-field="o.company_id.state_id.name"/> , </t> <t t-if="o.company_id.country_id"><span t-field="o.company_id.country_id.name"/></t><br/>
                        <t t-if="o.company_id.email"><span style="color:#900C3F;"><i class="fa fa-envelope"/></span> : <span t-field="o.company_id.email"/></t><br/>
                        <t t-if="o.company_id.phone"><span style="color:#900C3F;"><i class="fa fa-phone"/></span> : <span t-field="o.company_id.phone"/></t><br/>
                        <t t-if="o.company_id.vat">
                           <span>VATIN # : </span>
                           <span t-field="o.company_id.vat"/>
                       </t>
                    </div>
                </div>
            </div>
        </div>



        <div class="article " t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>


        <div class="footer">
            <div class="text-center">
                    <div class="col-xs-12" align="center" style="line-height:12px;">
                        <span t-field="o.company_id.name" />,Office #<span t-field="o.company_id.street" />,<span t-field="o.company_id.street2" />,<span t-field="o.company_id.city" />,
                        PO Box #<span t-field="o.company_id.zip" />,<span t-field="o.company_id.state_id.name" />
                    </div>
                    <div class="col-xs-12" align="center" style="line-height:12px;">
                           <span style="color:#900C3F;"><i class="fa fa-envelope"/></span> : <span t-field="o.company_id.email" />,<span style="color:#900C3F;"><i class="fa fa-phone"/></span> :<span t-field="o.company_id.phone" />
                    </div>
            </div>
        </div>
    </template>

    <template id="itron_external_header_po_1">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
        </div>
        <div class="article " t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
        <div class="footer">
        </div>
    </template>

    <template id="report_po_with_header">
        <t t-call="kg_curr_conv.itron_external_header_po">
            <div class="page" style="font-size: 14px;">
                <div class="oe_structure"/>
                <br/>
                <br/>
                <center>
                    <h3>
                        <span style="font-size: 16pt;font-weight: bold;font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri;">PURCHASE ORDER</span>
                    </h3>
                </center>
                <br/>
                <br/>
                <table style="width:100%;font-size:16px;border:1px solid white;">
                    <tr>
                        <td style="width:75%">
                            <strong>TO:</strong>
                            <br/>
                            <strong>
                            <span t-field="o.partner_id" />
                            </strong>
                            <br />
                            <t t-if="o.partner_id.street"> <span t-field="o.partner_id.street" /></t>
                            <t t-if="o.partner_id.street2">  <span t-field="o.partner_id.street2" /></t>
                            <t t-if="o.partner_id.street or o.partner_id.street2"> <br/> </t>
                            <t t-if="o.partner_id.city"> <span t-field="o.partner_id.city" /></t>
                            <t t-if="o.partner_id.state_id"><span t-field="o.partner_id.state_id" /></t>
                            <t t-if="o.partner_id.country_id"><span t-field="o.partner_id.country_id" /></t>
                            <t t-if="o.partner_id.city or o.partner_id.state_id or o.partner_id.country_id"> <br/> </t>
                            <t t-if="o.partner_id.phone"><span t-field="o.partner_id.phone" /></t>
                            <t t-if="o.partner_id.mobile"><span t-field="o.partner_id.mobile" /></t>

                            <t t-if="o.partner_id.phone or o.partner_id.mobile"> <br/> </t>

                            <t t-if="o.partner_id.email"><span t-field="o.partner_id.email"/></t>
                            <t t-if="o.partner_id.email"> <br/> </t>
                            <t t-if="o.partner_id.vat">
                               <span t-if="o.partner_id.country_id.code == 'AE'">TRN #:</span>
                               <span t-if="o.partner_id.country_id.code == 'IN'">TIN #:</span>
                               <span t-field="o.partner_id.vat"/>
                           </t>
                        </td>
                        <td style="width:35%">
                            <table style="border:1px solid white;">
                               <t t-if="o.name">
                                <tr>
                                    <td style="white-space: nowrap; width:10%" class="text-left">PO # </td>
                                    <td style="width:10%" class="text-left"> : </td>
                                    <td style="width:10%" class="text-left"><![CDATA[ &nbsp;]]><strong><span t-field="o.name"/></strong></td>
                                </tr>
                            </t>
                            <t t-if="o.date_order">
                                <tr>
                                    <td class="text-left">Date</td>
                                    <td class="text-left"> : </td>
                                    <td class="text-left"><![CDATA[ &nbsp;]]><strong><span t-field="o.date_order" t-field-options="{&quot;format&quot;:&quot;dd/MM/yyyy&quot;}"/></strong></td>
                                </tr>
                            </t>
                            <t t-if="o.partner_ref">
                                <tr>
                                    <td class="text-left">Ref # </td>
                                    <td class="text-center"> : </td>
                                    <td class="text-left"><![CDATA[ &nbsp;]]><strong><span t-field="o.partner_ref"/></strong></td>
                                </tr>
                            </t>
                            </table>
                        </td>
                    </tr>
                </table>
                <br/><br/>
                <table class="table table-bordered" style="padding:10px;width:100%;border:1px solid black;font-size:14px;">
                    <thead>
                        <tr>                               
                            <th style="width:5%;border:1px solid black;text-align:center;"><strong>Si</strong></th>
                            <t t-if="o.show_part_code">
                                <th style="width:20%;border:1px solid black;text-align:center;"><strong>Part Code</strong></th>
                            </t>
                            <th style="width:30%;border:1px solid black;text-align:center;"><strong>Description</strong></th>
                            <th style="width:10%;border:1px solid black;text-align:center;"><strong>Qty</strong></th>
                            <th style="width:15%;border:1px solid black;text-align:center;"><strong>Tax</strong></th>
                            <th style="width:20%;border:1px solid black;text-align:center;"><strong>Unit Price</strong></th>
                            <th style="width:20%;border:1px solid black;text-align:center;"><strong>Total (<span t-field="o.currency_id"/>)</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="order_line">
                            <td style="width:5%;border:1px solid black;text-align:center;">
                                <span t-esc="order_line_index + 1"/>
                            </td>
                            <t t-if="o.show_part_code">
                                <td style="width:20%;border:1px solid black;text-align:left;">
                                    <span t-esc="order_line.default_code"/>
                                </td>
                            </t>
                            <td style="width:30%;border:1px solid black;text-align:left;">
                                <span t-esc="order_line.name"/>
                            </td>
                            <td style="width:10%;border:1px solid black;text-align:center;">
                               <span t-field="order_line.product_qty" t-options='{"widget": "float","precision": o.currency_id.decimal_places}'/>
                            </td>
                            <t t-set="od_total" t-value="(order_line.price_unit*order_line.product_qty)"/>
                            <t t-set="tax_dec" t-value="order_line.taxes_id.amount/100"/>
                            <t t-set="tax" t-value="od_total * tax_dec"/>

                            <t t-set="tot" t-value="od_total + tax"/>
                            <td style="width:15%;border:1px solid black;text-align:right;">
                                <span t-esc="tax" t-options='{"widget": "float","precision": o.currency_id.decimal_places}'/>
                            </td>
                            <td style="width:20%;border:1px solid black;text-align:right;">
                                <span t-field="order_line.price_unit" t-options='{"widget": "float","precision": o.currency_id.decimal_places}'/>
                            </td>
                            <td style="width:20%;border:1px solid black;text-align:right;">
                                <span t-esc="tot" t-options='{"widget": "float","precision": o.currency_id.decimal_places}'/>
                            </td>
                        </tr>  
                        <tr style="font-size:14px;font-weight: bold;font-family:Helvetica,Verdana,Arial,sans,Lucida Grande,Calibri;">
                            <t t-if="o.show_part_code">
                                <td colspan="6" style="border:1px solid black;text-align:right;">Total</td>
                            </t>
                            <t t-else="">
                                <td colspan="5" style="border:1px solid black;text-align:right;">Total</td>
                            </t>

                            <td style="border:1px solid black;text-align:right;width:10%">
                                <span t-field="o.amount_total" t-options='{"widget": "float","precision": o.currency_id.decimal_places}'/>
                            </td>
                        </tr> 
                    </tbody>
                </table>
                <t t-if="o.notes">
                    <div style="margin-left:4px;">
                        <br/>
                            <strong>Payment Terms</strong>:<br/> <span t-field="o.notes" />
                        <br/>
                     </div>
                </t>
                <div class="col-xs-12" style="font-size:16px;">
                        <div class="col-xs-6">

                        </div>
                        <div class="col-xs-6" style="float: right">
                            <br/><br/>
                            <strong>Authorized Signatory</strong>
                        </div>
                </div>
            </div>
            </t>

    </template>

