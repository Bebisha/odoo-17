    <template id="kg_po_with_logo">
        <t t-call="web.html_container"/>
        <t t-foreach="request.env['purchase.order'].browse(form['po_id'][0])" t-as="o">
            <t t-if="form['report_type'] == 'with'">
                <t t-call="kg_curr_conv.report_po_with_header" t-lang="o.partner_id.lang"/>
            </t>
            <t t-if="form['report_type'] == 'without'">
                <t t-call="kg_curr_conv.report_po_without_header"/>
            </t>
        </t>
    </template>
