<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="kg_llc_inv">
        <t t-foreach="docs" t-as="o">
            <div class="header">
                <table class="table-condensed" style="font-size: 14px; width:100%;">
                    <col width="100%"/>
                    <tr>
                        <td>
                            <t t-foreach="o.user_id.company_ids" t-as="companies">
                                <t t-if="companies.name == 'Klystron Global LLC'">
                                    <t t-foreach="companies.header_image" t-as="images">
                                        <t t-if="images.name == 'kgheader'">
                                            <div class="row" align="left">
                                                <div class="col-xs-12">
                                                    <img t-if="images.img"
                                                         t-att-src="'data:image/png;base64,%s' % images.img"
                                                         height="100.0"
                                                         width="240.0"/>
                                                </div>
                                            </div>
                                        </t>
                                    </t>
                                </t>
                            </t>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="page" style="font-size: 14px;">
                <center>
                    <h3>
                        <br/>
                        <u>
                            <strong>INVOICE</strong>
                        </u>
                    </h3>
                </center>
                <br/>
                <div class="row">
                    <br/>
                    <div name="invoice_address" class="col-xs-6" style="font-size:16px">
                        <strong>To:</strong>
                        <br/>

                        <t t-if="o.partner_shipping_id">

                            <t t-if="o.partner_shipping_id">
                                <span t-field="o.partner_shipping_id.name"/>,
                                <br/>

                            </t>


                            <t t-if="o.partner_shipping_id.street">
                                <span t-field="o.partner_shipping_id.street"/>
                                <br/>
                            </t>

                            <t t-if="o.partner_shipping_id.street2">
                                <span t-field="o.partner_shipping_id.street2"/>
                                <br/>
                            </t>

                            <t t-if="o.partner_shipping_id.city">
                                <span t-field="o.partner_shipping_id.city"/>,
                                <br/>
                            </t>

                            <t t-if="o.partner_shipping_id.zip">
                                Po Box:
                                <span t-field="o.partner_shipping_id.zip"/>
                                <br/>
                            </t>

                            <t t-if="o.partner_shipping_id.state_id">
                                <span t-field="o.partner_shipping_id.state_id"/>,
                                <br/>

                            </t>
                            <t t-if="o.partner_shipping_id.country_id">
                                <span t-field="o.partner_shipping_id.country_id"/>.
                                <br/>
                            </t>

                            <t t-if="o.partner_shipping_id.phone">
                                <span t-field="o.partner_shipping_id.phone"/>
                            </t>

                            <t t-if="o.partner_shipping_id.barcode">
                                TRN #:
                                <span t-field="o.partner_shipping_id.barcode"/>
                            </t>

                        </t>
                        <t t-if="not o.partner_shipping_id">
                            <t t-if="o.partner_id">
                                <span t-field="o.partner_id"/>
                                <br/>

                            </t>

                            <t t-if="o.partner_id.street">
                                <span t-field="o.partner_id.street"/>
                                <br/>
                            </t>

                            <t t-if="o.partner_id.street2">
                                <span t-field="o.partner_id.street2"/>
                                <br/>
                            </t>

                            <t t-if="o.partner_id.city">
                                <span t-field="o.partner_id.city"/>,
                                <br/>
                            </t>

                            <t t-if="o.partner_id.zip">
                                Po Box:
                                <span t-field="o.partner_id.zip"/>
                                <br/>
                            </t>

                            <t t-if="o.partner_id.state_id">
                                <span t-field="o.partner_id.state_id"/>,
                                <br/>

                            </t>
                            <t t-if="o.partner_id.country_id">
                                <span t-field="o.partner_id.country_id"/>.
                                <br/>
                            </t>

                            <t t-if="o.partner_id.phone">
                                <span t-field="o.partner_id.phone"/>
                            </t>

                        </t>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1" align="left" style="font-size:18px">

                        <t t-if="o.number">
                            <p>
                                Invoice#:
                                <strong>
                                    <span t-field="o.number"/>
                                </strong>
                            </p>
                        </t>

                        <t t-if="o.kg_lpo">
                            <p>
                                PO Ref#:
                                <strong>
                                    <span t-field="o.kg_lpo"/>
                                </strong>
                            </p>
                        </t>


                        <t t-if="o.date_invoice">
                            <p>
                                Date:
                                <strong>
                                    <span t-field="o.date_invoice"/>
                                </strong>
                            </p>

                        </t>


                        <t t-if="o.payment_term_id">
                            <p>
                                Payment Terms :
                                <strong>
                                    <span t-field="o.payment_term_id"/>
                                </strong>
                            </p>
                        </t>
                        <t t-if="o.date_due">
                            <p>
                                Due Date :
                                <strong>
                                    <span t-field="o.date_due"/>
                                </strong>
                            </p>
                        </t>
                    </div>
                </div>
                <br/>
                <br/>
                <table class="table table-condensed"
                       style="border-right:1px solid black;border-left:1px solid black;border-top:1px solid black;border-bottom:1px solid black;font-size:16px">
                    <thead>
                        <tr>
                            <th class="text-center" style="border-right:1px solid black">Sl #</th>
                            <th class="text-center" style="border-right:1px solid black;width:75%;">Description</th>
                            <th class="text-center" style="border-right:1px solid black">Qty</th>


                            <th class="text-center" style="border-right:1px solid black">Price</th>
                            <th class="text-center" style="border-right:1px solid black;width:13%;">Amount(<span
                                    t-field="o.currency_id"/>)
                            </th>
                            <th class="text-center" style="border-right:1px solid black">VAT</th>
                            <th class="text-center" style="border-right:1px solid black;width:13%;">Total(<span
                                    t-field="o.currency_id"/>)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="count" t-value="0"/>
                        <t t-set="od_total" t-value="0"/>
                        <tr t-foreach="o.invoice_line_ids" t-as="line" style="border-bottom:2px solid black;">
                            <t t-set="count" t-value="count + 1"/>
                            <td class="text-center" style="border-right:1px solid black">
                                <span t-esc="count"/>
                            </td>
                            <td class="text-left" style="border-right:1px solid black">
                                <span t-field="line.name"/>
                            </td>
                            <td class="text-center" style="border-right:1px solid black">
                                <span t-esc="'%.3f'%(line.quantity)"/>
                            </td>


                            <td class="text-right" style="border-right:1px solid black">
                                <span t-esc="'%.3f'%(line.price_unit)"/>
                            </td>

                            <t t-set="od_total" t-value="(line.price_unit*line.quantity)"/>
                            <t t-set="tax_dec" t-value="line.invoice_line_tax_ids.amount/100"/>
                            <t t-set="tax" t-value="od_total * tax_dec"/>

                            <t t-set="tot" t-value="od_total + tax"/>

                            <td class="text-right" style="border-right:1px solid black">
                                <t t-esc="'%.3f'%(od_total)"/>
                            </td>

                            <td class="text-center" style="border-right:1px solid black">
                                <t t-esc="'%.3f'%(tax)"/>
                            </td>
                            <td class="text-right" style="border-right:1px solid black">

                                <span t-esc="'%.3f'%(tot)"/>

                            </td>

                        </tr>
                        <tr>
                            <td colspan="5"/>
                            <td style="border-right:1px solid black;width:13%;display:inline;">
                                <span style="display:inline;">
                                    <strong>Total:</strong>
                                </span>
                            </td>
                            <td class="text-right">
                                <span class="text-right" style="text-align:right;">
                                    <strong>
                                        <t t-esc="'%.3f'%(o.amount_total)"/>
                                    </strong>
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <t t-if="o.comment">
                    <div class="row">

                        <div class="col-xs-12" style="font-size:16px">
                            <u>
                                <strong>Terms and Conditions:</strong>
                            </u>
                            <br/>
                            <br/>
                            <span t-field="o.comment"/>
                        </div>
                    </div>
                </t>


                <div style="font-size:16px;border: 1px solid black;">
                    <br/>
                    <u>
                        <strong>Bank Details:</strong>
                    </u>
                    <br/>
                    <span t-field="o.company_id.kg_bank_details"/>
                </div>


                <div class="row">
                    <div class="col-xs-6" style="font-size:16px">

                    </div>

                    <div class="col-xs-6" style="font-size:16px">
                        <br/>
                        <br/>
                        <br/>
                        <div>
                            <span style="padding-left:100px;"/>
                            <strong>Authorized Signatory:</strong>
                            <br/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-xs-12" align="center">
                        <br/>
                        <br/>
                        <p>
                            Klystron Global LLC, Office # 03128, KOM-3, PO Box 81, PC 135, Knowledge Oasis
                            Muscat,Sultanate of Oman
                            <br/>
                            e-mail: sales@klystronglobal.com, Tel: +968-24155360
                            <br/>
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
