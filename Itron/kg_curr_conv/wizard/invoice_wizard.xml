<odoo>

    <record id="view_invoice_wizard_form" model="ir.ui.view">
        <field name="name">view.invoice.wizard.form</field>
        <field name="model">invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Warning">
                <group>
                    <group>
                        <field name="report_type" widget="selection"/>
                    </group>
                    <group>
                        <field name="invoice_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Print" class="btn-primary" type="object" name="print_report"/>
                    <button string="Cancel" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Print Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_invoice_wizard_form"/>
        <field name="target">new</field>
    </record>


</odoo>
