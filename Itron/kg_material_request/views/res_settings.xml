<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mr_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mr</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app string="Material Request" data-string="Material Request" name="kg_material_request"
                         groups="kg_material_request.material_request_group_user">
                        <block title="Material Request" name="mr_setting_container">
                            <div class="row mt4">
                                <label string="Picking Type" for="picking_type_id"/>
                                <field name="picking_type_id"/>
                            </div>
                            <div class="row">
                                <label string="Source Location" for="source_id"/>
                                <field name="source_id"/>
                            </div>
                            <div class="row">
                                <label string="Destination Location" for="destination_id"/>
                                <field name="destination_id"/>
                            </div>

                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="kg_material_config_settings_action" model="ir.actions.act_window">
            <field name="name">Material Request Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mr_res_config_settings_view_form"/>
            <field name="target">inline</field>
            <field name="context">{'module' : 'kg_material_request'}</field>
        </record>


        <menuitem id="menu_parent_configuration_request"
                  name="Configuration"
                  parent="kg_material_request.menu_parent_material_request"
                  sequence="60"/>

        <menuitem id="menu_settings_material_request"
                  name="Settings"
                  parent="kg_material_request.menu_parent_configuration_request"
                  action="kg_material_request.kg_material_config_settings_action"
                  sequence="1"/>
        <menuitem id="mr_product_product_menu" name="Products" action="account.product_product_action_sellable"
                  parent="kg_material_request.menu_parent_configuration_request"
                  sequence="2" groups="product.group_product_variant"/>

    </data>
</odoo>