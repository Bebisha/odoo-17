<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="part_code_view_order_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='origin']" position='before'>
                 <field name="show_part_code"/>
             </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position='before'>
                <field name="default_code"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_view_part_code_inherit">
        <field name="name">sale.order.view.inherit1</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position='before'>
                <field name="default_code"/>
            </xpath>
        </field>
    </record>

     <record model="ir.ui.view" id="account_view_form_part_code_inherit">
        <field name="name">account.move.view.inherit1</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position='before'>
                <field name="default_code"/>
            </xpath>
        </field>
    </record>
</odoo>