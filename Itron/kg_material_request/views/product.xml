<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_tree_inherited" model="ir.ui.view">
            <field name="name">product.template.tree.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="uom_id" position="after">
                    <field name="uom_po_id" optional="hide"/>
                </field>
                <field name="product_tag_ids" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="qty_available" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="virtual_available" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="default_code" position="attributes">
                    <attribute name="string">Part Code</attribute>
                </field>

            </field>
        </record>

        <record id="product_variant_itron_tree_inherited" model="ir.ui.view">
            <field name="name">product.product.itron.tree.inherited</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="uom_id" position="after">
                    <field name="uom_po_id" optional="hide"/>
                </field>
                <field name="product_template_variant_value_ids" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="qty_available" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="virtual_available" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
<!--                <field name="default_code" position="attributes">-->
<!--                    <attribute name="string">Part Code</attribute>-->
<!--                </field>-->
                <xpath expr="//field[@name='default_code']" position="attributes">
                     <attribute name="string">Part Code</attribute>
                </xpath>

            </field>
        </record>

        <record id="product_variant_form_inherited_itron_kg" model="ir.ui.view">
            <field name="name">product.product.form.inherited.itron</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <xpath expr="//field[@name='categ_id']" position="move"/>
                    <xpath expr="//field[@name='default_code']" position="move"/>

                    <xpath expr="//label[@for='lst_price']" position="move"/>
                    <xpath expr="//div[@name='pricing']" position="move"/>

                    <xpath expr="//label[@for='standard_price']" position="move"/>
                    <xpath expr="//div[@name='standard_price_uom']" position="move"/>

                </xpath>
                <xpath expr="//field[@name='product_tooltip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='barcode']" position="before">
                    <xpath expr="//field[@name='invoice_policy']" position="move"/>
                </xpath>
                <field name="default_code" position="attributes">
                    <attribute name="string">Part Code</attribute>
                </field>
            </field>
        </record>


        <record id="product_form_inherited_itron_kg" model="ir.ui.view">
            <field name="name">product.template.form.inherited.itron</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <xpath expr="//field[@name='categ_id']" position="move"/>
                    <xpath expr="//field[@name='default_code']" position="move"/>
                    <xpath expr="//label[@for='list_price']" position="move"/>
                    <xpath expr="//div[@name='pricing']" position="move"/>

                    <xpath expr="//label[@for='standard_price']" position="move"/>
                    <xpath expr="//div[@name='standard_price_uom']" position="move"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="before">
                    <xpath expr="//field[@name='invoice_policy']" position="move"/>
                </xpath>
                <field name="default_code" position="attributes">
                    <attribute name="string">Part Code</attribute>
                </field>
                <xpath expr="//field[@name='product_tooltip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>


        <record id="product_template_search_view_inherit_itron_kg" model="ir.ui.view">
            <field name="name">product.template.search.inherit.itron</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <filter name="filter_to_purchase" position="after">
                    <filter name="filter_product_type" string="Storable Products"
                            domain="[('detailed_type', '=', 'product')]"/>
                </filter>
<!--                <xpath expr="//field[@name='default_code']" position="attributes">-->
<!--                    <attribute name="string">Part Code</attribute>-->
<!--                </xpath>-->

            </field>
        </record>


        <!--        Sale-->
        <record id="sale.product_template_action" model="ir.actions.act_window">
            <field name="context">{"search_default_filter_product_type":1, "sale_multi_pricelist_product_template":
                1,'default_detailed_type': 'product'}
            </field>
        </record>
        <!--         purchase-->
        <record id="purchase.product_normal_action_puchased" model="ir.actions.act_window">
            <field name="context">{"search_default_filter_product_type":1, "purchase_product_template": 1
                ,'default_detailed_type': 'product'}
            </field>
        </record>
        <!--        Accounting-->
        <record id="account.product_product_action_purchasable" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_product_type': 1 ,'default_detailed_type': 'product'}</field>
        </record>


        <record id="account.product_product_action_sellable" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_product_type': 1,'default_detailed_type': 'product'}</field>
        </record>
        <record id="stock.product_template_action_product" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_product_type': 1,'default_detailed_type': 'product'}</field>
        </record>
        <record id="stock.stock_product_normal_action" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_product_type': 1,'default_detailed_type': 'product'}</field>
        </record>
        <record id="product.product_normal_action_sell" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_product_type': 1,'default_detailed_type': 'product'}</field>
        </record>
        <record id="purchase.product_product_action" model="ir.actions.act_window">
            <field name="context">{'search_default_filter_product_type': 1,'default_detailed_type': 'product'}</field>
        </record>




    </data>
</odoo>
