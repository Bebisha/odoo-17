<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="mr_company_rule" model="ir.rule">
            <field name="name">Material Request Multi-Company Rule</field>
            <field name="model_id" ref="kg_material_request.model_kg_material_request"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="module_mr_category" model="ir.module.category">
            <field name="name">Material Request</field>
            <field name="sequence">17</field>
        </record>

        <record id='material_request_group_user_normal' model='res.groups'>
            <field name='name'>Material Users</field>
        </record>
        <record id='receipt_approval_group_user' model='res.groups'>
            <field name='name'>Receipt Approval</field>
        </record>

        <record id='material_request_group_user' model='res.groups'>
            <field name='name'>User</field>
            <field name="category_id" ref="kg_material_request.module_mr_category"/>
        </record>

        <record id="material_request_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="kg_material_request.module_mr_category"/>
            <field name="implied_ids" eval="[(4, ref('kg_material_request.material_request_group_user'))]"/>
        </record>

        <record id="material_request_group_approval" model="res.groups">
            <field name="name">Approvar</field>
            <field name="category_id" ref="kg_material_request.module_mr_category"/>
            <field name="implied_ids"
                   eval="[(4, ref('kg_material_request.material_request_group_user')), (4, ref('kg_material_request.material_request_group_manager'))]"/>
        </record>
        <record id="material_request_group_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="kg_material_request.module_mr_category"/>
            <field name="implied_ids"
                   eval="[(4, ref('kg_material_request.material_request_group_user')), (4, ref('kg_material_request.material_request_group_manager')), (4, ref('kg_material_request.material_request_group_approval'))]"/>
        </record>

        <record id="group_stock_user_restricted" model="res.groups">
            <field name="name">Inventory User Restricted OnHand View</field>
        </record>

    </data>
</odoo>