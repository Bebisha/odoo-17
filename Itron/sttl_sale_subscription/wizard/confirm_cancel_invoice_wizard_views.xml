<odoo>
    <record id="view_confirm_cancel_invoice_wizard" model="ir.ui.view">
        <field name="name">confirm.cancel.invoice.wizard.form</field>
        <field name="model">confirm.cancel.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Draft Invoice?">
                <field name="invoice_ids" widget="many2many_tags" options="{'no_create': True}" readonly="1" invisible="1"/>
                <!--            <group>-->
                <p>The following draft invoices are linked to this subscription:</p>
                <field name="invoice_ids" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                <p>Do you want to cancel <strong>all</strong> of them and proceed with closing the subscription?
                </p>
                <!--            </group>-->
                <footer>
                    <button name="action_confirm_cancel" string="Yes and Continue" type="object" class="btn-primary"/>
                    <button name="action_abort" string="No" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>