<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="FreeSupportDashboardTemplate">
        <div class="dashboard-container"
             style="padding: 20px; background-color: #f9f9f9; font-family: Arial, sans-serif;">
            <center>
                <h1 style="margin-bottom: 20px; color: #2c3e50; font-weight: bold;">
                    Free Support Dashboard
                </h1>
            </center>
            <t t-name="free_module.FilterSection">
                <div class="d-flex flex-wrap p-3"
                     style="gap: 29px !important;background-color: #e9ecef; border-radius: 5px;margin-bottom:20px;">
                    <div class="col-md-1" style=" min-width: 200px;">
                        <select id="customer_select" class="form-select select-button-style"
                                t-on-change="(e) => this.updateCustomerFilter(e)">
                            <option value="0" selected="1">Customer: All</option>
                            <t t-foreach="state.customers" t-as="customer" t-key="customer.id">
                                <option t-att-value="customer.id" t-esc="customer.name"
                                        t-att-selected="customer.id == state.selectedCustomerId"/>
                            </t>
                        </select>
                    </div>
                    <div class="col-md-1" style=" min-width: 200px;">
                                                <select id="status_val_select" class="form-select select-button-style"
                                                        t-on-change="(e) => this.updateStatusFilter(e)">
                        <!--                            <option value="">Status: All</option>-->
                                                      <option value="" t-att-selected="state.selectedStatusId === ''">Status: All</option>
                                                    <t t-foreach="state.StatusVals" t-as="type" t-key="type">
                        <!--                                <option t-att-value="type[0]" t-esc="type[1]"-->
                        <!--                                        t-att-selected="type[0] == state.selectedStatusId"/>-->
                                                        <option t-att-value="type[0]" t-att-selected="type[0] === state.selectedStatusId" t-esc="type[1]"/>
                                                    </t>
                                                </select>
                    </div>
                </div>
            </t>

            <div id="dashboard-content"
                 style="background-color: #ffffff; border-radius: 8px; padding: 20px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <table class="table table-hover table-striped"
                       style="width: 100%; border-collapse: collapse; text-align: center;">
                    <thead style="background-color:#2c3e50; color: #fff;">
                        <tr>
                            <!--                            <th style="padding: 12px; font-size: 16px;">Project</th>-->
                            <th style="padding: 12px; font-size: 16px;">Contract No</th>
                            <th style="padding: 12px; font-size: 16px;">Customer</th>
                            <th style="padding: 12px; font-size: 16px;">Project</th>
                            <th style="padding: 12px; font-size: 16px;">Start Date</th>
                            <th style="padding: 12px; font-size: 16px;">End Date</th>
                            <th style="padding: 12px; font-size: 16px;">Planned Days</th>
                            <th style="padding: 12px; font-size: 16px;">Contract Type</th>
                            <th style="padding: 12px; font-size: 16px;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.free_contracts" t-as="free" t-key="free.id">
                            <tr t-on-click="(e) => this.tot_free_contracts(e, free.id)">
                                <!--                                <td t-esc="free.project_id"/>-->
                                <td t-esc="free.contract_no"/>
                                <td t-esc="free.customer_name"/>
                                <td t-esc="free.project_id"/>
                                <td t-esc="free.date_start"/>
                                <td t-esc="free.date_end"/>
                                <td t-esc="free.planned_days"/>
                                <!--                                <td t-esc="free.spent_hrs"/>-->
                                <td t-esc="free.contract_type"/>
                                <td t-esc="free.ribbon_status"/>
                                <!--                                <t t-set="rebion_status_label" t-value="{ 'pending': 'Hold', 'done': 'Active' }"/>-->
                                <!--                                <td t-esc="free.rebion_status"/>-->
                                <!--                                <td t-esc="rebion_status_label[free.rebion_status]"/>-->
                            </tr>
                        </t>
                    </tbody>

                </table>
            </div>
        </div>
    </t>
</templates>
