    <record id="crone_action_to_change_free_support_state" model="ir.cron">
        <field name="name">Contract State Changing Cron Free Support</field>
        <field name="model_id" ref="model_project_contract_request_free_support"/>
        <field name="code">model.cron_action_contract_state()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
