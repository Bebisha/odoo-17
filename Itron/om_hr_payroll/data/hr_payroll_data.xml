            <field name="category_id" ref="om_hr_payroll.ALW"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.telephone_expense</field>
        </record>

        <record id="hr_rule_deduction" model="hr.salary.rule">
            <field name="name">Deduction</field>
            <field name="sequence" eval="10"/>
            <field name="code">DEDUCTION</field>
            <field name="category_id" ref="om_hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -inputs.DEDUCTION.amount if inputs.DEDUCTION and inputs.DEDUCTION.amount else 0

            </field>
        </record>

        <record id="hr_rule_unpaid" model="hr.salary.rule">
            <field name="name">Unpaid</field>
            <field name="sequence" eval="11"/>
            <field name="code">UNPAID</field>
             <field name="category_id" ref="om_hr_payroll.DED"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.UNPAID.amount > 0 if inputs.UNPAID else False</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -inputs.UNPAID.amount if inputs.UNPAID and inputs.UNPAID.amount else 0</field>
        </record>


