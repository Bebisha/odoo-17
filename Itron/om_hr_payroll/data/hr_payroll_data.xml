        <record id="hr_rule_hra" model="hr.salary.rule">
            <field name="name">House Rent Allowance</field>
            <field name="sequence" eval="3"/>
            <field name="code">HRA</field>
            <field name="category_id" ref="om_hr_payroll.ALW"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.hra</field>
            <field name="amount_percentage">30</field>
        </record>

        <record id="hr_rule_utility" model="hr.salary.rule">
            <field name="name">Utility Expenses Allowances</field>
            <field name="sequence" eval="5"/>
            <field name="code">Utility</field>
            <field name="category_id" ref="om_hr_payroll.ALW"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.utility_exp_allowance</field>
        </record>

        <record id="hr_rule_transport" model="hr.salary.rule">
            <field name="name">Transport Allowance</field>
            <field name="sequence" eval="7"/>
