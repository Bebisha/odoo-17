<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payslip_wps_wizard_form" model="ir.ui.view">
        <field name="name">hr.payslip.wps.wizard.form</field>
        <field name="model">hr.payslip.wps.wizard</field>
        <field name="arch" type="xml">
            <form string="WPS Report Wizard">
                <group>
                    <group>
                        <field name="company_id" options="{'no_create': True}" required="1"/>
                    </group>
                    <group>
                        <field name="month_selection"/>
                        <field name="year"/>
                    </group>

                </group>
                <footer>
                    <button name="generate_wps_report" type="object" string="Generate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_payslip_wps_wizard" model="ir.actions.act_window">
        <field name="name">Wps Report</field>
        <field name="res_model">hr.payslip.wps.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_hr_payroll_root" name="Payroll" sequence="10"/>

    <menuitem id="menu_hr_payslip_reports_wizard"
              name="Reports"
              parent="menu_hr_payroll_root"
              sequence="20"/>

    <menuitem id="menu_hr_payslip_wps"
              name="WPS"
              parent="menu_hr_payslip_reports_wizard"
              action="action_hr_payslip_wps_wizard"/>


</odoo>
