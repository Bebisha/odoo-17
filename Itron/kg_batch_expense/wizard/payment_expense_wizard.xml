<odoo>
    <record id="view_expense_payment_wizard_form" model="ir.ui.view">
        <field name="name">expense.payment.wizard.form</field>
        <field name="model">expense.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Expense Payment Wizard">
                <group>
                    <field name="payment_date"/>
                    <field name="expense_ids" widget="many2many_tags" invisible="1"/>
                </group>
                <footer>
                    <button name="action_paid" string="Mark as Paid" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>