<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_expense_form_inherited_id" model="ir.ui.view">
        <field name="name">expense.form.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='total_amount_currency']" position="before">
                <field name="parent_category_id" force_save="True"/>
            </xpath>
        </field>
    </record>


    <record id="view_hr_expense_sheet_form_inher" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.inh</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <button name="action_sheet_move_create" position="replace">
                <button name="action_paid" string="Paid" type="object"
                        invisible="state in ['post', 'done','cancel','draft','submit']"/>
            </button>
            <button name="action_register_payment" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <xpath expr="//field[@name='accounting_date']" position="after">
                <field name="paid_on"/>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']" position="after">
                <widget name="web_ribbon" title="Paid"
                        invisible="state != 'post'"/>
            </xpath>
        </field>
    </record>
</odoo>