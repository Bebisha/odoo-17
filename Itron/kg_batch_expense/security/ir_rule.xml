<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="rule_early_kg_batch_expense_employee_id" model="ir.rule">
        <field name="name">Batch Expense Access In user</field>
        <field name="model_id" ref="model_kg_batch_expense"/>
        <field name="domain_force">[('batch_line_ids.employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_early_kg_batch_expense_admin_id" model="ir.rule">
        <field name="name">Batch Expense Access In Admin</field>
        <field name="model_id" ref="model_kg_batch_expense"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>
