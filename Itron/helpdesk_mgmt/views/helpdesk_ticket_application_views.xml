<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_ticket_application_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.application.search</field>
        <field name="model">helpdesk.ticket.application</field>
        <field name="arch" type="xml">
            <search string="Helpdesk Application Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
            </search>
        </field>
    </record>

    <record id="view_helpdesk_application_form" model="ir.ui.view">
        <field name="name">view.helpdesk_application.form</field>
        <field name="model">helpdesk.ticket.application</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <header> </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                            <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="user_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="team_id" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_application_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_application.tree</field>
        <field name="model">helpdesk.ticket.application</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="user_ids" widget="many2many_tags" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="team_id"/>
            </tree>
        </field>
    </record>




</odoo>
