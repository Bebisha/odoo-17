<?xml version="1.0" ?>
<odoo>
    <record id="res_config_settings_view_form_ht_id" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.help.team</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Helpdesk Ticket" string="Helpdesk Ticket" name="app_settings_block">
                    <block title="Helpdesk Ticket">
                        <setting id="teams_id">
                            <field name="teams_id"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="kg_res_config_settings_view_helpdesk" model="ir.ui.view">
            <field name="name">res.config.settings.view.helpdesk.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block">
                        <h2>Helpdesk User Email</h2>
                        <div class="row mt16 o_settings_container" id="end_resource_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <group>
                                    <field name="helpdesk_user_ids"/>
                                </group>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
