<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="abnormal_flag_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Abnormal Flag</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">abnormal.flag</field>

    </record>
    <record id="abnormal_flag_tree" model="ir.ui.view">
        <field name="name">abnormal.flag.tree.views</field>
        <field name="model">abnormal.flag</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="abnormal_flag_form" model="ir.ui.view">
        <field name="name">abnormal.flag.form.views</field>
        <field name="model">abnormal.flag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="abnormal_flag_menu"
              action="abnormal_flag_action"
              name="Abnormal Flag"
              parent="kg_nabidh.obx_menu"/>

</odoo>
