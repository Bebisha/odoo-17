<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="unit_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Result Status Code</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">units.code</field>

    </record>
    <record id="units_tree" model="ir.ui.view">
        <field name="name">units.tree.views</field>
        <field name="model">units.code</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>
                <field name="unit"/>
                <field name="value"/>


            </tree>
        </field>
    </record>
    <record id="unit_form" model="ir.ui.view">
        <field name="name">units.code.form.views</field>
        <field name="model">units.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="unit"/>
                            <field name="value"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="units_menu"
              action="unit_action"
              name="Units"
              parent="kg_nabidh.obx_menu"/>

</odoo>