<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="route_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Route Form</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">route.form</field>

    </record>
    <record id="route_tree" model="ir.ui.view">
        <field name="name">route.tree.views</field>
        <field name="model">route.form</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="route_form" model="ir.ui.view">
        <field name="name">route.form.views</field>
        <field name="model">route.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="route_menu"
              action="route_action"
              name="Route"
              parent="kg_nabidh.rxr_menu"/>

</odoo>
