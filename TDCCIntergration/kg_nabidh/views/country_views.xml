<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="country_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Country</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">country.form</field>

    </record>
    <record id="country_tree" model="ir.ui.view">
        <field name="name">country.tree.views</field>
        <field name="model">country.form</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="country_form" model="ir.ui.view">
        <field name="name">country.form.views</field>
        <field name="model">country.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="country_menu"
              action="country_action"
              name="Country"
              parent="kg_nabidh.pid_menu"/>

</odoo>
