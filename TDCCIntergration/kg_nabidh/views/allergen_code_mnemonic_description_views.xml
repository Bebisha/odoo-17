<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="allergen_code_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Allergen code</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">allergen.code</field>

    </record>
    <record id="allergen_code_tree" model="ir.ui.view">
        <field name="name">allergen.code.tree.views</field>
        <field name="model">allergen.code</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="allergen_code_form" model="ir.ui.view">
        <field name="name">allergen.code.form.views</field>
        <field name="model">allergen.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="allergen_code_menu"
              action="allergen_code_action"
              name="Allergen Code"
              parent="kg_nabidh.al1_menu"/>

</odoo>
