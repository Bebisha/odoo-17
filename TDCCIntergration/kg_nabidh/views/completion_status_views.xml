<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="completion_status_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Completion Status</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">completion.status</field>

    </record>
    <record id="completion_status_tree" model="ir.ui.view">
        <field name="name">completion.status.tree.views</field>
        <field name="model">completion.status</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="completion_status_form" model="ir.ui.view">
        <field name="name">completion.status.form.views</field>
        <field name="model">completion.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="completion_status_menu"
              action="completion_status_action"
              name="Completion Status"
              parent="kg_nabidh.rxa_menu"/>

</odoo>
