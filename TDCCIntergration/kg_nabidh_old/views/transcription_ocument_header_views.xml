<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="transcription_document_header_form">
        <field name="name">transcription.document.header.form</field>
        <field name="model">transcription.document.header</field>
        <field name="arch" type="xml">
            <form string="Transcription Document Header">
                <sheet>
                    <group>
<!--                        <field name="documents_type" options="{'no_create': True}"/>-->
                        <field name="activity_date_time"/>
                        <field name="attachment" filename="unique_document_number" invisible="1"/>
                        <field name="unique_file_number"  readonly="1"/>
                        <field name="unique_document_number" invisible="1"/>
                        <field name="document_completion_status_id"/>
                        <field name="transcription_date_time"/>
                        <field name="document_availability_status_id"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>