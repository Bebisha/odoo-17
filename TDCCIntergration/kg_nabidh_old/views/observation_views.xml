<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="observation_form" model="ir.ui.view">
        <field name="name">observations.form.views</field>
        <field name="model">observations.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>

                            <field name="per_org_name" invisible="1"/>
                            <field name="value_type"/>
                            <field name="units"/>
                            <field name="abnormal_flag_id"/>
                            <field name="ObservationIdentifier_units_id" string="ObservationId"/>
                            <field name="set_id_obx" invisible="1"/>
                        </group>
                        <group>
                            <field name="observation_identifier"/>
                            <field name="observation_result_status"/>
                            <field name="observation_value" placeholder="66"/>
                            <field name="references_range" string="Normal Range" placeholder="13 - 16"/>
                            <field name="obs_atts" filename="pdf_filename" accept=".pdf" options="{'accepted_file_extensions': '.pdf'}"/>
                            <field name="pdf_filename" invisible="1"/>
                            <field name="observation_value_heart" placeholder=" 60%" string="Observation Value" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
