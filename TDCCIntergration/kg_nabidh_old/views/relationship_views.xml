<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="relationship_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Relationship</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">relationship.form</field>

    </record>
    <record id="relationship_tree" model="ir.ui.view">
        <field name="name">relationship.form.views</field>
        <field name="model">relationship.form</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="code"/>
                <field name="name"/>


            </tree>
        </field>
    </record>
    <record id="relationship_form" model="ir.ui.view">
        <field name="name">relationship.form.views</field>
        <field name="model">relationship.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="relationship_menu"
              action="relationship_action"
              name="Relationship"
              parent="kg_nabidh.pid_menu"/>
</odoo>
