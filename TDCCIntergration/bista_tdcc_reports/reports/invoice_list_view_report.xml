<odoo>
    <template id="invoice_list_view_header_footer">
        <div class="header">
            <t t-if="not doc or not 'company_id' in doc">
                <t t-set="company" t-value="res_company"/>
            </t>
            <div class="row mb8">
                <div class="col-6">
                    <img t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo" height="150"/>

                </div>

            </div>
        </div>

        <div class="article" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id"
             t-att-data-oe-lang="doc and doc.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
    </template>
    <template id="report_invoice_list_document">
        <t t-call="bista_tdcc_reports.invoice_list_view_header_footer">
            <div class="page">
                <style>tr,td{ font-size:14px; } }</style>
                <table class="table table-borderless" style="margin-top:30px;">
                    <thead>
                        <tr>
                            <th style="text-align:left;">Customer</th>
                            <th style="text-align:left;">Invoice Date</th>
                            <th style="text-align:left;">Number</th>
                            <th style="text-align:left;">SalesPerson</th>
                            <th style="text-align:left;">Source Document</th>
                            <th style="text-align:left;" class="text-right">Tax Excluded</th>
                            <th style="text-align:left;" class="text-right">Tax</th>
                            <th style="text-align:left;" class="text-right">Total</th>
                            <th style="text-align:left;" class="text-right">Amount Due</th>
                            <th style="text-align:left;">Status</th>
                        </tr>
                    </thead>
                    <t t-set="amount_untaxed" t-value="sum(inv.amount_untaxed for inv in docs)"/>
                    <t t-set="amount_tax" t-value="sum(inv.amount_tax for inv in docs)"/>
                    <t t-set="amount_total" t-value="sum(inv.amount_total for inv in docs)"/>
                    <t t-set="residual" t-value="sum(inv.amount_residual for inv in docs)"/>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="docs" t-as="doc">
                            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
                            <td width="15%">
                                <t t-esc="doc.partner_id.name"/>
                            </td>
                            <td style="width:110px;">
                                <span t-field="doc.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </td>
                            <td>
                                <t t-esc="doc.name"/>
                            </td>
                            <td>
                                <t t-if="doc.user_id">
                                    <t t-esc="doc.user_id.name"/>
                                </t>
                            </td>
                            <td>
                                <t t-esc="doc.invoice_origin"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="doc.amount_untaxed"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="doc.amount_tax"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="doc.amount_total"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="doc.amount_residual"/>
                            </td>
                            <td>
                                <t t-esc="doc.state"/>
                            </td>
                        </tr>
                        <tr style="border-top:1px solid black;">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <b>
                                    <span t-esc="amount_untaxed"/>
                                </b>
                            </td>
                            <td class="text-right">
                                <b>
                                    <span t-esc="amount_tax"/>
                                </b>
                            </td>
                            <td class="text-right">
                                <b>
                                    <span t-esc="amount_total"/>
                                </b>
                            </td>
                            <td class="text-right">
                                <b>
                                    <span t-esc="amount_residual"/>
                                </b>
                            </td>
                            <td/>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <!--  Main Transfer Form Template  -->
    <template id="report_invoice_list">
        <t t-call="web.html_container">
            <!--             <t t-foreach="docs" t-as="doc"> -->
            <t t-call="bista_tdcc_reports.report_invoice_list_document"/>
            <!--             </t> -->
        </t>
    </template>
</odoo>